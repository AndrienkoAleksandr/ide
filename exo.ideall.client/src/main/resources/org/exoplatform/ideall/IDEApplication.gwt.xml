<module>
	<!-- Inherit the core Web Toolkit stuff.                        -->
	<inherits name='com.google.gwt.user.User' />

	<!-- Inherit the default GWT style sheet.  You can change       -->
	<!-- the theme of your GWT application by uncommenting          -->
	<!-- any one of the following lines.                            -->
	<inherits name='com.google.gwt.user.theme.standard.Standard' />
	<inherits name="com.google.gwt.http.HTTP" />
	<inherits name='com.google.gwt.user.Debug' />
	<inherits name='com.google.gwt.xml.XML' />
	<inherits name="com.google.gwt.i18n.I18N" />
	
	<inherits name='com.google.gwt.user.RemoteService' />
	
	
	<!-- extend-property name="locale" values="ua" />
	<extend-property name="locale" values="ru" />
	<extend-property name="locale" values="en" /-->

	<inherits name='com.smartgwt.tools.SmartGwtTools'/>

	<!--  Inherit the SmartGWT Toolkit library configuration. -->
	<script src="applicationInitializer.js" />
	<inherits name="com.smartgwt.SmartGwt" />
	<!--
		<script src="init_smartgwt_for_gadget.js" />
		<inherits	name="com.smartgwt.SmartGwtNoScript"/>
	-->

	<!-- load GWT Commons Libraries -->
	<inherits name='org.exoplatform.gwtframework.commons.Commons' />
	<inherits name='org.exoplatform.gwtframework.editor.Editor' />
	<inherits name='org.exoplatform.gwtframework.ui.UI' />	
	<inherits name='org.exoplatform.gwtframework.ui.UITextEditor' />
	
	<inherits name='org.exoplatform.ideall.IDEallVirtualFileSystem'/>  
	<inherits name='org.exoplatform.ideall.IDEallGroovyModule'/>
	<inherits name='org.exoplatform.ideall.IDEallGadgetModule'/>
	
	<inherits name='org.exoplatform.ideall.client.framework.IDEallClientFramework'/>
	<inherits name='org.exoplatform.ideall.client.plugin.IDEallGadgetPlugin'/>
	<inherits name='org.exoplatform.ideall.client.plugin.IDEallGroovyPlugin'/>	

	<!-- Specify the app entry point class. -->
	<entry-point class='org.exoplatform.ideall.client.IDEApplication' />
	<source path="client" excludes="IDEGadget.java" />
	
	 <!-- Load CodeMirror editor files. -->
   <stylesheet src='codemirror/css/editor.css' />
   <script src="codemirror/js/codemirror.js" />

    <!-- Load FCKEditor files. -->
    <!--    <stylesheet src='fckeditor/content.css' /> -->
    <script src="fckeditor/ckeditor.js" />
    <script src="fckeditor/config.js" />
    
    <!-- Load tokens for auto-complete -->
    <script src="token/html_tokens.js" />
    <script src="token/javascript_tokens.js" />
	<script src="token/css_tokens.js" />
	<script src="token/html_tokens.js" />
	
	<!-- Specify the application specific style sheet. -->
	<stylesheet src='IDE.css' />
	
</module>
