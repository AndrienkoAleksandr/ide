<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1='urn:import:com.google.gwt.user.cellview.client'
	xmlns:svg='urn:import:org.vectomatic.dom.svg.ui' xmlns:s='urn:import:com.codenvy.ide.ui.switcher'>
	<ui:with field='locale'
		type='com.codenvy.ide.factory.client.FactoryLocalizationConstant' />
	<ui:with field='resources'
		type='com.codenvy.ide.factory.client.FactoryResources' />
	<ui:style>
		.button {
		float: left;
		margin-right: 3px;
		height: 24px;
		}

		.space {
		margin-top: 10px;
		}

		.leftspace {
		margin-left: 20px;
		}

		.labelspace {
		margin-bottom: 5px;
		}

		.padding {
		padding:
		20px 10px;
		}

		.tooltipSocial{
		margin-top: -60px;
		margin-left: 50px;
		}

		.toggleButton{
		height: 16px;
		float: left;
		margin-right: 3px;
		}
	</ui:style>
	<g:HTMLPanel width="100%" height="100%">
		<g:VerticalPanel addStyleNames="{resources.factoryCSS.factoryPanel}">
			<g:Label text="{locale.nonEncodedUrlTitle}" addStyleNames="{resources.factoryCSS.titleLabel}" />
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}">
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:Hyperlink ui:field="nonencodedUrl" styleName="{resources.factoryCSS.link}" />
				</g:cell>
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<svg:SVGImage ui:field="nonEncodedUrlCopy" resource="{resources.copyButton}" />
				</g:cell>
			</g:HorizontalPanel>
			<g:FlowPanel ui:field="socialNonEncoded"
				addStyleNames="{resources.factoryCSS.social} {style.tooltipSocial}">
				<svg:SVGImage ui:field="facebookNonEncoded" resource="{resources.facebook}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="googlePlusNonEncoded" resource="{resources.googlePlus}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="twitterNonEncoded" resource="{resources.twitter}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="emailNonEncoded" resource="{resources.email}" />
			</g:FlowPanel>
			<g:FlowPanel width="100%" height="26px" addStyleNames="{style.space}">
				<g:Button ui:field="nonEncodedHtmlButton" text="{locale.htmlButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:Button ui:field="nonEncodedGitHubButton" text="{locale.githubButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:Button ui:field="nonEncodediFrameButton" text="{locale.iframeButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:ToggleButton ui:field="nonEncodedSocialButton"
					text="{locale.socialButton}" addStyleNames="{style.toggleButton}">
				</g:ToggleButton>
			</g:FlowPanel>
			<g:cell horizontalAlignment="ALIGN_CENTER">
				<g:Button ui:field="generateEncodedUrlButton" text="{locale.generateEncodedUrlButton}"
					addStyleNames="{resources.factoryCSS.generateButton} {style.space}"></g:Button>
			</g:cell>
			<g:Label text="{locale.encodedUrlTitle}"
				addStyleNames="{resources.factoryCSS.titleLabel} {style.space}"
				ui:field="encodedLabel" />
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}"
				ui:field="encodedPanel">
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:Hyperlink ui:field="encodedUrl" styleName="{resources.factoryCSS.link}" />
				</g:cell>
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<svg:SVGImage ui:field="encodedUrlCopy" resource="{resources.copyButton}" />
				</g:cell>
			</g:HorizontalPanel>
			<g:FlowPanel ui:field="socialEncoded"
				addStyleNames="{resources.factoryCSS.social} {style.tooltipSocial}">
				<svg:SVGImage ui:field="facebookEncoded" resource="{resources.facebook}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="googlePlusEncoded" resource="{resources.googlePlus}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="twitterEncoded" resource="{resources.twitter}" />
				<g:FlowPanel styleName="{resources.factoryCSS.socialDelimeter}" />
				<svg:SVGImage ui:field="emailEncoded" resource="{resources.email}" />
			</g:FlowPanel>
			<g:FlowPanel width="100%" height="26px" addStyleNames="{style.space}"
				ui:field="encodedButtons">
				<g:Button ui:field="encodedHtmlButton" text="{locale.htmlButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:Button ui:field="encodedGitHubButton" text="{locale.githubButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:Button ui:field="encodediFrameButton" text="{locale.iframeButton}"
					addStyleNames="{style.button}"></g:Button>
				<g:ToggleButton ui:field="encodedSocialButton" text="{locale.socialButton}"
					addStyleNames="{style.toggleButton}">
				</g:ToggleButton>
			</g:FlowPanel>
		</g:VerticalPanel>
		<g:VerticalPanel addStyleNames="{style.padding}"
			width="100%">
			<g:Label text="{locale.configureTitle}"
				addStyleNames="{resources.factoryCSS.titleLabel} {style.space}" />
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}">
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="{locale.openFileLabel}" addStyleNames="{resources.factoryCSS.label}" />
				</g:cell>
				<g:SuggestBox ui:field="openFileField" width="180px"
					addStyleNames="{resources.factoryCSS.input}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:HTMLPanel styleName="{resources.factoryCSS.tooltip}">
						?
						<span style="margin-top: -18px;">
							<div></div>
							<ui:safehtml from="{locale.openFileHelp}" />
						</span>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:Label text="{locale.findAndReplaceLabel}"
				addStyleNames="{resources.factoryCSS.label} {style.space} {style.labelspace}" />
			<g:HorizontalPanel width="100%">
				<g:TextArea ui:field="findAndReplaceField" width="240px"
					height="50px" styleName="{resources.factoryCSS.input}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:HTMLPanel styleName="{resources.factoryCSS.tooltip}">
						?
						<span style="margin-top: -10px;">
							<div></div>
							<ui:safehtml from="{locale.findAndReplaceHelp}" />
						</span>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:Label text="{locale.descriptionLabel}"
				addStyleNames="{resources.factoryCSS.label} {style.space} {style.labelspace}" />
			<g:HorizontalPanel width="100%">
				<g:TextArea ui:field="descriptionField" width="240px"
					height="50px" styleName="{resources.factoryCSS.input}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:HTMLPanel styleName="{resources.factoryCSS.tooltip}">
						?
						<span style="margin-top: -18px;">
							<div></div>
							<ui:safehtml from="{locale.descriptionHelp}" />
						</span>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}">
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="{locale.authorLabel}" addStyleNames="{resources.factoryCSS.label}" />
				</g:cell>
				<g:TextBox ui:field="authorField" width="195px"
					addStyleNames="{resources.factoryCSS.input}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:HTMLPanel styleName="{resources.factoryCSS.tooltip}">
						?
						<span style="margin-top: -24px;">
							<div></div>
							<ui:safehtml from="{locale.authorHelp}" />
						</span>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}">
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:Label text="{locale.expirationDateLabel}" addStyleNames="{resources.factoryCSS.label}" />
				</g:cell>
				<g:TextBox ui:field="expirationDateField" width="155px"
					addStyleNames="{resources.factoryCSS.input}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<g:HTMLPanel styleName="{resources.factoryCSS.tooltip}">
						?
						<span style="margin-top: -18px;">
							<div></div>
							<ui:safehtml from="{locale.expirationDateHelp}" />
						</span>
					</g:HTMLPanel>
				</g:cell>
			</g:HorizontalPanel>

			<g:Label text="{locale.styleLabel}"
				addStyleNames="{resources.factoryCSS.titleLabel} {style.space}" />
			<g:HorizontalPanel width="100%"
				addStyleNames="{style.space} {style.leftspace}">
				<g:cell width="50%">
					<g:RadioButton ui:field="verticalAlignField" name="align"
						text="{locale.verticalAlignLabel}" addStyleNames="{resources.factoryCSS.radiobutton}" />
				</g:cell>
				<g:cell width="50%">
					<g:RadioButton ui:field="horizontalAlignField" name="align"
						text="{locale.horizontalAlignLabel}" addStyleNames="{resources.factoryCSS.radiobutton}" />
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" addStyleNames="{style.leftspace}">
				<g:cell width="50%">
					<g:RadioButton ui:field="darkThemeField" name="theme"
						text="{locale.darkStyleLabel}" addStyleNames="{resources.factoryCSS.radiobutton}" />
				</g:cell>
				<g:cell width="50%">
					<g:RadioButton ui:field="whiteThemeField" name="theme"
						text="{locale.whiteStyleLabel}" addStyleNames="{resources.factoryCSS.radiobutton}" />
				</g:cell>
			</g:HorizontalPanel>
			<g:HorizontalPanel width="100%" addStyleNames="{style.space}">
				<g:Label text="{locale.projectsNumberLabel}" addStyleNames="{resources.factoryCSS.label} {style.space}" />
				<g:cell verticalAlignment="ALIGN_MIDDLE">
					<s:Switcher ui:field="showNumberOfProjects"></s:Switcher>
				</g:cell>
			</g:HorizontalPanel>
			<g:Frame ui:field="previewFrame" addStyleNames="{resources.factoryCSS.previewFrame}"></g:Frame>
		</g:VerticalPanel>
		<iframe ui:field="createFactoryIFrame" name="createFactoryIFrame"
			style="display:none;"></iframe>
		<form ui:field="createFactoryForm">
			<input type="hidden" name="factoryUrl" ui:field="factoryUrlContent"></input>
		</form>
	</g:HTMLPanel>
</ui:UiBinder>
