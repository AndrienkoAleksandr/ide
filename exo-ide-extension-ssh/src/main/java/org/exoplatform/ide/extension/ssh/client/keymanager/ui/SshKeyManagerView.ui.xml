<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:ssh="urn:import:org.exoplatform.ide.extension.ssh.client.keymanager.ui">
   <ui:with type="org.exoplatform.ide.extension.ssh.client.SshLocalizationConstant" field="con"></ui:with>
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
   </ui:style>
   <g:LayoutPanel>
      <g:layer top="0" bottom="40px">
         <c:Border margin="5">
            <c:layer>
               <ssh:SshKeysGrid ID="ideSshKeysGrid" ui:field="keysGrid" width="100%"></ssh:SshKeysGrid>
            </c:layer>
         </c:Border>
      </g:layer>
      <g:layer height="40px" bottom="0">
         <g:FlowPanel width="273px" styleName="{style.center}">

            <c:ImageButton text='{con.managerUploadButton}' styleName="{style.left-float}" ui:field="uploadButton"
               buttonId="ideSshKeyManagerUploadButton"></c:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <c:ImageButton text='{con.managerGenerateButton}' ui:field="generateButton" styleName="{style.left-float}"
               buttonId="ideSshKeyManagerCloseButton"></c:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <c:ImageButton text='{con.closeButton}' ui:field="closeButton" buttonId="ideSshKeyManagerCloseButton"></c:ImageButton>

         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>

</ui:UiBinder> 