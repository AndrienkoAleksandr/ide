<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:x="urn:import:org.exoplatform.ide.client.framework.ui.upload">
    <ui:with field='res' type='org.exoplatform.gwtframework.ui.client.GwtResources'/>
    <ui:with type="org.exoplatform.ide.extension.ssh.client.SshLocalizationConstant" field="con"></ui:with>
    <ui:style>
        .pad {
            padding: 5px;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .left-float {
            float: left;
        }
    </ui:style>
    <c:Border margin="5" borderColor="transparent">
        <c:layer top="0" bottom="30px">
            <g:FlowPanel width="100%" height="100%">
                <g:FlowPanel>
                    <g:Label text='{con.hostFieldTitle}'></g:Label>
                    <c:TextInput ui:field="hostField" name="ideUploadSshKeyHostField" height="22px" width="100%"></c:TextInput>
                </g:FlowPanel>

                <g:DockLayoutPanel width="320px" height="65px" unit="PX">
                    <g:west size="235">
                        <g:FlowPanel>
                            <g:Label text="{con.fileNameFieldTitle}"></g:Label>
                            <c:TextInput ui:field="fileNameField" name="ideUploadSshKeyFileNameField" width="235px" height="22px"
                                         readOnly="true">
                            </c:TextInput>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:AbsolutePanel width="90px" height="42px">
                            <g:at top="13" left="3">
                                <c:ImageButton text='{con.browseButton}' width="80px" height="22px"></c:ImageButton>
                            </g:at>
                            <g:at top="13" left="3">
                                <g:FormPanel ui:field="formPanel" method="POST">
                                    <x:FileUploadInput ui:field="fileField" styleName='{res.css.transparent}' width="80px"
                                                       height="20px"></x:FileUploadInput>
                                </g:FormPanel>
                            </g:at>
                        </g:AbsolutePanel>
                    </g:center>
                </g:DockLayoutPanel>
                <g:Label ui:field="messageLabel"></g:Label>
            </g:FlowPanel>
        </c:layer>
        <c:layer height="30px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <c:ImageButton text='{con.uploadButton}' styleName="{style.left-float}" ui:field="uploadButton" enabled="false"
                               buttonId="ideUploadSshKeyUploadButton" width="90px"></c:ImageButton>
                <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
                <c:ImageButton text='{con.cancelButton}' styleName="{style.left-float}" ui:field="cancelButton"
                               buttonId="ideUploadSshKeyCloseButton" width="90px"></c:ImageButton>
            </g:FlowPanel>
        </c:layer>
    </c:Border>

</ui:UiBinder> 