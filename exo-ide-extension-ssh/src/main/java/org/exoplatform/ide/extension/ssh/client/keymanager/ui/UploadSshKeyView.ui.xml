<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:x="urn:import:org.exoplatform.ide.client.framework.ui.upload">
	<ui:with field='res'
		type='org.exoplatform.gwtframework.ui.client.GwtResources' />
	<ui:with
		type="org.exoplatform.ide.extension.ssh.client.SshLocalizationConstant"
		field="con"></ui:with>
	<ui:style>
		.pad {
			padding: 5px;
		}
	</ui:style>
	<c:VPanel styleName="{style.pad}">

		<c:HPanel>
			<g:Label text='{con.hostFieldTitle}'></g:Label>
			<c:TextField ui:field="hostField" name="ideUploadSshKeyHostField"
				showDisabled="true" visible="true" height="22px" width="100%"></c:TextField>
		</c:HPanel>
		<g:HorizontalPanel width="330px" height="65px">
			<c:TextField ui:field="fileNameField" name="ideUploadSshKeyFileNameField"
				width="245px" height="22px" title='{con.fileNameFieldTitle}' showDisabled="true"
				visible="true" titleOrientation="top" readOnly="true">
			</c:TextField>
			<g:AbsolutePanel width="80px" height="42px">
				<g:at top="17" left="0">
					<c:ImageButton text='{con.browseButton}' width="80px" height="22px"></c:ImageButton>
				</g:at>
				<g:at top="17" left="0">
					<g:FormPanel ui:field="formPanel" method="POST">
						<x:FileUploadInput ui:field="fileField"
							styleName='{res.css.transparent}' width="80px" height="20px"></x:FileUploadInput>
					</g:FormPanel>
				</g:at>
			</g:AbsolutePanel>
		</g:HorizontalPanel>
		<g:Label ui:field="messageLabel"></g:Label>

		<c:Panel height="40px">
			<g:HorizontalPanel spacing="5" width="100%" height="100%">
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text='{con.uploadButton}' ui:field="uploadButton"
						enabled="false" buttonId="ideUploadSshKeyUploadButton"></c:ImageButton>
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text='{con.cancelButton}' ui:field="cancelButton"
						buttonId="ideUploadSshKeyCloseButton"></c:ImageButton>
				</g:cell>
			</g:HorizontalPanel>
		</c:Panel>
	</c:VPanel>

</ui:UiBinder> 