<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='res' type='com.codenvy.ide.Resources'/>
    <ui:style>
        .alignBtn {
            float: right;
            margin-left: 5px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .spacing {
            margin-top: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="320px" height="320px" addStyleNames="{style.emptyBorder}">
        <g:south size="36">
            <g:FlowPanel addStyleNames="{style.spacing}">
                <c:Button addStyleNames="{style.alignBtn}" width="50px" size="SMALL" type="DANGER" text="Cancel" ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" size="SMALL" type="SUCCESS" text="Open"
                          ui:field="btnOpen"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:ScrollPanel ui:field="listPanel" addStyleNames="{res.coreCss.simpleListContainer}"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 