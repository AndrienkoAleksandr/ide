<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='com.codenvy.ide.wizard.WizardResource'/>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style>
        .alignLeft {
            float: left;
        }

        .spaceRight {
            margin-right: 8px;
        }

        .title {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .questionImage {
            position: relative;
            float: left;
            margin-left: 10px;
            margin-top: 7px;
            top: 3px;
        }

        .projectNamePosition {
            position: relative;
            top: 4px;
        }

        .clearLeft {
            clear: left;
        }

        .emptyBorder {
            border: 0px;
        }

        .emptyBackground {
            background: #ffffff;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="50">
            <g:FlowPanel addStyleNames="{res.wizardCSS.line}">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:west size="100">
                        <g:FlowPanel>
                            <g:Label text="{locale.createProjectFromTemplateName}"
                                     addStyleNames="{res.wizardCSS.mainBoldFont} {res.wizardCSS.greyFontColor} {style.projectNamePosition}"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:SimplePanel addStyleNames="{style.spaceRight}">
                            <g:SimplePanel>
                                <g:TextBox width="100%" height="16px" ui:field="projectName"/>
                            </g:SimplePanel>
                        </g:SimplePanel>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:north>
        <g:north size="140">
            <g:FlowPanel addStyleNames="{res.wizardCSS.line}">
                <g:Label text="{locale.chooseTechnology}"
                         addStyleNames="{style.title} {res.wizardCSS.mainBoldFont} {res.wizardCSS.greyFontColor} {style.alignLeft}"/>
                <g:Image ui:field="chooseTechnologyTooltip" resource="{res.question}"
                         addStyleNames="{style.questionImage} {res.wizardCSS.cursorPointer} {style.alignLeft}"/>
                <g:Grid ui:field="technologies"
                        addStyleNames="{res.wizardCSS.mainFont} {style.clearLeft} {style.emptyBorder} {style.emptyBackground}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="140">
            <g:FlowPanel addStyleNames="{res.wizardCSS.line}">
                <g:Label text="{locale.chooseTechnology}"
                         addStyleNames="{style.title} {res.wizardCSS.mainBoldFont} {res.wizardCSS.greyFontColor} {style.alignLeft}"/>
                <g:Image ui:field="choosePaaSTooltip" resource="{res.question}"
                         addStyleNames="{style.questionImage} {res.wizardCSS.cursorPointer} {style.alignLeft}"/>
                <g:Grid ui:field="paases"
                        addStyleNames="{res.wizardCSS.mainFont} {style.clearLeft} {style.emptyBorder} {style.emptyBackground}"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder> 