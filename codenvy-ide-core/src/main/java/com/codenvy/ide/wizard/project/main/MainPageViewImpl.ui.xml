<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .mainPanel{
            margin: 14px;
            border: none !important;
            height: 412px;
        }
        @eval bgColor com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();
        .categories{
            border: 1px solid bgColor;
            margin-right: 25px;
            background-color: #313131;
        }
        .description{
            font-size: 12px;
        }
        .label{
            font-weight: bold;
            font-size: 12px;
        }
    </ui:style>
<g:DockLayoutPanel unit="PX" addStyleNames="{style.mainPanel}">
     <g:center>
      <g:DockLayoutPanel unit="PCT">
          <g:east size="50">
              <g:DockLayoutPanel unit="PX">
                  <g:north size="20">
                      <g:Label text="Description:" addStyleNames="{style.label}"/>
                  </g:north>
                  <g:north size="70">
                      <g:HTMLPanel debugId="newProject-descriptionArea" ui:field="descriptionArea" addStyleNames="{style.description}"/>
                  </g:north>
              </g:DockLayoutPanel>
          </g:east>
          <g:west size="50">
              <g:DockLayoutPanel unit="PX" >
                  <g:north size="20">
                      <g:Label text="Categories" height="20px" addStyleNames="{style.label}"/>
                  </g:north>
                  <g:center>
                      <g:SimplePanel ui:field="categoriesPanel" addStyleNames="{style.categories}" debugId="newProject-categoriesPanel"/>
                  </g:center>
              </g:DockLayoutPanel>
          </g:west>
      </g:DockLayoutPanel>
  </g:center>
</g:DockLayoutPanel>
</ui:UiBinder>