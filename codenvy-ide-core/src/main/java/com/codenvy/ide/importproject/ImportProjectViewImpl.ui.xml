<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='locale' type='com.codenvy.ide.CoreLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
        .alignLeft {
            float: left;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="320px" height="90px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <g:Button addStyleNames="{style.alignBtn}" text="{locale.cancelButton}" width="60px" ui:field="btnCancel"
                          debugId="file-importProject-cancel"/>
                <g:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.importProjectButton}" width="60px" ui:field="btnImport"
                          debugId="file-importProject-import"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label width="220px" height="22px" text="{locale.importProjectImporterFieldTitle}" addStyleNames="{style.alignLeft}"/>
                <g:ListBox width="100px" ui:field="importersList" addStyleNames="{style.alignLeft}" debugId="file-importProject-importer"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label width="50px" height="22px" text="{locale.importProjectUriFieldTitle}" addStyleNames="{style.alignLeft}"/>
                <g:TextBox width="270px" ui:field="uri" debugId="file-importProject-uri"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>