<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:ds="urn:import:org.exoplatform.ide.extension.java.client.datasource"
	>
	
	<ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
            text-align: center;
        }

        .butLeft {
			margin-right: 5px;
        }
		
        .butRight {
			margin-left: 5px;
        }        
	</ui:style>
	
    <c:Border margin="5" borderColor="transparent">
    	<c:layer top="0" bottom="45">
			<g:SplitLayoutPanel>
                
                <g:west size="200">
                    <c:Border margin="5">

						<c:layer height="30px">
		        			<c:Toolbar width="100%" height="30px">
		        				<c:IconButton imageName="add" ui:field="addButton"></c:IconButton>
		        				<c:IconButton imageName="remove" ui:field="removeButton"></c:IconButton>
		        			</c:Toolbar>
		        		</c:layer>
		        		
		        		<c:layer left="0px" right="0px" bottom="0px" top="30px">
		        			<g:ScrollPanel width="100%" height="100%">
		        				<ds:DatasourceListGrid width="100%" ui:field="datasourceListGrid"></ds:DatasourceListGrid>
		        			</g:ScrollPanel>
		        		</c:layer>
        		                     
                    </c:Border>
                </g:west>
                
                <g:center>
                    <c:Border borderSize="5" borderColor="transparent">
				        <c:layer>
				        	<g:ScrollPanel width="100%" height="100%">
				        		<ds:DatasourceOptionsEditor width="100%" ui:field="datasourceOptionsEditor"></ds:DatasourceOptionsEditor>
				        	</g:ScrollPanel>
				        </c:layer>
                    </c:Border>
                </g:center>
                
            </g:SplitLayoutPanel>
		</c:layer>
    
        <c:layer height="22px" bottom="10px">
        	<g:HorizontalPanel width="192px" addStyleNames="{style.center}">
            	<c:ImageButton text="Ok" imageName="ok" ui:field="okButton" buttonId="ide.configure_datasource.button.ok" addStyleNames="{style.butLeft}"></c:ImageButton>
            	<c:ImageButton text="Cancel" imageName="cancel" ui:field="cancelButton" buttonId="ide.configure_datasource.button.cancel" addStyleNames="{style.butRight}"></c:ImageButton>
        	</g:HorizontalPanel>
        </c:layer>
    </c:Border>
	
</ui:UiBinder>
