<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <parent>
      <groupId>org.exoplatform.ide</groupId>
      <artifactId>exo-ide-parent</artifactId>
      <version>1.2.0-M10-SNAPSHOT</version>
   </parent>

   <modelVersion>4.0.0</modelVersion>
   <groupId>org.exoplatform.ide</groupId>
   <artifactId>exo-ide-editor-codemirror2</artifactId>
   <packaging>jar</packaging>
   <name>eXo IDE :: Editor :: Codemirror 2</name>

   <dependencies>
      <dependency>
         <groupId>org.exoplatform.gwt</groupId>
         <artifactId>exo-gwtframework-commons</artifactId>
      </dependency>
      
      <dependency>
         <groupId>org.exoplatform.gwt</groupId>
         <artifactId>exo-gwtframework-ui</artifactId>
      </dependency>
      
      <dependency>
         <groupId>org.exoplatform.ide</groupId>
         <artifactId>exo-ide-editor-api</artifactId>
      </dependency>      
      
      <dependency>
         <groupId>org.exoplatform.ide</groupId>
         <artifactId>exo-ide-framework-client</artifactId>
      </dependency>      

      <dependency>
         <groupId>com.google.gwt</groupId>
         <artifactId>gwt-user</artifactId>
      </dependency>
      
      <dependency>
         <groupId>com.google.gwt</groupId>
         <artifactId>gwt-servlet</artifactId>
      </dependency>

      <dependency>
         <groupId>junit</groupId>
         <artifactId>junit</artifactId>
         <scope>test</scope>
      </dependency>

   </dependencies>
   <build>
      <resources>
         <resource>
            <directory>src/main/java</directory>
         </resource>
         <resource>
            <directory>src/main/resources</directory>
         </resource>
      </resources>
      <testResources>
         <testResource>
            <directory>src/test/java</directory>
         </testResource>
         <testResource>
            <directory>src/test/resources</directory>
         </testResource>
      </testResources>
      <plugins>
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
            <version>2.3.1</version>
            <configuration>
               <excludes>
                  <exclude>**/example*</exclude>
                  <exclude>**/Editor.html</exclude>
                  <exclude>**/EditorTest.gwt.xml</exclude>
                  <exclude>**/EditorTest*</exclude>
                  <exclude>**/ExamplesBuandle*</exclude>
               </excludes>
            </configuration>
         </plugin>
      </plugins>
   </build>

	<profiles>
	
      <profile>
         <id>test</id>
         <activation>
            <activeByDefault>false</activeByDefault>
         </activation>
         
         <dependencies>
         </dependencies>
         
         <build>
            <resources>
               <resource>
                  <directory>src/main/java</directory>
               </resource>
               <resource>
                  <directory>src/main/resources</directory>
               </resource>
            </resources>
            
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-resources-plugin</artifactId>
                  <version>2.3</version>
                  <executions>
                     <execution>
                        <id>copy-prod-resources</id>
                        <phase>process-resources</phase>
                        <goals>
                           <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                           <outputDirectory>target/war/WEB-INF/</outputDirectory>
                           <resources>
                              <resource>
                                 <directory>src/main/webapp</directory>
                                 <filtering>true</filtering>
                              </resource>
                           </resources>
                        </configuration>
                     </execution>
                  </executions>
               </plugin>

               <plugin>
                  <groupId>org.codehaus.mojo</groupId>
                  <artifactId>gwt-maven-plugin</artifactId>
                  <version>${gwt.maven.plugin.version}</version>
                  <configuration>
                     <runTarget>org.exoplatform.ide.editor.CodeMirror2/CodeMirror2.html</runTarget>
                     <logLevel>INFO</logLevel>
                     <hostedWebapp>${basedir}/target/war</hostedWebapp>
                     <skipTests>${gwt.test.skip}</skipTests>
                     <!-- <port>${gwt.port}</port> -->
                     <extraJvmArgs>-Xmx2048m -XX:MaxPermSize=256m -Dorg.exoplatform.ide.server.fs-root-path=target/git -Dorg.exoplatform.ide.git.server=git -Dorg.exoplatform.mimetypes=conf/mimetypes.properties</extraJvmArgs>
                  </configuration>
               </plugin>

            </plugins>
         </build>
      </profile>	
	
	
	</profiles>

</project>
