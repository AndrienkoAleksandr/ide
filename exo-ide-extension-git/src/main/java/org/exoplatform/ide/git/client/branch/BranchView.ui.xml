<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.git.client.branch">
   <ui:with field='resource' type='org.exoplatform.ide.git.client.GitClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.git.client.GitLocalizationConstant"></ui:with>
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .floatLeft {
      	float: left;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer>
         <f:Border height="80%">
            <f:layer>
               <g:ScrollPanel>
                  <e:BranchGrid ui:field="branchGrid" width="100%" height="100%"></e:BranchGrid>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:DockLayoutPanel unit="PX">
            <g:center>
               <g:FlowPanel>
                  <f:ImageButton ui:field="checkoutButton" width="90" height="22" text="{locale.buttonCheckout}" imageResource="{resource.ok}"
                     disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
                  <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                  <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.buttonCreate}" imageResource="{resource.add}"
                     disabledImageResource="{resource.addDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
                  <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                  <f:ImageButton ui:field="deleteButton" width="90" height="22" text="{locale.buttonDelete}" imageResource="{resource.remove}"
                     disabledImageResource="{resource.removeDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
               </g:FlowPanel>
            </g:center>
            <g:east size="90">
               <f:ImageButton ui:field="closeButton" width="90" height="22" text="{locale.buttonClose}" imageResource="{resource.cancel}"
                  disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:east>
         </g:DockLayoutPanel>
      </f:layer>

   </f:Border>
</ui:UiBinder>
