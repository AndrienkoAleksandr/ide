<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.git.client.GitClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.git.client.GitLocalizationConstant"></ui:with>
    <ui:style>
        .spacingTop {
            margin-top: 20px;
        }

        .spacingBottom {
            margin-bottom: 10px;
        }

        .label {
            margin-bottom: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }
    </ui:style>

    <f:Border margin="20" borderColor="transparent">
        <f:layer>
            <g:FlowPanel>
                <g:Label styleName="{style.label}" text="{locale.projectReadOnlyGitUrlTitle}"></g:Label>
                <f:TextInput ui:field="gitUrl" addStyleNames="{style.spacingBottom}" width="100%" height="20px"></f:TextInput>
            </g:FlowPanel>
        </f:layer>

        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="90px" styleName="{style.center}">
                <f:ImageButton ui:field="closeButton" width="90" height="22" text="{locale.buttonClose}"
                               imageResource="{resource.ok}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
