<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:c="urn:import:org.exoplatform.ide.git.client.commit"
   xmlns:e="urn:import:org.exoplatform.ide.editor.api">
   <ui:with field='resource' type='org.exoplatform.ide.git.client.GitClientBundle' />

   <ui:style>
      .title {
      	width: 30px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      }
      
      .diffTextField {
      	background-color: #FFFFFF;
      	color: #000000;
      }
   </ui:style>


   <g:LayoutPanel>
      <g:layer top="0" height="28px">
         <f:Toolbar height="28px" ui:field="toolbar">
         </f:Toolbar>
      </g:layer>
      <g:layer top="28px" bottom="0px">
         <g:SplitLayoutPanel>
            <g:north size="150">
               <f:Border margin="5">
                  <f:layer>
                     <c:RevisionGrid ui:field="revisionGrid" width="100%"></c:RevisionGrid>
                  </f:layer>
               </f:Border>
            </g:north>
            <g:center>
               <g:FlowPanel>
                  <f:Border margin="5" borderColor="transparent" height="120px" width="100%">
                     <f:layer>
                        <g:ScrollPanel width="100%" height="100%">
	                        <g:HTMLPanel>
	                           <table width="100%">
	                              <tr>
                                    <td class="{style.title}" ui:field="revisionATitle"></td>
                                    <td>
                                       <f:TextInput ui:field="comitARevision" width="100%"></f:TextInput>
                                    </td>
                                 </tr>
	                              <tr>
	                                 <td class="{style.title}" ui:field="revisionADate"></td>
	                                 <td>
	                                    <f:TextInput ui:field="comitADate" width="100%"></f:TextInput>
	                                 </td>
                                 </tr>
	                              <tr>
	                                 <td class="{style.title}" ui:field="revisionBTitle"></td>
	                                 <td>
	                                    <f:TextInput ui:field="comitBRevision" width="100%"></f:TextInput>
	                                 </td>
	                              </tr>
	                              <tr>
                                    <td class="{style.title}" ui:field="revisionBDate"></td>
                                    <td>
                                       <f:TextInput ui:field="comitBDate" width="100%"></f:TextInput>
                                    </td>
                                 </tr>
	                           </table>
	                        </g:HTMLPanel>
	                     </g:ScrollPanel>
                     </f:layer>
                  </f:Border>
                  <f:Border margin="5" height="50%">
                     <f:layer>
                        <g:SimplePanel ui:field="editorPanel" width="100%"></g:SimplePanel>
                     </f:layer>
                  </f:Border>
               </g:FlowPanel>
            </g:center>
         </g:SplitLayoutPanel>
      </g:layer>
   </g:LayoutPanel>

</ui:UiBinder>
