<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:m="urn:import:org.exoplatform.ide.git.client.merge">
   <ui:with field='resource' type='org.exoplatform.ide.git.client.GitClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.git.client.GitLocalizationConstant"></ui:with>

   <ui:style>
      .tree {
      	z-index: 0;
      }
   </ui:style>

   <c:VPanel>
      <c:Border margin="10">
         <g:ScrollPanel>
            <m:RefTree styleName="{style.tree}" ui:field="refTree"></m:RefTree>
         </g:ScrollPanel>
      </c:Border>
      <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="middle">
         <g:cell horizontalAlignment="right">
            <c:ImageButton ui:field="mergeButton" width="90" height="22" text="{locale.buttonMerge}" imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}"></c:ImageButton>
         </g:cell>
         <g:cell horizontalAlignment="left">
            <c:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.buttonCancel}" imageResource="{resource.cancel}" disabledImageResource="{resource.cancelDisabled}"></c:ImageButton>
         </g:cell>
      </g:HorizontalPanel>
   </c:VPanel>
</ui:UiBinder>
