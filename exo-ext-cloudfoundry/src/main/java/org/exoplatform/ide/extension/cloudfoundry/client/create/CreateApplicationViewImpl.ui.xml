<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="locale"
		type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>
	<ui:style>
		.alignBtn {
			float: right;
		}
		
		.spacing {
			margin-bottom: 10px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="480px" height="300px">
		<g:south size="26.0">
			<g:FlowPanel width="100%">
				<g:Button styleName="{style.alignBtn}" text="{locale.createButton}"
					ui:field="btnCreate" />
				<g:Button styleName="{style.alignBtn}" text="{locale.cancelButton}"
					ui:field="btnCancel" />
			</g:FlowPanel>
		</g:south>
		<g:center>
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppServerField}" />
						</g:west>
						<g:center>
							<g:ListBox width="227px" ui:field="server" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppNameField}" />
						</g:west>
						<g:center>
							<g:TextBox width="220px" visibleLength="50" ui:field="name" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppTypeField}" />
						</g:west>
						<g:east size="110.0">
							<g:CheckBox text="{locale.createAppAutodetectTypeLabel}"
								ui:field="autodetectType" />
						</g:east>
						<g:center>
							<g:ListBox width="227px" ui:field="type" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppUrlField}" />
						</g:west>
						<g:east size="110.0">
							<g:CheckBox text="{locale.createAppUseDefaultUrlLabel}"
								ui:field="customUrl" />
						</g:east>
						<g:center>
							<g:TextBox width="220px" ui:field="url" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppInstancesField}" />
						</g:west>
						<g:center>
							<g:TextBox width="220px" ui:field="instances" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppMemoryField}" />
						</g:west>
						<g:center>
							<g:TextBox width="220px" ui:field="memory" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
				<g:north size="36.0">
					<g:DockLayoutPanel unit="PX" width="100%" styleName="{style.spacing}">
						<g:west size="140.0">
							<g:Label text="{locale.createAppStartAfterCreationField}" />
						</g:west>
						<g:center>
							<g:SimpleCheckBox ui:field="startAfterCreation" />
						</g:center>
					</g:DockLayoutPanel>
				</g:north>
			</g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 