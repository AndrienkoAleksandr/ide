<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">

	<ui:with field="locale"
		type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

	<ui:style>
		.floatLeft {
			float: left;
			margin-left: 10px;
		}
		
		.floatRight {
			float: right;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="830px" height="260px">
		<g:south size="30.0">
			<g:FlowPanel>
				<g:Label text="{locale.appsServerLabel}" width="63px"
					styleName="{style.floatLeft}" />
				<g:ListBox styleName="{style.floatLeft}" width="410px" ui:field="server" />
				<g:Button styleName="{style.floatLeft}" text="{locale.showButton}" ui:field="btnShow" />
				<g:Button styleName="{style.floatRight}" text="{locale.closeButton}" ui:field="btnClose"/>
			</g:FlowPanel>
		</g:south>
		<g:center>
			<g:SimplePanel>
				<p1:CellTable width="100%" height="100%" ui:field="appsTable" focus="false"/>
			</g:SimplePanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 