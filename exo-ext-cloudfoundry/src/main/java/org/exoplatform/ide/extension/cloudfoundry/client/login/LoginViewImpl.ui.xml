<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='locale'
		type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant' />

	<ui:style>
		.alignBtn {
			float: right;
		}
		
		.label {
			cursor: default;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-size: 11px;
			font-style: normal;
			font-weight: normal;
		}
		
		.errLabel {
			margin-bottom: 11px;
			cursor: default;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-size: 11px;
			font-style: normal;
			font-weight: normal;
			color: #d21a1a;
			text-align: center;
			height: 14px;
		}
		
		.spacing {
			margin-bottom: 10px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="380px" height="180px">
		<g:south size="26.0">
			<g:FlowPanel>
				<g:Button addStyleNames="{style.alignBtn}" text="Cancel"
					ui:field="btnCancel" />
				<g:Button addStyleNames="{style.alignBtn}" text="Log In"
					ui:field="btnLogIn" />
			</g:FlowPanel>
		</g:south>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewTargetField}" styleName="{style.label}" />
				</g:west>
				<g:center>
					<g:ListBox width="277px" ui:field="server" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewEmailField}" styleName="{style.label}" />
				</g:west>
				<g:center>
					<g:TextBox width="270px" ui:field="email" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewPasswordField}" styleName="{style.label}" />
				</g:west>
				<g:center>
					<g:PasswordTextBox ui:field="password" width="270px" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:center>
					<g:Label horizontalAlignment="ALIGN_CENTER" styleName="{style.errLabel}"
						ui:field="errorText" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder> 