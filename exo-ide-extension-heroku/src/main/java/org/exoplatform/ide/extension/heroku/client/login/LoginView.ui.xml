<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.heroku.client.HerokuClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.heroku.client.HerokuLocalizationConstant"></ui:with>

    <ui:style>
        .spacing {
            margin-top: 10px;
        }

        .label {
            margin-bottom: 5px;
            cursor: default;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-size: 11px;
            font-style: normal;
            font-weight: normal;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .left-float {
            float: left;
        }

        .login-label {
            margin-top: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            color: #D21A1A;
        }
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="40">
            <g:FlowPanel>
                <g:Label addStyleNames="{style.label}" text="{locale.loginViewEmailField}" height="22" width="100%"></g:Label>
                <f:TextInput ui:field="emailField" title="" height="22px" width="100%"></f:TextInput>
                <g:Label addStyleNames="{style.label} {style.spacing}" text="{locale.loginViewPasswordField}" height="22"
                         width="100%"></g:Label>
                <f:PasswordTextInput ui:field="passwordField" height="22px" width="100%"></f:PasswordTextInput>
                <f:Label ui:field="loginResult" styleName="{style.login-label}"></f:Label>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="30px" bottom="0">
            <g:FlowPanel width="310px" addStyleNames="{style.center}">
                <f:ImageButton ui:field="loginButton" width="90px" height="22" text="{locale.loginButton}"
                               imageResource="{resource.okButton}"
                               disabledImageResource="{resource.okButtonDisabled}" styleName="{style.left-float}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90px" height="22" text="{locale.cancelButton}"
                               imageResource="{resource.cancelButton}"
                               disabledImageResource="{resource.cancelButtonDisabled}" styleName="{style.left-float}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
                <f:ImageButton ui:field="loginDemoButton" width="110px" height="22" text="{locale.loginDemoButton}"
                               styleName="{style.left-float}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder> 