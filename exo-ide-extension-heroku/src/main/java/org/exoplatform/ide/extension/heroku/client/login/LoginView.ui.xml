<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.heroku.client.HerokuClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.heroku.client.HerokuLocalizationConstant"></ui:with>

   <ui:style>
      .spacing {
	      margin-top: 10px;
      }
         
      .label {
      	margin-bottom: 5px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
   </ui:style>

   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:Label addStyleNames="{style.label}" text="{locale.loginViewEmailField}" height="22" width="100%"></g:Label>
            <f:TextInput ui:field="emailField" title="" height="22" width="100%"></f:TextInput>
            <g:Label addStyleNames="{style.label} {style.spacing}" text="{locale.loginViewPasswordField}" height="22" width="100%"></g:Label>
            <f:PasswordTextInput ui:field="passwordField" height="22" width="100%"></f:PasswordTextInput>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="40px" bottom="0">
         <g:FlowPanel width="273px" addStyleNames="{style.center} {style.spacing}">
            <f:ImageButton ui:field="loginButton" width="90" height="22" text="{locale.loginButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
               disabledImageResource="{resource.cancelButtonDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
            <f:ImageButton ui:field="loginDemoButton" width="110" height="22" text="{locale.loginDemoButton}" styleName="{style.left-float}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 