<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.heroku.client.HerokuClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.heroku.client.HerokuLocalizationConstant"></ui:with>
   <ui:style>
      .spacing {
      	margin-top: 5px;
      	margin-bottom: 5px;
      }
      
      .example {
      	color: #777;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      }
      
      .align {
      	margin-left: auto;
      	padding-right: 5px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      }
      
      .top {
	      top: 15px;
	    }
	    
   </ui:style>

   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel styleName="{style.spacing}">
            <g:DockLayoutPanel unit="PX" width="100%" height="40px">
               <g:west right="5px" size="45">
                  <g:LayoutPanel width="45px" height="18px" styleName="{style.spacing}">
                     <g:layer>
                        <f:Label value="{locale.rakeViewCommandField}" height="18px" isHTML="true" width="35px" styleName="{style.align}"></f:Label>
                     </g:layer>
                  </g:LayoutPanel>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="commandField" width="100%" height="22px"></f:TextInput>
               </g:center>
               <g:south size="18">
                  <g:Label text="{locale.rakeViewCommandExample}" height="18px" styleName="{style.example}"></g:Label>
               </g:south>
               <g:east size="95">
                  <g:LayoutPanel width="95px">
                     <g:layer left="5px" width="90px">
                        <f:ImageButton ui:field="runButton" text="{locale.runButton}" width="90" height="22" imageResource="{resource.runButton}"
                           disabledImageResource="{resource.runButtonDisabled}"></f:ImageButton>
                     </g:layer>
                  </g:LayoutPanel>
               </g:east>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel unit="PCT" width="100%" height="60px" styleName="{style.top}">
               <g:west size="50">
                  <g:LayoutPanel width="100%" height="100%" styleName="{style.spacing}">
                     <g:layer left="5px" width="90px">
                        <f:ImageButton ui:field="helpButton" width="90" height="22" text="{locale.helpButton}" imageResource="{resource.helpButton}"
                           disabledImageResource="{resource.helpButtonDisabled}"></f:ImageButton>
                     </g:layer>
                  </g:LayoutPanel>
               </g:west>
               <g:east size="50">
                  <g:LayoutPanel width="100%" height="100%" styleName="{style.spacing}">
                     <g:layer right="5px" width="90px">
                        <f:ImageButton ui:field="closeButton" width="90" height="22" text="{locale.closeButton}" imageResource="{resource.cancelButton}"
                           disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
                     </g:layer>
                  </g:LayoutPanel>
               </g:east>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>

</ui:UiBinder> 