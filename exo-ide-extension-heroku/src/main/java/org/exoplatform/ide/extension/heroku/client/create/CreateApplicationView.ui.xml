<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.heroku.client.HerokuClientBundle' />
   <f:Border margin="7" borderColor="transparent">
      <g:VerticalPanel spacing="3" horizontalAlignment="center">
         <f:TextField ui:field="gitRepoField" title="Location of Git repository:" width="100%" height="22px" enabled="false"></f:TextField>
         <g:HorizontalPanel spacing="3" width="100%">
            <f:TextField ui:field="nameField" title="Enter application name:" width="100%" height="22px"></f:TextField>
            <f:TextField ui:field="remoteField" title="Enter remote repository name:" width="100%" height="22px"></f:TextField>
         </g:HorizontalPanel>
         <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
            <f:IButton ui:field="createButton" width="90" height="22" title="Create" icon="{resource.okButton.getURL}" disableIcon="{resource.okButtonDisabled.getURL}"></f:IButton>
            <f:IButton ui:field="cancelButton" width="90" height="22" title="Cancel" icon="{resource.cancelButton.getURL}" disableIcon="{resource.cancelButtonDisabled.getURL}"></f:IButton>
         </g:HorizontalPanel>
      </g:VerticalPanel>
   </f:Border>
</ui:UiBinder> 