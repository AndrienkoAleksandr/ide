<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.chromattic.client.ChromatticClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.chromattic.client.ChromatticLocalizationConstant"></ui:with>

   <ui:style>
      
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer>
         <g:VerticalPanel ui:field="form" spacing="3" horizontalAlignment="center" width="100%">
            <g:HorizontalPanel height="22px" width="100%" spacing="0">
               <g:cell verticalAlignment="middle">
                  <g:Label text="{locale.nodeTypeFormatField}:" width="160px"></g:Label>
               </g:cell>
               <g:cell verticalAlignment="middle">
                  <f:SelectItem ui:field="formatField" title="{locale.nodeTypeFormatField}" width="220px"></f:SelectItem>
               </g:cell>
            </g:HorizontalPanel>

            <g:HorizontalPanel height="40px" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
               <f:ImageButton ui:field="generateButton" width="90" height="22px" text="{locale.generateButton}"
                  imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
               <f:ImageButton ui:field="cancelButton" width="90" height="22px" text="{locale.cancelButton}"
                  imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
            </g:HorizontalPanel>
         </g:VerticalPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 