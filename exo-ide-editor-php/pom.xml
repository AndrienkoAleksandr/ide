<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>exo-ide-parent</artifactId>
		<groupId>org.exoplatform.ide</groupId>
		<version>1.2.0-M16-SNAPSHOT</version>
	</parent>
	<groupId>org.exoplatform.ide</groupId>
	<artifactId>exo-ide-editor-php</artifactId>
	<version>1.2.0-M16-SNAPSHOT</version>
	<name>eXo IDE :: Editor :: PHP</name>

	<properties>
		<webappDirectory>${project.build.directory}/${project.build.finalName}</webappDirectory>
	</properties>

	<dependencies>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-servlet</artifactId>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor</artifactId>
		</dependency>
		<dependency>
			<groupId>org.exoplatform.gwt</groupId>
			<artifactId>exo-gwtframework-commons</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.gwt</groupId>
			<artifactId>exo-gwtframework-ui</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-framework-client</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-xml</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-html</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-css</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-javascript</artifactId>
		</dependency>

		<dependency>
			<groupId>org.exoplatform.ide</groupId>
			<artifactId>exo-ide-editor-java</artifactId>
		</dependency>
	</dependencies>

	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<sourceDirectory>src/main/java</sourceDirectory>
		<outputDirectory>target/classes</outputDirectory>

	</build>
</project>
