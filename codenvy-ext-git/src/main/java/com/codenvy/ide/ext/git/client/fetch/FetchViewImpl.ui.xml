<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.git.client.GitLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.git.client.GitClientResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .alignLeft {
            float: left;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .image {
            position: relative;
            top: 24px;
            float: left;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="450px" height="130px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.buttonCancel}" width="60px" size="SMALL" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.buttonFetch}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnFetch"/>
            </g:FlowPanel>
        </g:south>
        <g:south size="22.0">
            <g:CheckBox ui:field="removeDeletedRefs" HTML="{locale.fetchRemoveDeletedRefsTitle}" addStyleNames="{res.gitCSS.textFont}"/>
        </g:south>
        <g:north size="26.0">
            <g:FlowPanel>
                <g:Label text="{locale.fetchRemoteFieldTitle}" addStyleNames="{res.gitCSS.textFont} {style.alignLeft}"/>
                <g:ListBox width="290px" ui:field="repository" addStyleNames="{res.gitCSS.textFont} {style.alignLeft}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PCT" width="100%" height="100%">
                <g:east size="48">
                    <g:FlowPanel addStyleNames="{style.emptyBorder}">
                        <g:Label text="{locale.fetchRemoteBranchesTitle}" width="100%"/>
                        <g:ListBox ui:field="remoteBranch" width="100%"/>
                    </g:FlowPanel>
                </g:east>
                <g:west size="48">
                    <g:FlowPanel addStyleNames="{style.emptyBorder}">
                        <g:Label text="{locale.fetchLocalBranchesTitle}" width="100%"/>
                        <g:ListBox ui:field="localBranch" width="100%"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <g:Image resource="{res.arrow}" addStyleNames="{style.image}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>