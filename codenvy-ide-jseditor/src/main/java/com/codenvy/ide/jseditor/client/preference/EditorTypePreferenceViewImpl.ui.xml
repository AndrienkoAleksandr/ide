<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.google.gwt.user.cellview.client'
             xmlns:my='urn:import:com.codenvy.ide.jseditor.client.preference'>

    <ui:with type="com.codenvy.ide.jseditor.client.preference.EditorPrefLocalizationConstant" field="constants" />
    <ui:style src="com/codenvy/ide/api/ui/style.css">
        .main{
            margin: 5px;
        }
        .section {
            margin-top: 1em;
            margin-botttom: 0.2em;
            font-size: titleFontSize;
        }
        .tables {
            min-width: fill-available; 
            min-width: -webkit-fill-available; 
        }
    </ui:style>
    <ui:style field="cellStyle" type="com.codenvy.ide.jseditor.client.preference.EditorTypePreferenceViewImpl.CellStyle">
        /* style for CellTable cells. */
        .prefCell {
            height: 2em;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.main}">
        <g:Label addStyleNames="{style.section}" text="{constants.editorsMappingSectionLabel}" />
        <c:CellTable ui:field="editorsSelection" addStyleNames="{style.tables}" />
        <my:Pager ui:field="editorsPager" />
        <g:Label addStyleNames="{style.section}" text="{constants.keybindingsSectionLabel}" />
        <c:CellTable ui:field="keyBindingSelection" addStyleNames="{style.tables}" />
    </g:HTMLPanel>
</ui:UiBinder>