<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
   <ui:style>
      .chatMessageInput{
         font: 100% Arial,sans-serif;
         height: 100%;
         min-height: 42px;
         outline: 0;
         overflow: auto;
         resize: none;
         width: 100%;
         margin: 0; /* don't want to add to container size */
         border: 0; /* don't want to add to container size */
         background: #FFFFFF;
      }
      .messageInputContainer{
         border: 1px solid #5ea0e3;
         position: absolute;
         bottom: 0;
         top: 0;
         left: 0;
         right: 0;
         outline: 0;
         margin: 13px;
      }
      .background{
         background: #eee;
      }
   </ui:style>
	<g:LayoutPanel>
		<g:layer top="0" height="50%">
			<g:ScrollPanel ui:field="participantsPanel" />
		</g:layer>
      <g:layer bottom="0" height="50%">
         <g:DockLayoutPanel unit="PX">
            <g:center>
               <g:ScrollPanel ui:field="chatPanel" />
            </g:center>
            <g:south size="70">
               <g:SimplePanel styleName="{style.background}">
                  <g:SimplePanel styleName="{style.messageInputContainer}">
                     <g:TextArea ui:field="chatMessageInput" styleName="{style.chatMessageInput}"  />
                  </g:SimplePanel>
               </g:SimplePanel>
            </g:south>
         </g:DockLayoutPanel>
      </g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 