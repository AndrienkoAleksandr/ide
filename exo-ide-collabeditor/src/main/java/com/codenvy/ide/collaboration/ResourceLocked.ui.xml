<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <g:DockLayoutPanel>
        <g:center>
            <g:LayoutPanel>
                <g:layer top="10px" height="20px" left="10px" right="10px">
                    <g:HTML ui:field="messageLabel"/>
                </g:layer>
                <g:layer top="30px" bottom="10px" left="10px" right="10px">
                    <g:HTML ui:field="userList"></g:HTML>
                </g:layer>
            </g:LayoutPanel>
        </g:center>
        <g:south size="25">
            <g:LayoutPanel>
                <g:layer left="60px" width="90px">
                    <f:ImageButton text="Notify Users" ui:field="notifyButton"
                            />
                </g:layer>
                <g:layer right="60px" width="90px">
                    <f:ImageButton text="Cancel" ui:field="cancelButton"/>
                </g:layer>
            </g:LayoutPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>