		<artifactId>ideall.component.parent</artifactId>
		<version>1.0-Beta02-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.exoplatform.ideall</groupId>
	<artifactId>exo.ideall.netvibes.component</artifactId>
	<name>eXo IDE :: Server Side Netvibes Component</name>
	<packaging>jar</packaging>

	<dependencies>
		<dependency>
			<groupId>org.exoplatform.jcr</groupId>
			<artifactId>exo.jcr.component.core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.exoplatform.jcr</groupId>
			<artifactId>exo.jcr.component.ext</artifactId>
		</dependency>
		<dependency>
			<groupId>org.exoplatform.jcr</groupId>
