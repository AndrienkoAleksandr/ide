<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >
    <ui:style>
        .Btn {
            margin: 5px;
        }

        .Txt {
            text-align: center;
            font-weight: bold;
            margin: 10px 0 10px 0;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:west size="80">
            <g:FlowPanel ui:field="extPanel" width="100%" height="100%">
                <g:Label text="Demo" styleName="{style.Txt}"/>
                <g:Button ui:field="googAccout" text="Google Account" styleName="{style.Btn}"/>
                <g:Button ui:field="manageApps" text="Manage Apps" styleName="{style.Btn}"/>
            </g:FlowPanel>
        </g:west>
        <g:center>
            <g:SplitLayoutPanel ui:field="splitPanel" width="100%" height="100%">
                <g:west size="240">
                    <g:SimplePanel ui:field="navPanel" width="100%" height="100%"/>
                </g:west>
                <g:center>
                    <g:SimplePanel ui:field="editorPanel"/>
                </g:center>
                <g:east size="240">
                    <g:SimplePanel ui:field="toolPanel" width="100%" height="100%"/>
                </g:east>
                <g:south size="240">
                    <g:SimplePanel ui:field="infoPanel" width="100%" height="100%"/>
                </g:south>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 