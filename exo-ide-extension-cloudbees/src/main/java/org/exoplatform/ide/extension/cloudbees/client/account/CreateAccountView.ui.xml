<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.cloudbees.client.CloudBeesClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.cloudbees.client.CloudBeesLocalizationConstant"></ui:with>
    <ui:style>
        .label {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            margin-top: 3px;
        }

        .hlabel {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
        }

        .optional {
            color: #ACACAC;
        }

        .textinput {
            float: left;
            width: 100%;
            height: 22px;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }

        .spaceTop {
            margin-top: 5px;
        }

        .borderBottom {
            border-bottom: 1px solid #CDCDCD;
            margin-bottom: 20px;
        }

        .error {
            color: #D21A1A;
        }
    </ui:style>
    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="35">
            <g:FlowPanel>
                <g:DockLayoutPanel width="100%" height="43px" unit="PX">
                    <g:west size="160">
                        <f:Label addStyleNames="{style.label}" isHTML="true" value="{locale.createAccountDomainField}"></f:Label>
                    </g:west>
                    <g:center>
                        <g:FlowPanel>
                            <f:TextInput ui:field="domainField" addStyleNames="{style.textinput}"></f:TextInput>
                            <f:Label ui:field="domainErrorLabel" width="100%" height="20px" addStyleNames="{style.label} {style.error}"
                                     isHTML="true"></f:Label>
                        </g:FlowPanel>
                    </g:center>
                </g:DockLayoutPanel>

                <g:DockLayoutPanel width="100%" height="40px" unit="PX" styleName="{style.borderBottom}">
                    <g:west size="160">
                        <g:FlowPanel>
                            <f:Label value="{locale.createAccountCompanyField}" addStyleNames="{style.label}"></f:Label>
                            <f:Label value="{locale.createAccountOptional}" addStyleNames="{style.label} {style.optional}"></f:Label>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="companyField" addStyleNames="{style.textinput}"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>

                <g:DockLayoutPanel width="100%" height="40px" unit="PX">
                    <g:west size="60">
                        <f:Label value="{locale.createAccountEmailField}" isHTML="true" addStyleNames="{style.label}"></f:Label>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="emailField" addStyleNames="{style.textinput}"></f:TextInput>
                    </g:center>
                    <g:east size="120" horizontalAlignment="ALIGN_RIGHT">
                        <g:CheckBox ui:field="createNewUserField" HTML="{locale.createAccountCreateNewUser}"></g:CheckBox>
                    </g:east>
                    <g:east size="10">
                        <g:FlowPanel></g:FlowPanel>
                    </g:east>
                </g:DockLayoutPanel>

                <g:DisclosurePanel animationEnabled="false" width="100%" ui:field="advancedPanel">
                    <g:FlowPanel>
                        <g:DockLayoutPanel width="100%" height="45px" unit="PCT">
                            <g:west size="48">
                                <g:FlowPanel>
                                    <f:Label width="100%" addStyleNames="{style.label}" isHTML="true"
                                             value="{locale.createAccountUserNameField}"></f:Label>
                                    <f:TextInput ui:field="userNameField" addStyleNames="{style.textinput}"></f:TextInput>
                                </g:FlowPanel>
                            </g:west>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel width="100%" height="45px" unit="PCT" styleName="{style.spaceTop}">
                            <g:west size="48">
                                <g:FlowPanel>
                                    <f:Label width="100%" addStyleNames="{style.label}" isHTML="true"
                                             value="{locale.createAccountFirstNameField}"></f:Label>
                                    <f:TextInput ui:field="firstNameField" addStyleNames="{style.textinput}"></f:TextInput>
                                </g:FlowPanel>
                            </g:west>
                            <g:center>
                                <g:FlowPanel></g:FlowPanel>
                            </g:center>
                            <g:east size="48">
                                <g:FlowPanel>
                                    <f:Label isHTML="true" value="{locale.createAccountLastNameField}"
                                             addStyleNames="{style.label}"></f:Label>
                                    <f:TextInput ui:field="lastNameField" addStyleNames="{style.textinput}"></f:TextInput>
                                </g:FlowPanel>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel width="100%" height="45px" unit="PCT" styleName="{style.spaceTop}">
                            <g:west size="48">
                                <g:FlowPanel>
                                    <f:Label width="100%" addStyleNames="{style.label}" isHTML="true"
                                             value="{locale.createAccountPasswordField}"></f:Label>
                                    <f:PasswordTextInput ui:field="passwordField" addStyleNames="{style.textinput}"></f:PasswordTextInput>
                                </g:FlowPanel>
                            </g:west>
                            <g:center>
                                <g:FlowPanel></g:FlowPanel>
                            </g:center>
                            <g:east size="48">
                                <g:FlowPanel>
                                    <f:Label addStyleNames="{style.label}" isHTML="true"
                                             value="{locale.createAccountConfirmPasswordField}"></f:Label>
                                    <f:PasswordTextInput ui:field="confirmPasswordField" width="100%" height="26"
                                                         addStyleNames="{style.textinput}"></f:PasswordTextInput>
                                </g:FlowPanel>
                            </g:east>
                        </g:DockLayoutPanel>
                        <f:Label ui:field="errorLabel" width="100%" height="20px" addStyleNames="{style.label} {style.error}"
                                 isHTML="true"></f:Label>
                    </g:FlowPanel>
                </g:DisclosurePanel>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}"
                               imageResource="{resource.okButton}"
                               disabledImageResource="{resource.okButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}"
                               imageResource="{resource.cancelButton}"
                               disabledImageResource="{resource.cancelButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>

</ui:UiBinder> 