<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudbees.client.CloudBeesLocalizationConstant"></ui:with>
   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudbees.client.CloudBeesClientBundle' />

   <ui:style>
      .close {
      	margin-right: auto;
      }
      
      .left {
      	float: left;
      }
      
      .space {
      	margin-right: 5px;
      }
      
      .right {
      	float: right;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      	font-weight: bold;
      }
      
      .link {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	overflow-x: hidden;
      	white-space: nowrap;
      }
      
      .padding {
      	padding: 15px;
      }
      
      .actions {
      	border-top: 1px solid #DBDFE5;
      	padding-top: 5px;
      }
      
      .textinput {
      	background-color: #FFFFFF !important;
      	color: #000000 !important;
      }
   </ui:style>
   <c:Border margin="15" borderColor="transparent">
      <c:layer top="0" height="80%">
         <c:Border>
            <c:layer>
               <g:FlowPanel styleName="{style.padding}">
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.appNameFieldName}" addStyleNames="{style.labelH}" width="33%"></g:Label>
                     <c:TextInput ui:field="nameField" width="60%" height="22px" enabled="false" addStyleNames="{style.textinput} {style.left} {style.space}"></c:TextInput>
                     <c:ImageButton ui:field="infoButton" imageName="cancel" width="22" height="22px" text="" styleName="{style.left}"
                        imageResource="{resource.propertiesButton}" disabledImageResource="{resource.propertiesButtonDisabled}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectApplicationUrl}" addStyleNames="{style.labelH}" width="33%"></g:Label>
                     <g:Anchor ui:field="urlField" width="64%" addStyleNames="{style.left} {style.link}" target="_blank"></g:Anchor>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectApplicationStatus}" addStyleNames="{style.labelH}" width="33%"></g:Label>
                     <c:Label ui:field="statusField" width="64%" addStyleNames="{style.left}"></c:Label>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectApplicationInstances}" addStyleNames="{style.labelH}" width="33%"></g:Label>
                     <c:Label ui:field="instancesField" width="64%" addStyleNames="{style.left}"></c:Label>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="25px" styleName="{style.actions}">
                     <g:Label text="{locale.manageProjectApplicationActions}" addStyleNames="{style.labelH}" width="33%"></g:Label>
                     <g:Button ui:field="updateButton" height="20px" width="70px" title="{locale.manageProjectUpdateButton}" text="Update"
                        styleName="{style.left} {style.space}"></g:Button>
                     <g:Button ui:field="deleteButton" height="20px" width="70px" title="{locale.manageProjectDeleteButton}" text="Delete"
                        styleName="{style.left}"></g:Button>
                  </g:FlowPanel>
               </g:FlowPanel>
            </c:layer>
         </c:Border>
      </c:layer>
      <c:layer height="22px" bottom="0">
         <g:FlowPanel>
            <c:ImageButton ui:field="closeButton" imageName="cancel" width="90px" height="22px" text="{locale.closeButton}" styleName="{style.right}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder>
