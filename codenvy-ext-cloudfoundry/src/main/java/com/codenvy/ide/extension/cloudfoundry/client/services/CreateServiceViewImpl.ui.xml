<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='locale'
             type='com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant'/>

    <ui:style>
        .alignRight {
            float: right;
        }

        .label {
            margin-top: 3px;
            float: left;
        }

        .optional {
            margin-left: 3px;
        }

        .spacing {
            margin-bottom: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="470px" height="150px">
        <g:south size="26.0">
            <g:FlowPanel>
                <g:Button width="90px" height="26px" addStyleNames="{style.alignRight}" ui:field="btnCancel"/>
                <g:Button width="90px" height="26px" addStyleNames="{style.alignRight}" ui:field="btnCreate"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:FlowPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="22px">
                    <g:west size="115.0">
                        <g:Label text="{locale.createServiceTypeField}" styleName="{style.label}" ui:field="serviceTypeLabel"/>
                    </g:west>
                    <g:center>
                        <g:ListBox height="22px" width="100%" addStyleNames="{style.spacing}" ui:field="servicesField"/>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="22px">
                    <g:center>
                        <g:TextBox height="22px" width="100%" addStyleNames="{style.spacing}" ui:field="nameField"/>
                    </g:center>
                    <g:west size="115.0">
                        <g:FlowPanel>
                            <g:Label text="{locale.createServiceNameField}" addStyleNames="{style.label}" ui:field="nameLabel"/>
                            <g:Label text="{locale.optional}" addStyleNames="{style.label} {style.optional}" ui:field="optionalLabel"/>
                        </g:FlowPanel>
                    </g:west>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 