<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field="locale"
		type="com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>
	<ui:with field='resource'
		type='com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryResources' />

	<ui:style>
		.left {
			float: left;
		}
		
		.space {
			margin-right: 5px;
		}
		
		.right {
			float: right;
		}
		
		.labelH {
			margin-right: 5px;
			float: left;
		}
										
		.middle {
			margin-top: 3px;
		}
		
		.withoutPadding {
			padding: 0px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="500px" height="330px">
		<g:south size="26.0">
			<g:FlowPanel>
				<g:Button addStyleNames="{style.right}" ui:field="btnClose" />
			</g:FlowPanel>
		</g:south>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectApplication}"
						addStyleNames="{style.labelH} {style.middle}" ui:field="applicationLabel" />
				</g:west>
				<g:east size="30.0">
					<g:Button width="22px" height="22px" text=""
						addStyleNames="{style.space} {style.withoutPadding}" title="{locale.manageProjectProperties}"
						ui:field="btnInfo">
					</g:Button>
				</g:east>
				<g:center>
					<g:TextBox height="22px" addStyleNames="{style.space}"
						ui:field="applicationName" width="97%" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectUrls}" addStyleNames="{style.labelH} {style.middle}" ui:field="urlLabel" />
				</g:west>
				<g:east size="30.0">
					<g:Button width="22px" height="22px" text="..."
						addStyleNames="{style.left} {style.withoutPadding}" title="more"
						ui:field="btnEditUrl" />
				</g:east>
				<g:center>
					<g:Anchor href="" text=""
						addStyleNames="{style.left} {style.space}" target="_blank"
						height="22px" ui:field="url" width="97%" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectMemory}" addStyleNames="{style.labelH} {style.middle}" ui:field="memoryLabel" />
				</g:west>
				<g:east size="30.0">
					<g:Button width="22px" height="22px"
						addStyleNames="{style.left} {style.withoutPadding}" title="{locale.manageProjectEditMemory}"
						ui:field="btnEditMemory" />
				</g:east>
				<g:center>
					<g:TextBox addStyleNames="{style.left} {style.space}"
						height="22px" ui:field="memory" width="97%" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectInstances}"
						addStyleNames="{style.labelH} {style.middle}" ui:field="instanceLabel" />
				</g:west>
				<g:east size="30.0">
					<g:Button width="22px" height="22px"
						styleName="{style.left} {style.withoutPadding}" title="{locale.manageProjectEditInstances}"
						ui:field="btnEditInstances" />
				</g:east>
				<g:center>
					<g:TextBox addStyleNames="{style.left} {style.space}"
						height="22px" ui:field="instances" width="97%" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectStack}" addStyleNames="{style.labelH}" ui:field="stackLabel" />
				</g:west>
				<g:center>
					<g:Label text="" addStyleNames="{style.left}" ui:field="stack" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectModel}" addStyleNames="{style.labelH}" ui:field="modelLabel" />
				</g:west>
				<g:center>
					<g:Label text="" addStyleNames="{style.left}" ui:field="model" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectStatus}" addStyleNames="{style.labelH}" ui:field="statusLabel" />
				</g:west>
				<g:center>
					<g:FlowPanel>
						<g:Label addStyleNames="{style.left} {style.space} {style.middle}"
							width="70px" ui:field="status" />
						<g:Button width="22px" height="22px" text=""
							title="{locale.manageProjectStart}" addStyleNames="{style.left} {style.space} {style.withoutPadding}"
							ui:field="btnStart" />
						<g:Button width="22px" height="22px" text=""
							title="{locale.manageProjectStop}" addStyleNames="{style.left} {style.space} {style.withoutPadding}"
							ui:field="btnStop" />
						<g:Button width="22px" height="22px" text=""
							title="{locale.manageProjectRestart}" addStyleNames="{style.left} {style.withoutPadding}"
							ui:field="btnRestart" />
					</g:FlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="30.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%">
				<g:west size="80.0">
					<g:Label text="{locale.manageProjectActions}"
						addStyleNames="{style.labelH}" ui:field="actionLabel" />
				</g:west>
				<g:center>
					<g:FlowPanel>
						<g:Button height="22px" width="70px" text="{locale.updateButton}"
							addStyleNames="{style.left} {style.space}" ui:field="btnUpdate" />
						<g:Button height="22px" width="70px" text="{locale.deleteButton}"
							addStyleNames="{style.left} {style.space}" ui:field="btnDelete" />
						<g:Button height="22px" width="70px" text="{locale.servicesButton}"
							addStyleNames="{style.left} {style.space}" ui:field="btnServices" />
						<g:Button height="22px" width="70px" text="{locale.logsButton}"
							addStyleNames="{style.left}" ui:field="btnLogs" />
					</g:FlowPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder> 