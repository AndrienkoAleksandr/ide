<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='locale'
		type='com.codenvy.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant' />

	<ui:style>
		.alignBtn {
			float: right;
		}
		
		.errLabel {
			margin-bottom: 11px;
			text-align: center;
		}
		
		.spacing {
			margin-bottom: 10px;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="380px" height="180px">
		<g:south size="26.0">
			<g:FlowPanel>
				<g:Button addStyleNames="{style.alignBtn}" ui:field="btnCancel"
					width="90px" height="26px" />
				<g:Button addStyleNames="{style.alignBtn}" ui:field="btnLogIn"
					width="90px" height="26px" />
			</g:FlowPanel>
		</g:south>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewTargetField}" ui:field="serverLabel" />
				</g:west>
				<g:center>
					<g:ListBox ui:field="server"/>
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewEmailField}" ui:field="emailLabel" />
				</g:west>
				<g:center>
					<g:TextBox width="270px" ui:field="email" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:west size="100.0">
					<g:Label text="{locale.loginViewPasswordField}" ui:field="passwordLabel" />
				</g:west>
				<g:center>
					<g:PasswordTextBox ui:field="password" width="270px" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
		<g:north size="26.0">
			<g:DockLayoutPanel unit="PX" width="100%" height="100%"
				styleName="{style.spacing}">
				<g:center>
					<g:Label horizontalAlignment="ALIGN_CENTER" styleName="{style.errLabel}"
						ui:field="errorText" />
				</g:center>
			</g:DockLayoutPanel>
		</g:north>
	</g:DockLayoutPanel>
</ui:UiBinder> 