<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.gae.client.GAEResources'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.gae.client.GAELocalization'/>
    <ui:style>
        .left {
            float: left;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="26.0">
            <g:FlowPanel width="100%" height="100%">
                <g:Label text="Number of days :" styleName="{style.left}"/>
                <g:TextBox ui:field="daysCount" maxLength="3" visibleLength="1" width="50px" height="18px"
                           styleName="{style.left}"/>
                <g:Label text="Logs severity :" styleName="{style.left}"/>
                <g:ListBox ui:field="severity" selectedIndex="0" visibleItemCount="1" width="100px"/>
                <c:Button ui:field="btnGetLogs" height="18px" width="18px" type="DEFAULT" icon="{resource.getLogs}"
                          styleName="{style.left}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <g:FlowPanel width="100%" height="100%" ui:field="output"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>