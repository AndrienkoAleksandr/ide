<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.gae.client.GAEResources'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.gae.client.GAELocalization'/>
    <ui:style>
        .left {
            float: left;
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="570px" height="270px">
        <g:north size="35.0">
            <g:FlowPanel>
                <g:Label text="{constant.manageApplicationApplication}" styleName="{style.left}"/>
                <c:Button ui:field="btnApplicationUpdate" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.updateApplication}" text="{constant.updateButton}"/>
                <c:Button ui:field="btnApplicationRollBack" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.rollbackApplication}"
                          text="{constant.rollbackButton}"/>
                <c:Button ui:field="btnApplicationLogs" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.logs}" text="{constant.logsButton}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="35.0">
            <g:FlowPanel>
                <g:Label text="{constant.manageApplicationIndexes}" styleName="{style.left}"/>
                <c:Button ui:field="btnIndexesUpdate" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.updateIndexes}" text="{constant.updateButton}"/>
                <c:Button ui:field="btnIndexesVacuum" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.vacuumIndexes}" text="{constant.vacuumButton}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="35.0">
            <g:FlowPanel>
                <g:Label text="{constant.manageApplicationPagespeed}" styleName="{style.left}"/>
                <c:Button ui:field="btnPageSpeedUpdate" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.updatePagespeed}" text="{constant.updateButton}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="35.0">
            <g:FlowPanel>
                <g:Label text="{constant.manageApplicationQueues}" styleName="{style.left}"/>
                <c:Button ui:field="btnQueuesUpdate" type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.updateQueues}" text="{constant.updateButton}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="35.0">
            <g:FlowPanel>
                <g:Label text="{constant.manageApplicationDos}" styleName="{style.left}"/>
                <c:Button ui:field="btnDoSUpdate"  type="DEFAULT" size="SMALL"
                          styleName="{style.left}" icon="{resource.updateDos}" text="{constant.updateButton}"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>