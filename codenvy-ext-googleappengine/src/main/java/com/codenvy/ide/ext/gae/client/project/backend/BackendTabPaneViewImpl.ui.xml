<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.gae.client.GAEResources'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.gae.client.GAELocalization'/>
    <ui:style>
        .right {
            float: right;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="570px" height="270px">
        <g:north size="220.0">
            <l:CellTable ui:field="backendsTable" width="560px"/>
        </g:north>
        <g:north size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="btnConfigure" text="{constant.configureButton}"
                          icon="{resource.configure}" type="SUCCESS" styleName="{style.right}" size="SMALL"/>
                <c:Button ui:field="btnDelete" text="{constant.deleteButton}"
                          icon="{resource.remove}" type="SUCCESS" styleName="{style.right} {style.space}" size="SMALL"/>
                <c:Button ui:field="btnUpdate" text="{constant.updateButton}"
                          icon="{resource.update}" type="SUCCESS" styleName="{style.right} {style.space}" size="SMALL"/>
                <c:Button ui:field="btnRollBack" text="{constant.rollbackButton}"
                          icon="{resource.rollback}" type="SUCCESS" styleName="{style.right} {style.space}" size="SMALL"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="btnUpdateAll" text="{constant.rollbackAllButton}"
                          icon="{resource.update}" type="SUCCESS" styleName="{style.right}" size="SMALL"/>
                <c:Button ui:field="btnRollBackAll" text="{constant.updateButton}"
                          icon="{resource.rollbackAll}" type="SUCCESS" styleName="{style.right} {style.space}" size="SMALL"/>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
