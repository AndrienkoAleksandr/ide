<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='constant' type='com.codenvy.ide.ext.gae.client.GAELocalization'/>
    <ui:with field='res' type='com.codenvy.ide.ext.gae.client.GAEResources'/>
    <ui:style>
        .left {
            float: left;
        }

        .right {
           float: right;
        }

        .label {
            margin-top: 20px;
        }

        .logo {
            margin-left: 15px;
            margin-top: 5px;
        }

        .buttonSpace {
            margin-right: 5px;
            margin-top: 10px;
        }

        .visible {
            overflow: visible !important;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="450px" height="125px">
        <g:south size="36.0">
            <g:FlowPanel styleName="{style.visible}">
                <c:Button text="{constant.createButton}" size="SMALL"
                          type="SUCCESS" ui:field="createButton" styleName="{style.buttonSpace} {style.right}"/>
                <c:Button text="{constant.deployButton}" size="SMALL"
                          type="SUCCESS" ui:field="deployButton" styleName="{style.buttonSpace} {style.right}"/>
                <c:Button text="{constant.cancelButton}" size="SMALL"
                          type="DANGER" ui:field="cancelButton" styleName="{style.buttonSpace} {style.right}"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="80.0">
            <g:FlowPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="80px">
                    <g:west size="100.0">
                        <g:Image resource="{res.googleAppEngineLogo}" width="64px" height="64px" styleName="{style.left} {style.logo}"/>
                    </g:west>
                    <g:center>
                        <g:Label text="{constant.createApplicationInstruction}" ui:field="instructionLabel" wordWrap="true"
                                 styleName="{style.label}" />
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>