<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.gae.client.GAEResources'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.gae.client.GAELocalization'/>
    <ui:style>

    </ui:style>
    <g:DockLayoutPanel unit="PX" width="570px" height="270px">
        <g:north size="26.0">
            <g:Label text="{constant.cronGridMessage}" width="100%"/>
        </g:north>
        <g:north size="220.0">
            <l:CellTable ui:field="cronTable" height="260px" width="560px"/>
        </g:north>
        <g:north size="26.0">
            <c:Button ui:field="btnUpdate" width="50px" height="18px" text="{constant.updateButton}"
                      icon="{resource.update}" type="SUCCESS"/>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>