<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='com.codenvy.ide.factory.client.FactoryClientBundle'/>
    <ui:with field='locale' type='com.codenvy.ide.factory.client.FactoryLocalizationConstants'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            font-weight: bold;
        }

        .middle {
            margin-top: 3px;
        }

        .floatLeft {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .right {
            float: right;
        }

        .textinput {
            background-color: #FFFFFF !important;
            color: #000000 !important;
        }

        .actions {
            border-top: 1px solid #DBDFE5;
            padding-top: 10px;
            margin-top: 10px;
        }

        .labelTitle {
            font-size: 13px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </ui:style>


    <f:Border margin="15" borderColor="transparent">
        <f:layer>
            <g:FlowPanel styleName="{style.padding}">
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="Customize"></g:Label>
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="Embed"></g:Label>
                <g:FlowPanel width="100%" height="55%">
                    <f:TextAreaInput ui:field="websitesURLField" width="250px" height="100%" addStyleNames="{style.floatLeft}"></f:TextAreaInput>
                    <f:TextAreaInput ui:field="gitHubURLField" width="250px" height="100%" addStyleNames="{style.floatLeft}"></f:TextAreaInput>
                    <f:TextAreaInput ui:field="directSharingURLField" width="250px" height="100%" addStyleNames="{style.floatLeft}"></f:TextAreaInput>
                </g:FlowPanel>
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="Share it to your friends"></g:Label>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="90px" styleName="{style.center}">
                <f:ImageButton ui:field="okButton" width="90" height="22" text="{locale.buttonOk}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
