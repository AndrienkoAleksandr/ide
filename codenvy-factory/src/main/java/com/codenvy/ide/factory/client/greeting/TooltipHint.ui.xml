<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	>
	
	<ui:with field="resource" type="com.codenvy.ide.factory.client.FactoryClientBundle"/>	
	
	<ui:style>
	
		.tooltip {
			position:absolute;
			left:150px;
			right:150px;
			height:39px;
			/* top:16px; */
			top:-4px;
			background-color:#fdeb8f;
			border-style:solid;
			border-width:1px;
			border-color:#fbcd75;
			min-width:300px;
			border-radius:10px;
			opacity:0;
			color: #ae7508;
		}
		
		.label {
			position:absolute;
			left:10px; 
			top:7px; 
			right:40px; 
			line-height:25px; 
			height:25px; 
			text-align:center;
			font-family: Verdana,Arial,sans-serif;
			font-size: 12px;
			font-weight: bold;
		}

		.close-button {
			position:absolute; 
			top:9px; 
			right:10px; 
			width:20px; 
			height:20px; 
			opacity:0.5;	
		}
		
		.close-button:HOVER {
			opacity:1!important;
		}
		
	</ui:style>
	
	<g:FlowPanel styleName="{style.tooltip}">
		<g:Label styleName="{style.label}" ui:field="label"></g:Label>
		<g:Image styleName="{style.close-button}" resource="{resource.closeNotification}" ui:field="closeButton"></g:Image>
	</g:FlowPanel>
	
</ui:UiBinder>
 