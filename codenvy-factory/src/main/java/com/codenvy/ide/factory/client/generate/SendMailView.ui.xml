<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field="resource" type="com.codenvy.ide.factory.client.FactoryClientBundle"/>
    <ui:with field="locale" type="com.codenvy.ide.factory.client.FactoryLocalizationConstants"></ui:with>
    <ui:style>
		.a {
			cursor: pointer;
			border: none;
			/* Disable the button-style */
			background-color: transparent;
			font-family: Verdana, Arial, sans-serif;
			font-size: 18px;
			font-weight: bold;
			color: #5E5E5E;
			text-decoration: none;
			text-align: left;
			margin-top: 2px;
		}

		.a:visited {
			color: #5E5E5E;
		}

		.a:hover {
			color: #5E5E5E;
			text-decoration: underline;
		}

        .center {
            display: block;
            margin-left: auto;
        }

        .floatLeft {
            float: left;
        }

        .label {
            margin-bottom: 5px;
            margin-top: 3px;
            font-size: 12px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
        }

        .textArea {
            font-size: 14px;
            resize: none;
        }

        .spacing {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .labelTitle {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .link {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            overflow-x: hidden;
            white-space: nowrap;
        }

        .link:hover {
            text-decoration: underline;
            cursor: pointer;
        }
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer>
            <g:DockLayoutPanel unit="PX">
                <g:north size="30">
                    <g:FlowPanel addStyleNames="{style.floatLeft}">
                        <g:Label text="{locale.sendMailFieldRecipientTitle}" addStyleNames="{style.label} {style.floatLeft}" width="7%"></g:Label>
                        <f:TextInput ui:field="recipientField" width="92%" height="20px" addStyleNames="{style.floatLeft}"></f:TextInput>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:FlowPanel width="100%" height="65%" addStyleNames="{style.spacing}">
                        <g:Label text="{locale.sendMailFieldMessageTitle}" addStyleNames="{style.label}" width="100%"></g:Label>
                        <f:TextAreaInput ui:field="messageField" width="100%" height="100%" addStyleNames="{style.textArea}"></f:TextAreaInput>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="300px" styleName="{style.center}">
                <f:ImageButton ui:field="sendButton" width="90" height="22" text="{locale.buttonSend}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
                <g:FlowPanel width="10px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.buttonCancel}" imageResource="{resource.cancel}"
                               disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
