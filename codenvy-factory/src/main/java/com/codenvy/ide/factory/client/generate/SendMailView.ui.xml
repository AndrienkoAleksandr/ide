<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field="resource" type="com.codenvy.ide.factory.client.FactoryClientBundle"/>
    <ui:with field="locale" type="com.codenvy.ide.factory.client.FactoryLocalizationConstants"></ui:with>
    <ui:style>
        .center {
            display: block;
            margin-left: auto;
        }

        .floatLeft {
            float: left;
        }

        .label {
            margin-bottom: 5px;
            margin-top: 3px;
            font-size: 12px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
        }

        .textArea {
            font-size: 14px;
            resize: none;
        }

        .spacing {
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .italicFont {
            font-style: italic;
        }
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer>
            <g:DockLayoutPanel unit="PX">
                <g:north size="45">
                    <g:DockLayoutPanel unit="PX">
                        <g:west size="350">
                            <g:FlowPanel addStyleNames="{style.floatLeft}">
                                <g:Label text="YOUR E-MAIL *" addStyleNames="{style.italicFont}"/>
                                <f:TextInput ui:field="senderEmailField" width="200px" height="20px" addStyleNames="{style.floatLeft}"/>
                            </g:FlowPanel>
                        </g:west>
                        <g:center>
                            <g:FlowPanel addStyleNames="{style.floatLeft}">
                                <g:Label text="YOUR NAME *" addStyleNames="{style.italicFont}"/>
                                <f:TextInput ui:field="senderNameField" width="200px" height="20px" addStyleNames="{style.floatLeft}"/>
                            </g:FlowPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:north>
                <g:north size="45">
                    <g:FlowPanel addStyleNames="{style.floatLeft}">
                        <g:Label text="RECIPIENT(S) E-MAIL *" addStyleNames="{style.italicFont} {style.floatLeft}"/>
                        <f:TextInput ui:field="recipientField" width="100%" height="20px" addStyleNames="{style.floatLeft}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <g:FlowPanel width="100%" height="70%" addStyleNames="{style.spacing}">
                        <g:Label text="MESSAGE *" addStyleNames="{style.italicFont} {style.label}" width="100%"/>
                        <f:TextAreaInput ui:field="messageField" width="100%" height="100%"
                                         addStyleNames="{style.textArea}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="400px" styleName="{style.center}">
                <f:ImageButton ui:field="sendButton" width="90" height="22" text="{locale.buttonSend}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"/>
                <g:FlowPanel width="10px" height="22px" styleName="{style.floatLeft}"/>
                <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.buttonCancel}" imageResource="{resource.cancel}"
                               disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"/>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
