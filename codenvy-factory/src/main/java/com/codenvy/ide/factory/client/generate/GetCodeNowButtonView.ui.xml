<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:d="urn:import:com.google.gwt.dom.client">
    
    <ui:with field='resource' type='com.codenvy.ide.factory.client.FactoryClientBundle'/>
    <ui:with field='locale' type='com.codenvy.ide.factory.client.FactoryLocalizationConstants'/>
    
    <ui:style type='com.codenvy.ide.factory.client.generate.GetCodeNowButtonView.Style'>
    
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }
        

        .clearLeft {
            clear: left;
        }

        .labelTitle {
            font-size: 14px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            margin-bottom: 15px;
            overflow:hidden;
            white-space:nowrap;
        }
        
        .textAreaPanel {
        	position:absolute;
        	left:0px;
        	right:0px;
        	top:45px;
        	bottom:0px;
        	overflow:hidden;
        	padding-bottom: 1px;
        }

        .textArea {
            font-size: 12px;
            resize: none;
            overflow: hidden;
            color: #666;
            padding: 5px;
            border: 1px solid #aaa !important;
            border-radius: 4px;
            outline: none;
            width: 100%;
            height: 100%;
            /*
            position: absolute;
            left: 0px;
            top: 37px;
            right: 0px;
            bottom: 3px;
            */
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
            box-shadow: 0px 0px 5px rgba(200, 200, 200, 0.6);
        }
        
        .textArea:HOVER {
			background: #F0F0F0;
			overflow: auto;
		}

        .textAreaLabel {
            font-weight: bold;
            margin-top: 10px;
        }

        .image {
            float: left;
            width: 32px;
            height: 32px;
            margin-right: 10px;
            margin-bottom: 5px;
            margin-left:0px;
        }


		.embedContentPanel {
			overflow: hidden;
			margin-bottom: 20px;
			position: relative;
		}
		
        .snippetPanel {
			border-radius: 4px;
			height: 100%;
			overflow: hidden;
		}		
		
		.snippetPanelLeft {
			position: absolute;
			left: 0px;
			width: 32%;
		}
		
		.snippetPanelCenter {
			position: relative;		
			width: 32%;
			margin-left: auto;
			margin-right: auto;
		}

		.snippetPanelRight {
			position: absolute;
			right: 0px;
			width: 32%;
			top: 0px;
		}
		
        .shareButton {
            float: left;
            width: 50px;
            height: 50px;
            margin: 0px 10px 0px 10px;
            cursor: pointer;
        }		
        
        .customizeCodenow {
			position: relative;
			overflow: hidden;
			margin-bottom: 20px;
			
			-moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            box-sizing: border-box;            
		}
        
        .radioTitle {
			position: absolute;
			left:0px;
			top:0px;
			width:200px;
			height:20px;
			font-size: 12px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-weight: normal;			
		}
        
        .radio {
			position: absolute;
			left:0px;
			top:20px;
			width:200px;
			height:20px;			
			border: 0 none;
			border-collapse: collapse;
		}
		
		.radio tbody tr td {
			height: 20px;
			vertical-align: top;
			width: 100px;		
		}
		
		.radio tbody tr td span {
			height: 100%;
			position: absolute;
			width: 100px;		
		}

		.radio tbody tr td span input {
			margin-right: 0px;
    		margin-top: 0px;
    		margin-left: 0px;
    		cursor: pointer;
		}
		
		.radio_webkit tbody tr td span input {
    		margin-top: 3px;
		}
		
		.radio tbody tr td span label {
			font-size: 12px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-weight: normal;
			
		    height: 20px;
    		line-height: 20px;
    		margin-left: 5px;
    		position: absolute;
		}
		
        .previewFrame {
			position: absolute;
			right: 0px;
			width: 500px;
            border: none;
            top:0px;
			height: 40px;
            background-color: #F1F1F1;
		}
		
		.labelTitle hr {
			border-width: 0;
			background-color:#AAAAAA;
			height:1px;
			display:inline-block;
			width:100%;
			position:relative;
			top:4px;
			margin-left:5px;
		}
		
    </ui:style>
    
    <f:Border margin="10" borderColor="transparent">
        <f:layer>
            <g:FlowPanel>

                <!-- Customize area -->
                <g:HTMLPanel height="20px" width="100%" addStyleNames="{style.labelTitle}">Customize<hr noshade="noshade" /></g:HTMLPanel>

                <g:FlowPanel width="100%" height="40px" addStyleNames="{style.customizeCodenow}">
                	<g:Label addStyleNames="{style.radioTitle}" text="Preview (hover over button):"></g:Label>
                	<g:HorizontalPanel addStyleNames="{style.radio}" ui:field="radioPanel">
						<g:RadioButton ui:field="dark" name="color" value="true" enabled="true">Dark</g:RadioButton>
		                <g:RadioButton ui:field="white" name="color" value="false" enabled="true">White</g:RadioButton>                	
                	</g:HorizontalPanel>
	                <g:Frame ui:field="previewFrame" styleName="{style.previewFrame}"></g:Frame>
                </g:FlowPanel>

                <!-- Embed area -->
                <g:HTMLPanel height="20px" width="100%" addStyleNames="{style.labelTitle}">Embed<hr noshade="noshade" /></g:HTMLPanel>
                
                <g:FlowPanel width="100%" height="140px" addStyleNames="{style.embedContentPanel}">
                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelLeft}">
                        <g:Image resource="{resource.world}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on Websites"></g:Label>
                        <g:FlowPanel styleName="{style.textAreaPanel}">
                        	<f:TextAreaInput ui:field="websitesURLField" addStyleNames="{style.textArea}"></f:TextAreaInput>
                        </g:FlowPanel>
	                </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelCenter}">
                        <g:Image resource="{resource.gitHub}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on GitHub Pages"></g:Label>
                        <g:FlowPanel styleName="{style.textAreaPanel}">
                        	<f:TextAreaInput ui:field="gitHubURLField" addStyleNames="{style.textArea}"></f:TextAreaInput>
                        </g:FlowPanel>
                    </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelRight}">
                        <g:Image resource="{resource.link}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="Directly"></g:Label>
                        <g:FlowPanel styleName="{style.textAreaPanel}">
                        	<f:TextAreaInput ui:field="directSharingURLField" addStyleNames="{style.textArea}"></f:TextAreaInput>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:FlowPanel>

                <!-- Share buttons area -->
                <g:HTMLPanel height="20px" width="100%" addStyleNames="{style.labelTitle}">Share<hr noshade="noshade" /></g:HTMLPanel>
                
                <g:FlowPanel width="280px" height="50px" styleName="{style.center}">
                    <g:Image ui:field="shareFacebookButton" resource="{resource.facebook}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareGooglePlusButton" resource="{resource.gplus}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareTwitterButton" resource="{resource.twitter}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareEmailButton" resource="{resource.mail}" styleName="{style.shareButton}"></g:Image>
                </g:FlowPanel>
            </g:FlowPanel>
        </f:layer>
        
        <f:layer height="22px" bottom="0" width="100%">
            <g:FlowPanel width="90px" addStyleNames="{style.center}">
                <f:ImageButton ui:field="okButton" width="90" height="22" text="{locale.buttonOk}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
        
    </f:Border>
</ui:UiBinder>
