<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:d="urn:import:com.google.gwt.dom.client">
    <ui:with field='resource' type='com.codenvy.ide.factory.client.FactoryClientBundle'/>
    <ui:with field='locale' type='com.codenvy.ide.factory.client.FactoryLocalizationConstants'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }

        .labelTitle {
            font-size: 14px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            margin-top: 20px;
            margin-bottom: 10px;
        }

        .borderBottom {
            border-bottom: 1px solid #DBDFE5;
        }

        .textArea {
            font-size: 13px;
            resize: none;
            overflow: hidden;
            color: #666;
            padding: 5px;
            border: 1px solid #aaa !important;
            box-shadow: 0 0 4px rgba(82,168,236,.75);
            border-radius: 4px;
            outline: none;
        }

        .textAreaLabel {
            font-weight: bold;
            margin-top: 7px;
        }

        .marginLeft {
            margin-left: 10px;
        }

        .image {
            float: left;
            width: 32px;
            height: 32px;
            margin-right: 10px;
            margin-bottom: 5px;
        }

        .shareButton {
            float: left;
            width: 32px;
            height: 32px;
            margin-right: 10px;
            margin-bottom: 5px;
            cursor: pointer;
        }

        .googleOnePanel {
			width: 250px;
			height: 32px;
			border: none;
			overflow: hidden;
		}
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer>
            <g:FlowPanel styleName="{style.padding}">
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Customize"></g:Label>
                <g:Label width="100%" height="20px" text="TODO"></g:Label>

                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Embed"></g:Label>
                <g:FlowPanel width="100%" height="180px">
                    <g:FlowPanel addStyleNames="{style.floatLeft} {style.marginLeft}">
                        <g:Image resource="{resource.world}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on Websites"></g:Label>
                        <f:TextAreaInput ui:field="websitesURLField" width="250px" height="150px" addStyleNames="{style.floatLeft} {style.textArea}">
                        </f:TextAreaInput>
	                </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.floatLeft} {style.marginLeft}">
                        <g:Image resource="{resource.gitHub}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on GitHub"></g:Label>
                        <f:TextAreaInput ui:field="gitHubURLField" width="250px" height="150px" addStyleNames="{style.floatLeft} {style.textArea}">
                        </f:TextAreaInput>
                    </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.floatLeft} {style.marginLeft}">
                        <g:Image resource="{resource.link}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="Direct Sharing"></g:Label>
                        <f:TextAreaInput ui:field="directSharingURLField" width="250px" height="150px" addStyleNames="{style.floatLeft} {style.textArea}">
                        </f:TextAreaInput>
                    </g:FlowPanel>
                </g:FlowPanel>

                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Share it to your friends"></g:Label>
                <g:FlowPanel width="168px" height="40px" styleName="{style.center}">
                    <g:Image ui:field="shareFacebookButton" resource="{resource.facebook}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareGooglePlusButton" url="https://www.gstatic.com/images/icons/gplus-32.png" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareTwitterButton" resource="{resource.twitter}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareEmailButton" resource="{resource.mail}" styleName="{style.shareButton}"></g:Image>
                </g:FlowPanel>

                <g:Label width="100%" height="5px" addStyleNames="{style.borderBottom}"></g:Label>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="90px" addStyleNames="{style.center}">
                <f:ImageButton ui:field="okButton" width="90" height="22" text="{locale.buttonOk}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
