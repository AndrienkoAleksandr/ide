<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:d="urn:import:com.google.gwt.dom.client">
    
    <ui:with field='resource' type='com.codenvy.ide.factory.client.FactoryClientBundle'/>
    <ui:with field='locale' type='com.codenvy.ide.factory.client.FactoryLocalizationConstants'/>
    
    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }

        .clearLeft {
            clear: left;
        }

        .marginTop {
            margin-top: 15px;
        }

        .checkbox {
            margin-bottom: 10px;
            font-size: 12px;
        }

        .radioButton {
			margin-bottom: 3px;
			font-size: 11px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			float: left;
		}

        .label {
            font-size: 12px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            margin-top: 2px;
            margin-bottom: 10px;
        }

        .labelTitle {
            font-size: 14px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            /*
            margin-top: 10px;
            */
            margin-bottom: 10px;
        }

        .borderBottom {
            border-bottom: 1px solid #DBDFE5;
        }



        .textArea {
	/*
            width: 220px;
            height: 165px;
            */
            font-size: 12px;
            resize: none;
            overflow: hidden;
            color: #666;
            padding: 5px;
            border: 1px solid #aaa !important;
            /*
            box-shadow: 0 0 5px rgba(82,168,236,.75);
            */
            border-radius: 4px;
            outline: none;
            
            position: absolute;
            left: 0px;
            top: 37px;
            right: 0px;
            bottom: 3px;
            box-shadow: 0px 0px 5px rgba(200, 200, 200, 0.6);
            /*
            */
        }
        
        .textArea:HOVER {
			background: #F0F0F0;
			overflow: auto;
		}

        .textAreaLabel {
            font-weight: bold;
            margin-top: 10px;
        }

        .image {
            float: left;
            width: 32px;
            height: 32px;
            margin-right: 10px;
            margin-bottom: 5px;
            margin-left:0px;
        }

        .previewFrame {
            border: none;
            /*
            background: #FFEEAA;
            */
		}
		
		.embedContentPanel {
			overflow: hidden;
			margin-bottom: 10px;
			position: relative;
		}
		
        .snippetPanel {
			/*
			box-shadow: 0 0 7px rgba(82, 168, 236, 0.75);
			*/
			border-radius: 4px;
			height: 100%;
			overflow: hidden;
		}		
		
		.snippetPanelLeft {
			position: absolute;
			left: 0px;
			width: 32%;
		}
		
		.snippetPanelCenter {
			position: relative;		
			width: 32%;
			margin-left: auto;
			margin-right: auto;
		}

		.snippetPanelRight {
			position: absolute;
			right: 0px;
			width: 32%;
			top: 0px;
		}
		
        .shareButton {
            float: left;
            width: 50px;
            height: 50px;
            margin: 0px 10px 0px 10px;
            cursor: pointer;
        }		
	        

    </ui:style>
    
    
    
    
    <f:Border margin="10" borderColor="transparent">
        <f:layer>
            <g:FlowPanel>

                <!-- Customize area -->
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Customize"></g:Label>
                
                <g:Frame width="100%" height="30px" ui:field="previewFrame" styleName="{style.previewFrame}"></g:Frame>

                <!-- Embed area -->
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Embed"></g:Label>
                
                <g:FlowPanel width="100%" height="140px" addStyleNames="{style.embedContentPanel}">
                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelLeft}">
                        <g:Image resource="{resource.world}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on Websites"></g:Label>
                        <f:TextAreaInput ui:field="websitesURLField" addStyleNames="{style.floatLeft} {style.textArea}"></f:TextAreaInput>
	                </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelCenter}">
                        <g:Image resource="{resource.gitHub}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="on GitHub Pages"></g:Label>
                        <f:TextAreaInput ui:field="gitHubURLField" addStyleNames="{style.floatLeft} {style.textArea}"></f:TextAreaInput>
                    </g:FlowPanel>

                    <g:FlowPanel addStyleNames="{style.snippetPanel} {style.snippetPanelRight}">
                        <g:Image resource="{resource.link}" styleName="{style.image}"></g:Image>
                        <g:Label addStyleNames="{style.textAreaLabel}" text="Direct Sharing"></g:Label>
                        <f:TextAreaInput ui:field="directSharingURLField" addStyleNames="{style.floatLeft} {style.textArea}"></f:TextAreaInput>
                    </g:FlowPanel>
                </g:FlowPanel>

                <!-- Share buttons area -->
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle} {style.borderBottom}" text="Share it to your friends"></g:Label>
                
                <g:FlowPanel width="280px" height="50px" styleName="{style.center}">
                    <g:Image ui:field="shareFacebookButton" resource="{resource.facebook}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareGooglePlusButton" resource="{resource.gplus}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareTwitterButton" resource="{resource.twitter}" styleName="{style.shareButton}"></g:Image>
                    <g:Image ui:field="shareEmailButton" resource="{resource.mail}" styleName="{style.shareButton}"></g:Image>
                </g:FlowPanel>

<!-- 
                <g:Label width="100%" height="5px" addStyleNames="{style.borderBottom}"></g:Label>
 -->
            </g:FlowPanel>
        </f:layer>
        
        <f:layer height="22px" bottom="0" width="100%">
            <g:FlowPanel width="90px" addStyleNames="{style.center}">
                <f:ImageButton ui:field="okButton" width="90" height="22" text="{locale.buttonOk}" imageResource="{resource.ok}"
                               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
        
    </f:Border>
</ui:UiBinder>
