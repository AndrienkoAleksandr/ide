<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p1='urn:import:com.google.gwt.user.cellview.client'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.appfog.client.AppfogLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.appfog.client.AppfogResources'/>
    <ui:style>
        .alignRight {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="480px" height="360px"
                       addStyleNames="{res.appFogCSS.login} {style.emptyBorder} {res.appFogCSS.appInfo}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="btnOk" text="{locale.okButton}" size="SMALL" width="50px" type="SUCCESS"
                          addStyleNames="{style.alignRight}"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoName}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="name" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.appFogCSS.event}">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoState}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="state" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoInstances}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="instances" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.appFogCSS.event}">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoVersion}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="version" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoResourcesDisk}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="resourceDisk" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.appFogCSS.event}">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoResourcesMemory}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="memory" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoStagingModel}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="model" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.appFogCSS.event}">
                <g:west size="100.0">
                    <g:Label text="{locale.appInfoStagingStack}" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:Label ui:field="stack" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50.0">
            <g:ScrollPanel width="100%" height="100%">
                <p1:CellTable width="100%" height="100%" ui:field="urisTable" focus="false" tableLayoutFixed="false"/>
            </g:ScrollPanel>
        </g:north>
        <g:north size="50.0">
            <g:ScrollPanel width="100%" height="100%">
                <p1:CellTable width="100%" height="100%" ui:field="servicesTable" tableLayoutFixed="false" focus="false"/>
            </g:ScrollPanel>
        </g:north>
        <g:north size="50.0">
            <g:ScrollPanel width="100%" height="100%">
                <p1:CellTable width="100%" height="100%" ui:field="environmentsTable" focus="false" tableLayoutFixed="false"/>
            </g:ScrollPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>