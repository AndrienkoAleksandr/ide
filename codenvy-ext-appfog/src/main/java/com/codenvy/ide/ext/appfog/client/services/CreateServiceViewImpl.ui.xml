<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.appfog.client.AppfogLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.appfog.client.AppfogResources'/>
    <ui:style>
        .alignRight {
            float: right;
        }

        .label {
            margin-top: 3px;
            float: left;
        }

        .optional {
            margin-left: 3px;
        }

        .spacing {
            margin-bottom: 6px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="470px" height="120px"
                       addStyleNames="{style.emptyBorder} {res.appFogCSS.login}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button width="50px" addStyleNames="{style.alignRight}" size="SMALL" text="{locale.cancelButton}" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button width="50px" addStyleNames="{style.alignRight} {style.space}" text="{locale.createButton}" size="SMALL"
                          type="SUCCESS" ui:field="btnCreate"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:FlowPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="26px" addStyleNames="{style.spacing}">
                    <g:west size="115.0">
                        <g:Label text="{locale.createServiceTypeField}" addStyleNames="{style.label} {res.appFogCSS.loginFont}"/>
                    </g:west>
                    <g:center>
                        <g:ListBox height="22px" width="100%" ui:field="servicesField"/>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="26px" addStyleNames="{style.spacing}">
                    <g:center>
                        <g:TextBox height="16px" width="347px" ui:field="nameField"/>
                    </g:center>
                    <g:west size="115.0">
                        <g:FlowPanel>
                            <g:Label text="{locale.createServiceNameField}" addStyleNames="{style.label} {res.appFogCSS.loginFont}"/>
                            <g:Label text="{locale.optional}" addStyleNames="{style.label} {style.optional} {res.appFogCSS.loginFont}"/>
                        </g:FlowPanel>
                    </g:west>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>