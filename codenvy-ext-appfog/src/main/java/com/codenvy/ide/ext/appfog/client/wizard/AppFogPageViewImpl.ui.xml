<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='res'
             type='com.codenvy.ide.ext.appfog.client.AppfogResources'/>
    <ui:style>
        .spacing {
            margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.appFogCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Target:" height="18px" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="targetField" width="97%" height="16px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.appFogCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Infrastructure:" height="18px" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="infraField" width="99%" height="22px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.appFogCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Application name:" height="18px" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="nameField" width="97%" height="16px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.appFogCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Location:" height="18px" addStyleNames="{res.appFogCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="urlField" width="97%" height="16px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>