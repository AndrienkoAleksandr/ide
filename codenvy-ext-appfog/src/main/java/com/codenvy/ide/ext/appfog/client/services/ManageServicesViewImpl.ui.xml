<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:p1='urn:import:com.google.gwt.user.cellview.client'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.appfog.client.AppfogLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.appfog.client.AppfogResources'/>
    <ui:style>
        .alignRight {
            float: right;
        }

        .space {
            float: right;
            margin-bottom: 7px;
        }

        .label {
            float: left;
            margin-bottom: 5px;
        }

        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="740px" height="300px" addStyleNames="{res.appFogCSS.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel width="100%" height="100%">
                <c:Button width="50px" addStyleNames="{style.alignRight}" text="{locale.closeButton}" size="SMALL" type="DANGER"
                          ui:field="btnClose"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="22.0">
            <g:FlowPanel>
                <g:Label text="{locale.boundedServices}" width="240px" addStyleNames="{style.label} {res.appFogCSS.login}"/>
                <g:Label text="{locale.provisionedServices}" width="380px" addStyleNames="{style.label} {res.appFogCSS.login}"/>
            </g:FlowPanel>
        </g:north>
        <g:east size="100.0">
            <g:FlowPanel>
                <c:Button width="60px" addStyleNames="{style.space}" text="{locale.addButton}" icon="{res.addButton}" size="SMALL"
                          ui:field="btnAdd"/>
                <c:Button width="60px" addStyleNames="{style.space}" text="{locale.deleteButton}" icon="{res.deleteButton}" size="SMALL"
                          ui:field="btnDelete"/>
            </g:FlowPanel>
        </g:east>
        <g:west size="240.0">
            <g:ScrollPanel>
                <p1:CellTable width="100%" height="100%" ui:field="boundedServices"/>
            </g:ScrollPanel>
        </g:west>
        <g:center>
            <g:ScrollPanel>
                <p1:CellTable width="100%" height="100%" ui:field="services"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>