<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.appfog.client.AppfogLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.appfog.client.AppfogResources'/>
    <ui:style>
        .floatLeft {
            float: left;
        }

        .floatRight {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="400px" height="126px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel width="100%" height="100%">
                <c:Button addStyleNames="{style.floatRight}" text="{locale.cancelButton}" size="SMALL" type="DANGER" ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.floatRight} {style.space}" text="{locale.deleteButton}" size="SMALL" type="SUCCESS"
                          ui:field="btnDelete"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="50.0">
            <g:SimplePanel>
                <g:Label ui:field="askLabel" height="100%" addStyleNames="{style.floatLeft} {res.appFogCSS.loginFont}" width="100%"/>
            </g:SimplePanel>
        </g:north>
        <g:center>
            <g:FlowPanel>
                <g:CheckBox text="{locale.deleteApplicationAskDeleteServices}" ui:field="deleteServicesField" height="18px"
                            addStyleNames="{style.floatLeft} {res.appFogCSS.loginFont}"/>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>