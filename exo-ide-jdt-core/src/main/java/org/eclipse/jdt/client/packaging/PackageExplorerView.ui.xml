<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"

        xmlns:pe="urn:import:org.eclipse.jdt.client.packaging.ui"
        >

    <ui:style>
        .itemsTree {
            z-index: 0;
            width: 100%;
            height: 100%;
        }
    </ui:style>

    <c:Border margin="1">
        <c:layer>
            <g:LayoutPanel>
                <g:layer top="0" height="28px">
                    <c:Toolbar height="28px">
                        <c:ToolbarItem rightDocked="true" paddingTop="2" paddingRight="2">
                            <c:IconButton ui:field="linkWithEditorButton" imageName="link-with-editor"
                                          title="Link with Editor"></c:IconButton>
                        </c:ToolbarItem>
                    </c:Toolbar>
                </g:layer>
                <g:layer top="28px" bottom="0">
                    <g:ScrollPanel width="100%" height="100%">
                        <g:FlowPanel>
                            <!--
                            <pe:PackageExplorerItemTree visible="false" styleName="{style.itemsTree}" ui:field="treeGrid" prefixId="navigation-" treeGridId="idePackageExplorerTreeGrid"></pe:PackageExplorerItemTree>
                             -->
                            <pe:PackageExplorerItemTree visible="false" styleName="{style.itemsTree}" ui:field="treeGrid"
                                                        treeGridId="idePackageExplorerTreeGrid"></pe:PackageExplorerItemTree>
                            <g:HTMLPanel ui:field="projectNotOpenedPanel" width="100%" height="100%">
                                <table style="width:100%; height:100%;">
                                    <tr style="vertical-align:middle;">
                                        <td style="text-align:center;">Project is not opened.</td>
                                    </tr>
                                </table>
                            </g:HTMLPanel>
                        </g:FlowPanel>
                    </g:ScrollPanel>
                </g:layer>
            </g:LayoutPanel>
        </c:layer>
    </c:Border>

</ui:UiBinder>
