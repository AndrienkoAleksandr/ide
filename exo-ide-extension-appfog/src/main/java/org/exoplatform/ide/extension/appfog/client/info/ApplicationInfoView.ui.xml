<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.appfog.client.info">

    <ui:with field='resource' type='org.exoplatform.ide.extension.appfog.client.AppfogClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.appfog.client.AppfogLocalizationConstant"></ui:with>

    <ui:style>
        .event {
            background: #f1f2f5;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer top="0" bottom="30px">
            <f:Border margin="10">
                <f:layer>
                    <g:FlowPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoName}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="nameLabel" iD="appNameLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px" styleName="{style.event}">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoState}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="stateLabel" iD="appStateLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoInstances}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="instancesLabel" iD="appInstancesLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px" styleName="{style.event}">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoVersion}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="versionLabel" iD="appVersionLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoResourcesDisk}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="diskLabel" iD="appDiskLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>


                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px" styleName="{style.event}">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoResourcesMemory}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="memoryLabel" iD="appMemoryLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoStagingModel}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="modelLabel" iD="appModelLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>

                        <g:DockLayoutPanel unit="PCT" width="100%" height="20px" styleName="{style.event}">
                            <g:west size="30">
                                <g:Label text="{locale.appInfoStagingStack}" height="18px"></g:Label>
                            </g:west>
                            <g:east size="70">
                                <f:Label ui:field="stackLabel" iD="appStackLabel"></f:Label>
                            </g:east>
                        </g:DockLayoutPanel>


                        <f:Border width="100%" height="15%">
                            <f:layer>
                                <e:ApplicationStringGrid width="100%" ui:field="applicationUrisGrid"></e:ApplicationStringGrid>
                            </f:layer>
                        </f:Border>

                        <f:Border width="100%" height="15%">
                            <f:layer>
                                <e:ApplicationStringGrid width="100%"
                                                         ui:field="applicationServicesGrid"></e:ApplicationStringGrid>
                            </f:layer>
                        </f:Border>

                        <f:Border width="100%" height="15%">
                            <f:layer>
                                <e:ApplicationStringGrid width="100%"
                                                         ui:field="applicationEnvironmentsGrid"></e:ApplicationStringGrid>
                            </f:layer>
                        </f:Border>
                    </g:FlowPanel>
                </f:layer>
            </f:Border>
        </g:layer>
        <g:layer bottom="0" height="30px" width="100%">
            <g:FlowPanel styleName="{style.center}" width="90px">
                <f:ImageButton ui:field="okButton" height="22" text="{locale.okButton}" imageResource="{resource.okButton}"
                               disabledImageResource="{resource.okButtonDisabled}"
                               buttonId="applicationInfoOkButton"></f:ImageButton>
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder> 