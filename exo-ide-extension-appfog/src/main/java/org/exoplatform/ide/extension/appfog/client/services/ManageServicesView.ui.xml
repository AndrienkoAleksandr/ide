<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.appfog.client.services">
    <ui:with field='resource' type='org.exoplatform.ide.extension.appfog.client.AppfogClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.appfog.client.AppfogLocalizationConstant'/>
    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }

        .space {
            float: right;
            margin-bottom: 7px;
        }

        .hSpace {
            float: left;
            margin-right: 15px;
        }

        .label {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            height: 22px;
            margin-bottom: 5px;
        }
    </ui:style>
    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="35">
            <g:DockLayoutPanel unit="PX">
                <g:north size="22">
                    <g:FlowPanel>
                        <f:Label value="{locale.boundedServices}" isHTML="true" styleName="{style.label}" width="240px"/>
                        <f:Label value="{locale.provisionedServices}" isHTML="true" styleName="{style.label}"/>
                    </g:FlowPanel>
                </g:north>
                <g:center>
                    <f:Border>
                        <f:layer>
                            <g:ScrollPanel>
                                <e:ProvisionedServicesGrid width="100%" height="100%"
                                                           ui:field="servicesGrid"></e:ProvisionedServicesGrid>
                            </g:ScrollPanel>
                        </f:layer>
                    </f:Border>
                </g:center>
                <g:west size="240">
                    <f:Border addStyleNames="{style.hSpace}">
                        <f:layer>
                            <g:ScrollPanel>
                                <e:BoundedServicesGrid width="100%" height="100%"
                                                       ui:field="boundedServicesGrid"></e:BoundedServicesGrid>
                            </g:ScrollPanel>
                        </f:layer>
                    </f:Border>
                </g:west>
                <g:east size="100">
                    <g:FlowPanel>
                        <f:ImageButton ui:field="addButton" width="90" height="22" text="{locale.addButton}"
                                       imageResource="{resource.addButton}"
                                       disabledImageResource="{resource.addButtonDisabled}"
                                       addStyleNames="{style.space}"></f:ImageButton>
                        <f:ImageButton ui:field="deleteButton" width="90" height="22" text="{locale.deleteButton}"
                                       imageResource="{resource.deleteButton}"
                                       disabledImageResource="{resource.deleteButtonDisabled}"
                                       addStyleNames="{style.space}"></f:ImageButton>
                    </g:FlowPanel>
                </g:east>
            </g:DockLayoutPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.closeButton}"
                           imageResource="{resource.cancelButton}"
                           disabledImageResource="{resource.cancelButtonDisabled}"
                           addStyleNames="{style.center}"></f:ImageButton>
        </f:layer>
    </f:Border>
</ui:UiBinder> 