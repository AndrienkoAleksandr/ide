<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.appfog.client.AppfogClientBundle'/>
   <ui:with field="locale" type="org.exoplatform.ide.extension.appfog.client.AppfogLocalizationConstant"></ui:with>

   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:VerticalPanel spacing="3" horizontalAlignment="center">

            <f:TextField ui:field="nameField" title="{locale.renameApplicationViewNameField}" width="100%"
                         height="22px"></f:TextField>

            <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
               <f:ImageButton ui:field="renameButton" width="90" height="22" text="{locale.renameButton}"
                              imageResource="{resource.okButton}"
                              disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
               <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}"
                              imageResource="{resource.cancelButton}"
                              disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
            </g:HorizontalPanel>
         </g:VerticalPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 