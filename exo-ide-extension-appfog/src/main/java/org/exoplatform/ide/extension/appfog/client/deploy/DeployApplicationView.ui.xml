<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

    <ui:with field='resource' type='org.exoplatform.ide.extension.appfog.client.AppfogClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.appfog.client.AppfogLocalizationConstant"></ui:with>

    <ui:style>
        .formLine {
            margin-top: 10px;
        }

        .cancelBbutton {
            position: absolute;
            right: 200px;
        }

        .innerBox {
            display: block;
            margin: 0 8px;
        }

        .title {
            height: 45px;
            display: block;
            width: 100%;
            border-bottom: 1px solid #ACACAC;
            margin-bottom: 30px;
            font-size: 14;
            font-weight: bold;
        }

        .image {
            float: left;
            width: 66px;
            height: 36px;
            margin-right: 10px;
        }

        .label {
            float: left;
            margin-top: 10px;
        }
    </ui:style>
    <f:Border margin="10" borderColor="transparent">
        <f:layer>
            <g:FlowPanel stylePrimaryName="{style.innerBox}">
                <g:FlowPanel styleName="{style.title}">
                    <g:Image resource="{resource.appfogLogo}" styleName="{style.image}"></g:Image>
                    <g:Label text="Deploy project to Appfog" styleName="{style.label}"></g:Label>
                </g:FlowPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
                    <g:west size="115">
                        <g:Label text="Target:" height="18px"></g:Label>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="targetField" width="100%" height="22px"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
                    <g:west size="115">
                        <g:Label text="Infrastructure: " height="18px"></g:Label>
                    </g:west>
                    <g:center>
                        <f:ComboBoxField ui:field="infraField" width="100%" height="22px"></f:ComboBoxField>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
                    <g:west size="115">
                        <g:Label text="Application name:" height="18px"></g:Label>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="nameField" width="100%" height="22px"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
                    <g:west size="115">
                        <g:Label text="Location:" height="18px"></g:Label>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="urlField" width="100%" height="22px"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </f:layer>

    </f:Border>
</ui:UiBinder>