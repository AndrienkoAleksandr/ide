<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .floatRight {
            float: right;
            margin-left: 5px;
        }

        .labelTitle {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .right {
            float: right;
        }

        .radioButton {
            margin-bottom: 3px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="550px" height="140px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:center>
            <g:FlowPanel>
                <g:FlowPanel width="100%" height="100%">
                    <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="Deployment mode">
                </g:Label>
                <g:FlowPanel width="100%" height="30px">
                    <g:RadioButton ui:field="deployToNewEnvironment" addStyleNames="{style.radioButton}" formValue="true"
                                   name="deploy" text="{constant.deployVersionToNewEnvironment}"
                                   width="100%" height="22px"/>
                    <g:RadioButton ui:field="deployToExistingEnvironment" addStyleNames="{style.radioButton}" formValue="false"
                                   name="deploy"
                                   text="{constant.deployVersionToExistingEnvironment}"
                                   width="45%" height="22px"/>
                    <g:ListBox ui:field="environmentsField" width="50%" height="22px" addStyleNames="{style.right}"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:center>
    <g:south size="30.0">
        <g:FlowPanel>
            <c:Button ui:field="cancelButton" width="90px" height="22px" text="{constant.cancelButton}" type="DANGER"
                      addStyleNames="{style.floatRight}"/>
            <c:Button ui:field="deployButton" width="90px" height="22px" text="{constant.deployButton}" type="SUCCESS"
                      addStyleNames="{style.floatRight}"/>
        </g:FlowPanel>
    </g:south>
</g:DockLayoutPanel>
        </ui:UiBinder>