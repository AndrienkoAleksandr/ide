<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="430px" height="160px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="cancelButton" width="50px" height="18px" text="{constant.cancelButton}" addStyleNames="{style.alignBtn}"
                          type="DANGER"/>
                <c:Button ui:field="launchButton" width="55px" height="18px" text="{constant.launchButton}"
                          addStyleNames="{style.alignBtn} {style.space}" type="SUCCESS"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="30px" styleName="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{constant.launchEnvironmentName}" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox width="270px" ui:field="envNameField"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="30px" styleName="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{constant.launchEnvironmentDescription}" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="envDescriptionField" width="270px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="30px" styleName="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{constant.launchEnvironmentSolutionStack}" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="solutionStackField" width="278px" visibleItemCount="1"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="30px" styleName="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{constant.launchEnvironmentVersions}" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="versionsField" width="278px" visibleItemCount="1"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>