<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .space {
            margin-right: 5px;
        }

        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .label {
            margin-top: 4px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="110px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="btnCancel" width="50px" height="18px" text="{constant.cancelButton}" addStyleNames="{style.alignBtn}"
                          type="DANGER"/>
                <c:Button ui:field="btnCreate" width="50px" height="18px" text="{constant.okButton}"
                          addStyleNames="{style.alignBtn} {style.space}" type="SUCCESS"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:west size="70.0">
                    <g:Label text="Name:" addStyleNames="{resource.awsCss.loginFont} {style.label}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="bucketNameField" width="270px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:west size="70.0">
                    <g:Label text="Region:" addStyleNames="{resource.awsCss.loginFont} {style.label}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="regionField" width="279px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>