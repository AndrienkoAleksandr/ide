<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .floatRight {
            float: right;
            margin-left: 5px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
        }

        .labelTitle {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .middle {
            margin-top: 3px;
        }

        .right {
            float: right;
        }

        .launch {
            border-bottom: 1px solid #DBDFE5;
            margin-bottom: 20px;
            font-weight: bold;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="550px" height="320px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:center>
            <g:FlowPanel>
                <g:FlowPanel ui:field="createApplicationStep" width="100%" height="100%">
                    <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="General Information">
                    </g:Label>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.createApplicationNameField}" addStyleNames="{style.labelH} {style.middle}"
                                 width="22%"/>
                        <g:TextBox ui:field="appNameField" width="76%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.createApplicationDescriptionField}" addStyleNames="{style.labelH} {style.middle}"
                                 width="22%"/>
                        <g:TextBox ui:field="appDescField" width="76%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                    <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="{constant.createApplicationS3Title}">
                    </g:Label>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.createApplicationS3BucketField}" addStyleNames="{style.labelH} {style.middle}"
                                 width="22%"/>
                        <g:TextBox ui:field="s3BucketField" width="76%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.createApplicationS3KeyField}" addStyleNames="{style.labelH} {style.middle}"
                                 width="22%"/>
                        <g:TextBox ui:field="s3KeyField" width="76%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                </g:FlowPanel>
                <g:FlowPanel ui:field="createEnvironmentStep" width="100%" height="100%" visible="false">
                    <g:FlowPanel width="100%" height="35px" styleName="{style.launch}">
                        <g:CheckBox ui:field="launchNewEnv" width="100%" height="40px"
                                    HTML="{constant.launchEnvironmentLaunch}"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.launchEnvironmentName}" addStyleNames="{style.labelH} {style.middle}" width="30%"/>
                        <g:TextBox ui:field="envNameField" width="69%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.launchEnvironmentDescription}" addStyleNames="{style.labelH} {style.middle}" width="30%"/>
                        <g:TextBox ui:field="envDescField" width="69%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                    <g:FlowPanel width="100%" height="30px">
                        <g:Label text="{constant.launchEnvironmentSolutionStack}" addStyleNames="{style.labelH} {style.middle}"
                                 width="30%"/>
                        <g:ListBox ui:field="solutionStack" width="69%" height="22px" addStyleNames="{style.right}"/>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
        <g:south size="46.0">
            <g:FlowPanel>
                <c:Button ui:field="btnCancel" width="90px" height="22px" text="{constant.cancelButton}" type="DANGER"
                          addStyleNames="{style.floatRight}"/>
                <c:Button ui:field="btnFinish" width="90px" height="22px" text="{constant.finishButton}" type="SUCCESS"
                          addStyleNames="{style.floatRight}"/>
                <c:Button ui:field="btnNext" width="90px" height="22px" text="{constant.nextButton}" type="DEFAULT"
                          addStyleNames="{style.floatRight}"/>
                <c:Button ui:field="btnBack" width="90px" height="22px" text="{constant.backButton}" type="DEFAULT"
                          addStyleNames="{style.floatRight}"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>