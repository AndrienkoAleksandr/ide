<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .padding {
            padding: 15px;
        }
        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="595px" height="265px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:north size="30.0">
            <g:FlowPanel>
                <c:Button ui:field="editConfigurationButton" width="80px" height="18px" text="Edit" type="DEFAULT" />
                <c:Button ui:field="restartEnvironmentButton" width="80px"  height="18px" text="Restart" type="DEFAULT" />
                <c:Button ui:field="rebuildEnvironmentButton" width="80px"  height="18px" text="Rebuild" type="DEFAULT" />
                <c:Button ui:field="terminateEnvironmentButton" width="80px"  height="18px" text="Terminate" type="DEFAULT" />
                <c:Button ui:field="logsEnvironmentButton" width="100px"  height="18px" text="Snapshot logs" type="DEFAULT" />
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:FlowPanel styleName="{style.padding}">
                <g:FlowPanel width="100%" height="220px">
                    <l:CellTable ui:field="environmentInfoCellTable" height="220px" width="580px" />
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>