<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            font-weight: bold;
        }

        .labelTitle {
            font-size: 12px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
            color: #597EAA;
        }

        .middle {
            margin-top: 3px;
        }

        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .textinput {
            background-color: #FFFFFF !important;
            color: #000000 !important;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="595px" height="265px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:center>
            <g:FlowPanel styleName="{style.padding}">
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="EC2 Instance Health Check">
                </g:Label>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.applicationName}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px"/>
                    <g:TextBox ui:field="nameField" width="350px" height="22px"
                               addStyleNames="{style.textinput} {style.left} {style.space}" readOnly="true"/>
                    <c:Button ui:field="deleteApplicationButton" icon="{resource.delete}"
                              addStyleNames="{style.left}" type="DANGER"/>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.applicationDescription}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px"/>
                    <g:TextBox ui:field="descriptionField" width="350px" height="22px"
                               addStyleNames="{style.textinput} {style.left} {style.space}" readOnly="true"/>
                    <c:Button ui:field="editDescriptionButton" icon="{resource.edit}"
                              addStyleNames="{style.left}" type="DEFAULT"/>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.applicationCreationDate}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px"/>
                    <g:Label ui:field="creationDateField" width="60%" height="22px"
                             addStyleNames="{style.textinput} {style.left} {style.space}"/>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.applicationUpdatedDate}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px"/>
                    <g:Label ui:field="updatedDateField" width="60%" height="22px"
                             addStyleNames="{style.textinput} {style.left} {style.space}"/>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <c:Button text="{constant.createVersionButton}" ui:field="createVersionButton" width="130px" height="22px"
                              type="DEFAULT"/>
                    <c:Button text="{constant.launchEnvironmentButton}" ui:field="launchEnvironmentButton" width="170px" height="22px"
                              type="DEFAULT"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>