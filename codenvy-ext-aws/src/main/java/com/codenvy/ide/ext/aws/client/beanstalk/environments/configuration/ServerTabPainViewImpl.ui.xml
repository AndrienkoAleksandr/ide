<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            font-weight: bold;
        }

        .middle {
            margin-top: 3px;
        }

        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .textinput {
            background-color: #FFFFFF !important;
            color: #000000 !important;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="850px" height="265px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:center>
            <g:FlowPanel styleName="{style.padding}">
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationEC2InstanceType}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px" />
                    <g:ListBox ui:field="ec2InstanceTypeField" width="500px" height="22px"
                                  addStyleNames="{style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationEC2SecurityGroups}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px" />
                    <g:TextBox ui:field="ec2SecurityGroupsField" width="500px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationKeyName}" addStyleNames="{style.labelH} {style.middle}" width="150px" />
                    <g:TextBox ui:field="keyNameField" width="500px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationMonitoringInterval}" addStyleNames="{style.labelH} {style.middle}"
                             width="150px" />
                    <g:ListBox ui:field="monitoringIntervalField" width="500px" height="22px"
                                  addStyleNames="{style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationImageId}" addStyleNames="{style.labelH} {style.middle}" width="150px" />
                    <g:TextBox ui:field="imageIdField" width="500px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>