<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .emptyBorder {
            margin: 6px;
        }

        .floatRight {
            float: right;
            margin-left: 5px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
        }

        .labelTitle {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .middle {
            margin-top: 3px;
        }

        .right {
            float: right;
        }

        .left {
            float: left;
        }

        .padding0 {
            padding: 0px !important;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="550px" height="240px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:north size="35.0">
            <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="General Information"/>
        </g:north>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label text="{constant.createVersionNameField}" addStyleNames="{style.labelH} {style.middle}"
                         width="22%"/>
                <g:TextBox ui:field="versionLabelField" width="76%" height="22px" addStyleNames="{style.left} {style.padding0}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label text="{constant.createVersionDescriptionField}" addStyleNames="{style.labelH} {style.middle}"
                         width="22%"/>
                <g:TextBox ui:field="descriptionField" width="76%" height="22px" addStyleNames="{style.left} {style.padding0}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="35.0">
            <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="{constant.createApplicationS3Title}" />
        </g:north>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label text="{constant.createApplicationS3BucketField}" addStyleNames="{style.labelH} {style.middle}"
                         width="22%"/>
                <g:TextBox ui:field="s3BucketField" width="76%" height="22px" addStyleNames="{style.left} {style.padding0}"/>
            </g:FlowPanel>
        </g:north>
        <g:north size="30.0">
            <g:FlowPanel>
                <g:Label text="{constant.createApplicationS3KeyField}" addStyleNames="{style.labelH} {style.middle}"
                         width="22%"/>
                <g:TextBox ui:field="s3KeyField" width="76%" height="22px" addStyleNames="{style.left} {style.padding0}"/>
            </g:FlowPanel>
        </g:north>
        <g:south size="30.0">
            <g:FlowPanel>
                <c:Button ui:field="cancelButton" width="90px" height="22px" text="{constant.cancelButton}" type="DANGER"
                          addStyleNames="{style.floatRight}"/>
                <c:Button ui:field="createButton" width="90px" height="22px" text="{constant.finishButton}" type="SUCCESS"
                          addStyleNames="{style.floatRight}"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>