<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="380px" height="160px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button ui:field="btnCancel" width="50px" height="18px" text="{constant.cancelButton}" addStyleNames="{style.alignBtn}"
                          type="DANGER"/>
                <c:Button ui:field="btnUpdate" width="50px" height="18px" text="{constant.updateButton}"
                          addStyleNames="{style.alignBtn} {style.space}" type="SUCCESS"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="130.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:center>
                    <g:FlowPanel>
                        <g:Label text="Enter new application description:" height="22px" width="100%" />
                        <g:TextArea width="370px" height="100px" ui:field="descriptionField"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>