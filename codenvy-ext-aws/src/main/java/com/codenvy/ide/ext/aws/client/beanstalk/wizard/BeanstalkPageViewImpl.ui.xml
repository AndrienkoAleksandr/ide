<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:style>
        .spacing {
            margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{resource.awsCss.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Application name:" height="18px" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="appNameField" width="97%" height="16px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{resource.awsCss.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Environment name:" height="18px" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="envNameField" width="97%" height="16px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{resource.awsCss.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Solution stack: " height="18px" addStyleNames="{resource.awsCss.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="solutionStack" width="99%" height="22px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>