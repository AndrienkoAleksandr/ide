<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ext.aws.client.beanstalk.environments.configuration">
    <ui:with field='resource' type='com.codenvy.ide.ext.aws.client.AWSResource'/>
    <ui:with field='constant' type='com.codenvy.ide.ext.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            font-weight: bold;
        }

        .labelTitle {
            font-size: 12px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
            color: #597EAA;
        }

        .middle {
            margin-top: 3px;
        }

        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .textinput {
            background-color: #FFFFFF !important;
            color: #000000 !important;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="700px" height="230px" addStyleNames="{resource.awsCss.login} {style.emptyBorder}">
        <g:center>
            <g:FlowPanel styleName="{style.padding}">
                <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="EC2 Instance Health Check">
                </g:Label>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationAppHealthCheckUrl}" addStyleNames="{style.labelH} {style.middle}"
                             width="240px" />
                    <c:ModifiableTextBox ui:field="appHealthCheckUrlField" width="410px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationHealthCheckInterval}" addStyleNames="{style.labelH} {style.middle}"
                             width="240px" />
                    <c:ModifiableTextBox ui:field="healthCheckIntervalField" width="410px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationHealthCheckTimeout}" addStyleNames="{style.labelH} {style.middle}"
                             width="240px" />
                    <c:ModifiableTextBox ui:field="healthCheckTimeoutField" width="410px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationHealthyThreshold}" addStyleNames="{style.labelH} {style.middle}"
                             width="240px" />
                    <c:ModifiableTextBox ui:field="healthyThresholdField" width="410px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{constant.editConfigurationUnhealthyThreshold}" addStyleNames="{style.labelH} {style.middle}"
                             width="240px" />
                    <c:ModifiableTextBox ui:field="unhealthyThresholdField" width="410px" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}" />
                </g:FlowPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>