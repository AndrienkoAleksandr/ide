<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <display-name>Codenvy API</display-name>
    <context-param>
        <param-name>javax.ws.rs.Application</param-name>
        <param-value>com.codenvy.api.bootstrap.servlet.ApiDeployApplication</param-value>
    </context-param>
    <filter>
        <filter-name>env</filter-name>
        <filter-class>com.codenvy.api.bootstrap.servlet.EnvironmentFilter</filter-class>
    </filter>
    <listener>
        <listener-class>org.everrest.core.servlet.EverrestInitializedListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.codenvy.api.bootstrap.servlet.ApiBootstrap</listener-class>
    </listener>
    <filter-mapping>
        <filter-name>env</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>EverrestServlet</servlet-name>
        <servlet-class>org.everrest.core.servlet.EverrestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EverrestServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>