<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.ssh.client.SshLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .withoutPadding {
            padding: 0;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="400px" height="350px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.closeButton}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnClose"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:FlowPanel addStyleNames="{style.emptyBorder}">
                <g:SimplePanel width="100%" height="100%">
                    <g:TextArea ui:field="key" width="100%" height="100%" readOnly="true" addStyleNames="{style.withoutPadding}"/>
                </g:SimplePanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>