<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.ssh.client.SshLocalizationConstant'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .spacing {
            margin-bottom: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="350px" height="145px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.cancelButton}" width="60px" size="SMALL" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.uploadButton}" width="60px" size="SMALL"
                          type="SUCCESS" ui:field="btnUpload"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="50.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="20.0">
                    <g:Label text="{locale.hostFieldTitle}"/>
                </g:north>
                <g:center>
                    <g:TextBox width="342px" height="16px" ui:field="host"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="20.0">
                    <g:Label text="{locale.fileNameFieldTitle}"/>
                </g:north>
                <g:center>
                    <g:FormPanel ui:field="uploadForm"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="20.0">
            <g:Label ui:field="message"/>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>