<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='locale' type='org.exoplatform.ide.extension.googleappengine.client.GAELocalization'/>
    <ui:with field='resource' type='org.exoplatform.ide.extension.googleappengine.client.GAEClientBundle'/>
    <ui:style>
        .title {
            height: 75px;
            display: block;
            width: 100%;
            border-bottom: 1px solid #ACACAC;
            margin-bottom: 30px;
            font-size: 14;
            font-weight: bold;
        }

        .image {
            float: left;
            width: 64px;
            height: 64px;
            margin-right: 10px;
        }

        .innerBox {
            display: block;
            margin: 0 8px;
        }

        .label {
            float: left;
            margin-top: 25px;
        }
    </ui:style>
    <f:Border margin="10" borderColor="transparent">
        <f:layer>
            <g:FlowPanel styleName="{style.innerBox}">
                <g:FlowPanel styleName="{style.title}">
                    <g:Image resource="{resource.googleAppEngineLogo}" styleName="{style.image}"></g:Image>
                    <g:Label text="Deploy project to Google App Engine" styleName="{style.label}"></g:Label>
                </g:FlowPanel>
                <g:DockLayoutPanel width="100%" unit="PX" height="22px">
                    <g:west size="230">
                        <g:CheckBox ui:field="useExistedField" HTML="{locale.deployApplicationUseExistedIdField}"></g:CheckBox>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="applicationIdField" width="100%" height="22px" enabled="false"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder> 