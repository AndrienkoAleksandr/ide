<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='locale' type='org.exoplatform.ide.extension.googleappengine.client.GAELocalization' />
   <ui:style>
      .box {
      	margin-left: 10px;
      	margin-right: 10px;
      	margin-top: 15px;
      	height: 35px;
      	width: 97%;
      }
      
      .line {
      	border-bottom: 1px solid #C4C4C4;
      }
      
      .left {
      	float: left;
      	margin-right: 10px;
      }
   </ui:style>
   <f:Border borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:DockLayoutPanel  height="100%" width="100%" unit="PCT">
               <g:west size="33">
                  <g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="configureBackendButton" width="170px" height="20px" text="{locale.configureBackendButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="deleteBackendButton" width="170px" height="20px" text="{locale.deleteBackendButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="getListBackendsButton" width="170px" height="20px" text="{locale.getListBackendsButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                  </g:FlowPanel>
               </g:west>
               <g:center>
                  <g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="rollbackBackendButton" width="170px" height="20px" text="{locale.rollbackBackendButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="rollbackAllBackendsButton" width="170px" height="20px" text="{locale.rollbackAllBackendsButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="setBackendStateButton" width="170px" height="20px" text="{locale.setBackendStateButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                  </g:FlowPanel>
               </g:center>
               <g:east size="33">
                  <g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="updateAllBackendsButton" width="170px" height="20px" text="{locale.updateAllBackendsButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="updateBackendButton" width="170px" height="20px" text="{locale.updateBackendButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                     <g:FlowPanel addStyleNames="{style.box} {style.line}">
                        <g:Button ui:field="updateBackendsButton" width="170px" height="20px" text="{locale.updateBackendsButton}"
                           addStyleNames="{style.left}"></g:Button>
                     </g:FlowPanel>
                  </g:FlowPanel>
               </g:east>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder>
