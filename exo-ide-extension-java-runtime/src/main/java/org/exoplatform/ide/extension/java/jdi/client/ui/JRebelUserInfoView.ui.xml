<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
	<ui:with field="resource"
		type="org.exoplatform.ide.extension.java.jdi.client.DebuggerClientBundle" />
	<ui:with field="locale"
		type="org.exoplatform.ide.extension.java.jdi.client.DebuggerLocalizationConstant"></ui:with>
	<ui:style>
		.center {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		
		.floatLeft {
			float: left;
		}
		
		.label {
			margin-bottom: 5px;
			margin-left: 20px;
			font-size: 11px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
		}
		
		.spacing {
			margin-top: 10px;
			margin-bottom: 22px;
		}
		
		.errorMessage {
			font-weight: bold;
			color: #ff0000;
		}
	</ui:style>

	<g:FlowPanel width="100%" height="100%">
		<g:Label width="92%" addStyleNames="{style.label} {style.spacing}" text="{locale.jRebelUserInfoViewLabelWelcome1}"></g:Label>
		<g:Label width="92%" addStyleNames="{style.label} {style.spacing}" text="{locale.jRebelUserInfoViewLabelWelcome2}"></g:Label>
		<g:DockLayoutPanel width="100%" unit="PX" height="34px">
			<g:west size="120">
				<g:Label width="100%" styleName="{style.label}" text="First name:"></g:Label>
			</g:west>
			<g:center>
				<f:TextInput ui:field="jRebelProfileFirstName" width="92%"
					height="22px"></f:TextInput>
			</g:center>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel width="100%" unit="PX" height="34px">
			<g:west size="120">
				<g:Label width="100%" styleName="{style.label}" text="Last name:"></g:Label>
			</g:west>
			<g:center>
				<f:TextInput ui:field="jRebelProfileLastName" width="92%"
					height="22px"></f:TextInput>
			</g:center>
		</g:DockLayoutPanel>
		<g:DockLayoutPanel width="100%" unit="PX" height="22px">
			<g:west size="120">
				<g:Label width="100%" styleName="{style.label}" text="Phone number:"></g:Label>
			</g:west>
			<g:center>
				<f:TextInput ui:field="jRebelProfilePhone" width="92%"
					height="22px"></f:TextInput>
			</g:center>
		</g:DockLayoutPanel>

		<f:Label ui:field="jRebelErrorMessageLabel" styleName="{style.label}" addStyleNames="{style.errorMessage}" height="28px"></f:Label>

		<g:FlowPanel width="190px" styleName="{style.center}">
			<f:ImageButton ui:field="cancelButton" width="90px"
				height="22px" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
				disabledImageResource="{resource.cancelButtonDisabled}"
				addStyleNames="{style.floatLeft}"></f:ImageButton>
			<g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
			<f:ImageButton ui:field="okButton" width="90px" height="22px"
				text="{locale.okButton}" imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"
				addStyleNames="{style.floatLeft}"></f:ImageButton>
		</g:FlowPanel>
	</g:FlowPanel>

</ui:UiBinder> 