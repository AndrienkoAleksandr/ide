<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

   <!-- Servlets -->
   <servlet>
      <servlet-name>greetServlet</servlet-name>
      <servlet-class>org.exoplatform.ide.server.GreetingServiceImpl</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>greetServlet</servlet-name>
      <url-pattern>/IDE/greet</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>fileServlet</servlet-name>
      <servlet-class>org.exoplatform.ide.server.services.FileSystemSeriveImpl</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>fileServlet</servlet-name>
      <url-pattern>/IDE/files</url-pattern>
   </servlet-mapping>

   <!-- Default page to serve -->
   <welcome-file-list>
      <welcome-file>IDE.html</welcome-file>
   </welcome-file-list>

</web-app>
