<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
   xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">
  <component>
      <key>org.exoplatform.ide.codeassistant.api.CodeAssistantStorage</key>
      <type>org.exoplatform.ide.codeassistant.framework.server.impl.CodeAssistantJcrImpl</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.groovy.server.GroovyCodeAssistant</type>
   </component>
   
   <component>
      <type>org.exoplatform.ide.extension.java.server.JavaCodeAssistant</type>
   </component>

   <component>
      <type>org.exoplatform.ide.codeassistant.framework.server.impl.storage.ClassInfoStorage</type>
      <init-params>
         <object-param>
            <name>classinfostrorage.configuration</name>
            <object type="org.exoplatform.ide.codeassistant.framework.server.extractors.CodeAssistantConfig">
               <field name="wsName">
                  <string>production</string>
               </field>
               <field name="runInThread">
                  <boolean>true</boolean>
               </field>
               <field name="jars">
                  <collection type="java.util.ArrayList">
                     <value>
                        <object type="org.exoplatform.ide.codeassistant.framework.server.extractors.JarEntry">
                           <field name="jarPath">
                              <string>${jre.lib}${file.separator}rt.jar</string>
                           </field>
                           <field name="includePkg">
                              <collection type="java.util.ArrayList">
                                 <value>
                                    <string>java.lang</string>
                                 </value>
                                 <value>
                                    <string>java.util</string>
                                 </value>
                              </collection>
                           </field>
                        </object>
                     </value>
                  </collection>
               </field>
            </object>
         </object-param>
      </init-params>
   </component>

   <component>
      <type>org.exoplatform.ide.codeassistant.framework.server.impl.storage.DocStorage</type>
      <init-params>
         <object-param>
            <name>docstrorage.configuration</name>
            <object type="org.exoplatform.ide.codeassistant.framework.server.extractors.CodeAssistantConfig">
               <field name="wsName">
                  <string>production</string>
               </field>
               <field name="runInThread">
                  <boolean>true</boolean>
               </field>
               <field name="jars">
                  <collection type="java.util.ArrayList">

                     <value>
                        <object type="org.exoplatform.ide.codeassistant.framework.server.extractors.JarEntry">
                           <field name="jarPath">
                              <string>${javasrc}</string>
                           </field>
                           <field name="includePkg">
                              <collection type="java.util.ArrayList">
                                 <value>
                                    <string>java.lang</string>
                                 </value>
                                 <value>
                                    <string>java.util</string>
                                 </value>
                              </collection>
                           </field>
                        </object>
                     </value>
                  </collection>
               </field>
            </object>
         </object-param>
      </init-params>
   </component>
</configuration>