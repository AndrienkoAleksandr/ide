<module rename-to="IDE">
   <!-- Inherit the core Web Toolkit stuff.                        -->
   <inherits name='com.google.gwt.user.User' />

   <!-- Inherit the default GWT style sheet.  You can change       -->
   <!-- the theme of your GWT application by uncommenting          -->
   <!-- any one of the following lines.                            -->
   <inherits name='com.google.gwt.user.theme.standard.Standard' />
   <inherits name="com.google.gwt.gadgets.Gadgets" />
   <inherits name="com.google.gwt.http.HTTP" />
   <inherits name='com.google.gwt.user.Debug' />
   <inherits name='com.google.gwt.xml.XML' />
   <inherits name="com.google.gwt.i18n.I18N" />

   <script src="applicationInitializer.js" />

   <!-- load GWT Commons Libraries -->
   <inherits name='org.exoplatform.gwtframework.commons.Commons' />
   <inherits name='org.exoplatform.gwtframework.ui.UI' />
   <inherits name='org.exoplatform.ide.client.module.IDEVirtualFileSystem' />
   <inherits name='org.exoplatform.ide.client.framework.IDEClientFramework' />
   
   <!-- EDITOR EXTENSIONS -->
   <inherits name="org.exoplatform.ide.editor.extension.gadget.GadgetEditorExtension" />
   <inherits name="org.exoplatform.ide.editor.extension.groovy.GroovyEditorExtension" />
   <inherits name="org.exoplatform.ide.editor.extension.gtmpl.GtmplEditorExtension" />
   <inherits name="org.exoplatform.ide.editor.extension.chromattic.ChromatticEditorExtension" />
   <inherits name="org.exoplatform.ide.editor.extension.netvibes.NetvibesEditorExtension" />
   <inherits name="org.exoplatform.ide.editor.extension.java.JavaEditorExtension" />
   
   <!-- EXTENSIONS -->
   <inherits name='org.exoplatform.ide.extension.netvibes.NetvibesExtension' />
   <inherits name='org.exoplatform.ide.extension.groovy.GroovyExtension' />
   <inherits name='org.exoplatform.ide.extension.gadget.GadgetExtension' />
   <inherits name='org.exoplatform.ide.extension.chromattic.ChromatticExtension' />
   <inherits name='org.exoplatform.ide.git.GitExtension' />
   
   <inherits name='org.exoplatform.ide.Views' />
   
   <!-- Specify the app entry point class. -->
   <entry-point class='org.exoplatform.ide.client.IDEGadget' />

   <!-- Specify the application specific style sheet. -->
   <stylesheet src='IDE.css' />

</module>
