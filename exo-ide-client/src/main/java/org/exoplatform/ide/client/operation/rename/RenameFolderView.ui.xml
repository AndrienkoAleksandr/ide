<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle'/>
    <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
    <ui:with field="ideNavigationLocale" type="org.exoplatform.ide.client.messages.IdeNavigationLocalizationConstant"></ui:with>

    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .label {
            margin-bottom: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
        }

        .floatLeft {
            float: left;
        }
    </ui:style>

    <f:Border margin="20" borderColor="transparent">
        <f:layer top="0" bottom="22">
            <g:FlowPanel>
                <g:Label styleName="{style.label}" text="{ideNavigationLocale.renameItemTo}" width="100%"></g:Label>
                <f:TextInput ui:field="nameField" width="100%" height="22px"></f:TextInput>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <f:ImageButton ui:field="renameButton" width="90px" height="22" text="{ideNavigationLocale.renameItemRenameBtn}"
                               imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}"
                               addStyleNames="{style.floatLeft}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90px" height="22" text="{ideLocale.cancelButton}"
                               imageResource="{resource.cancel}"
                               disabledImageResource="{resource.cancelDisabled}" styleName="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>

</ui:UiBinder>