<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:rd="urn:import:org.exoplatform.ide.client.restdiscovery.ui">
   <ui:with type="org.exoplatform.ide.client.IdeLocalizationConstant" field="idelocal"></ui:with>
   <ui:with type="org.exoplatform.ide.client.messages.IdePreferencesLocalizationConstant" field="preflocal"></ui:with>

   <g:LayoutPanel>
      <g:layer bottom="40px" top="0px">
         <g:SplitLayoutPanel>
            <g:west size="200">
               <c:Border margin="5">
                  <c:layer>
                     <g:ScrollPanel width="100%" height="100%">
                        <rd:RestServiceTree width="100%" height="100%" ui:field="treeGrid" treeId="exoRestServicesDiscoveryTree"></rd:RestServiceTree>
                     </g:ScrollPanel>
                  </c:layer>
               </c:Border>
            </g:west>
            <g:center>
               <c:Border borderSize="5" borderColor="transparent">
                  <c:layer top="0px" height="120px">
                     <g:FlowPanel width="100%">
                        <c:TextField ui:field="pathField" name="ideMethodPathField" title="{preflocal.restServicesDiscoveryPath}"
                           height="40px" showDisabled="false" visible="true" titleOrientation="top" width="100%"></c:TextField>
                        <c:TextField ui:field="requestTypeField" name="ideRequestType"
                           title="{preflocal.restServicesDiscoveryRequestMediaType}" height="40px" showDisabled="false" width="100%" visible="true"
                           titleOrientation="top"></c:TextField>
                        <c:TextField ui:field="responseTypeField" name="ideResponseType"
                           title="{preflocal.restServicesDiscoveryResponseMediaType}" height="40px" width="100%" showDisabled="false" visible="true"
                           titleOrientation="top"></c:TextField>
                     </g:FlowPanel>
                  </c:layer>
                  <c:layer bottom="0px" top="126px">
                  <c:Border ui:field="parametersListGridContainer">
                     <c:layer>
                        <rd:RestServiceParameterListGrid ui:field="parametersListGrid"
                           ID="ideRestServiceDiscoveryParameters"></rd:RestServiceParameterListGrid>
                     </c:layer>
                  </c:Border>
                  </c:layer>
               </c:Border>
            </g:center>
         </g:SplitLayoutPanel>
      </g:layer>
      <g:layer height="40px" bottom="0px">

         <g:HorizontalPanel spacing="5" width="100%" height="100%">
            <g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
               <c:ImageButton text="{idelocal.okButton}" imageName="ok" ui:field="okButton" buttonId="exoRestServicesDiscoveryOkButton">
               </c:ImageButton>
            </g:cell>
         </g:HorizontalPanel>

      </g:layer>
   </g:LayoutPanel>

</ui:UiBinder>
 