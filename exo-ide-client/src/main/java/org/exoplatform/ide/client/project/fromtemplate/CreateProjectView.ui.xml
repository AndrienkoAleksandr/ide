<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.client.project.fromtemplate">

   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
   <ui:with field="templateLocale" type="org.exoplatform.ide.client.messages.IdeTemplateLocalizationConstant"></ui:with>

   <ui:style>
      .buttonsBox {
      display: block;
      margin: 0 8px;
      }

      .left-float {
      float: left;
      }

      .rightButton {
      position: absolute;
      right: 0;
      }

      .formLine {
      margin-top:
      8px;
      }


      .topBox {
      background-color: #eef6ff;
      vertical-align: middle;
      border-bottom: 1px solid #A6ABAF;
      width: 100%;
      height: 60px;
      }

      .labelValue {
      font-weight: bold;
      }

      .labelSubtitle {
      font-weight: bold;
      font-align: center;
      }

      .middle {
      position: absolute;
      right: 100px;
      }

      .labelTitle {
      font-size: medium;
      font-weight: bold;
      vertical-align: middle;
      padding-left: 10px;
      padding-top: 10px;
      }

      .labelDescription {
      font-style: italic;
      vertical-align: middle;
      padding-left: 10px;
      padding-top: 5px;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{style.topBox}">
            <g:Label text="New Project" styleName="{style.labelTitle}"></g:Label>
            <g:Label text="new project" styleName="{style.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="60px" bottom="33px">
         <f:Border margin="8">
            <f:layer>
               <g:ScrollPanel>
                  <e:ProjectTemplateListGrid width="100%" ui:field="templateListGrid"></e:ProjectTemplateListGrid>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </g:layer>

      <g:layer height="33px" bottom="0">
         <g:FlowPanel width="auto" styleName="{style.buttonsBox}">
            <g:DockLayoutPanel width="260px" unit="PX" height="22px" stylePrimaryName="{style.left-float}">
               <g:west size="60">
                  <g:Label text="Name" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="projectNameField" width="160px" height="22px"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="cancelButton" styleName="{style.middle}" width="90px" text="{locale.cancelButton}" imageName="cancel"
               buttonId="ideCreateNewProjectCancelButton"></f:ImageButton>

            <f:ImageButton ui:field="nextButton" text="Next" width="90px" styleName="{style.rightButton}" imageResource="{resource.next}"
               disabledImageResource="{resource.nextDisabled}" buttonId="ideCreateNewProjectNextButton"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>

   </g:LayoutPanel>
</ui:UiBinder> 