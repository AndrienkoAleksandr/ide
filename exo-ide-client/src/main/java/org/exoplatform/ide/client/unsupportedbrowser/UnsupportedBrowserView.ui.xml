<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
	<ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
    <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
	<ui:style>
		.center {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}

		.label1 {
			font-size: 18px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-weight: bold;
			border-top: 1px solid #DBDFE5;
			border-bottom: 1px solid #DBDFE5;
			margin-top: 10px;
			margin-bottom: 10px;
			color: #597EAA;
		}

		.label2 {
			font-size: 12px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			font-weight: bold;
			margin-top: 30px;
			margin-bottom: 20px;
		}

		.anchor {
			font-size: 12px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
		}

		.anchor1 {
			padding-left: 20px;
		}

		.anchor2 {
			padding-left: 35px;
		}

		.anchor3 {
			padding-left: 45px;
		}

		.spacing {
			margin-top: 10px;
			margin-bottom: 10px;
		}

		.image {
			height: 64px;
			width: 100%;
		}
	</ui:style>

	<f:Border margin="15" borderColor="transparent">
		<f:layer>
			<g:FlowPanel>
				<g:FlowPanel width="100%" addStyleNames="{style.spacing}">
				    <g:Label width="100%" addStyleNames="{style.label1}" text="{locale.warningTitle}"></g:Label>
				    <g:Label width="100%" addStyleNames="{style.label2}" text="{locale.proposeBrowsersTitile}"></g:Label>
				</g:FlowPanel>
				<g:HorizontalPanel horizontalAlignment="center" width="100%">
					<g:FlowPanel width="100%" height="64px">
						<g:Image resource="{resource.chrome}" styleName="{style.image}"></g:Image>
		            </g:FlowPanel>
					<g:FlowPanel width="100%" height="64px">
						<g:Image resource="{resource.firefox}" styleName="{style.image}"></g:Image>
		            </g:FlowPanel>
					<g:FlowPanel width="100%" height="64px">
						<g:Image resource="{resource.safari}" styleName="{style.image}"></g:Image>
		            </g:FlowPanel>
				</g:HorizontalPanel>
				<g:FlowPanel width="100%">
					<g:Anchor href="http://www.google.com/chrome/" text="Google Chrome" target="_blank"
						addStyleNames="{style.anchor} {style.anchor1}"></g:Anchor>
					<g:Anchor href="http://www.firefox.com/" text="Mozilla Firefox" target="_blank"
						addStyleNames="{style.anchor} {style.anchor2}"></g:Anchor>
					<g:Anchor href="http://www.apple.com/safari/" text="Apple Safari" target="_blank"
						addStyleNames="{style.anchor} {style.anchor3}"></g:Anchor>
	            </g:FlowPanel>
			</g:FlowPanel>
		</f:layer>
		<f:layer height="22px" bottom="0">
			<g:FlowPanel width="190px" styleName="{style.center}">
				<f:ImageButton ui:field="continueButton" width="90" height="22" text="{locale.continueButton}"
					addStyleNames="{style.center}"></f:ImageButton>
			</g:FlowPanel>
		</f:layer>
	</f:Border>

</ui:UiBinder>
