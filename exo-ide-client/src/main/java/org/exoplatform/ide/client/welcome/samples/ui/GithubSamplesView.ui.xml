<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.client.welcome.samples.ui">

   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="welcomeLocale" type="org.exoplatform.ide.client.messages.IdeWelcomeLocalizationConstant"></ui:with>
   <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <f:VPanel>
      <f:Border margin="10">
         <g:ScrollPanel>
            <e:SamplesListGrid width="100%" ui:field="samplesListGrid"></e:SamplesListGrid>
         </g:ScrollPanel>
      </f:Border>
      
      <g:FlowPanel height="5px"></g:FlowPanel>

      <g:HorizontalPanel height="30px" horizontalAlignment="center" verticalAlignment="ALIGN_MIDDLE">
         <f:ImageButton ui:field="importButton" width="100" height="22" text="{welcomeLocale.importButton}" imageResource="{resource.ok}"
            disabledImageResource="{resource.okDisabled}"></f:ImageButton>
         <f:ImageButton ui:field="closeButton" width="100" height="22" text="{locale.closeButton}" imageResource="{resource.cancel}"
            disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
      </g:HorizontalPanel>
      
      <g:FlowPanel height="10px"></g:FlowPanel>
   </f:VPanel>
</ui:UiBinder> 