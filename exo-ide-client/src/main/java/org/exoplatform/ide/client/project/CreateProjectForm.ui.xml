<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
   <ui:style>
      .spacing {
      	margin-top: 15px;
      }
      
      .spacingFields {
      	margin-bottom: 7px;
      }
      
      .label {
      	margin-bottom: 5px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
   </ui:style>

   <f:Border margin="20" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:Label text="{locale.projectName}" styleName="{style.label}"></g:Label>
            <f:TextField ui:field="projectName" width="99%" textItemHeight="18" styleName="{style.spacingFields}"></f:TextField>
            <g:Label text="{locale.projectType}" styleName="{style.label}"></g:Label>
            <f:SelectItem ui:field="projectType" width="99%" visibleItemCount="1"></f:SelectItem>
            <g:HorizontalPanel height="40" width="100%" spacing="5" styleName="{style.spacing}">
               <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
                  <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" imageResource="{resource.ok}"
                     disabledImageResource="{resource.okDisabled}"></f:ImageButton>
               </g:cell>
               <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
                  <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancel}"
                     disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
               </g:cell>
            </g:HorizontalPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 