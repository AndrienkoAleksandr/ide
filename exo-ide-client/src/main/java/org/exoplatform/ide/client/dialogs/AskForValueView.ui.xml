<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:style>
      .center {
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .label {
      	margin-bottom: 5px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
      .floatLeft {
      	float: left;
      }
   </ui:style>

   <c:Border margin="20" borderColor="transparent">
      <c:layer top="0px" bottom="40px">
         <g:FlowPanel>
            <c:Label ui:field="promptLabel" text="ask message" width="100%" addStyleNames="{style.label}"></c:Label>
            <c:TextInput ui:field="textField" height="22px" width="100%" name="ideAskForValueViewValueField"></c:TextInput>
         </g:FlowPanel>
      </c:layer>
      <c:layer height="22px" bottom="0">
         <g:FlowPanel width="285px" styleName="{style.center}">
            <c:ImageButton ui:field="yesButton" text="Yes" imageName="yes" width="90px" buttonId="ideAskForValueViewYesButton"
               addStyleNames="{style.floatLeft}"></c:ImageButton>
            <g:FlowPanel width="5px" height="22px" addStyleNames="{style.floatLeft}"></g:FlowPanel>
            <c:ImageButton ui:field="noButton" text="No" imageName="no" width="90px" buttonId="ideAskForValueViewNoButton"
               addStyleNames="{style.floatLeft}"></c:ImageButton>
            <g:FlowPanel width="5px" height="22px" addStyleNames="{style.floatLeft}"></g:FlowPanel>
            <c:ImageButton ui:field="cancelButton" text="Cancel" imageName="cancel" width="90px" buttonId="ideAskForValueViewCancelButton"
               addStyleNames="{style.floatLeft}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder> 
