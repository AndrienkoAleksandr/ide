<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:style>
      .panel-float {
      	
      }
   </ui:style>

   <c:Border margin="10" borderColor="transparent">
      <c:layer top="0px" bottom="50px">
         <g:FlowPanel styleName="{style.panel-float}" width="100%">

            <g:SimplePanel styleName="{style.panel-float}" width="20px"></g:SimplePanel>

            <c:Label ui:field="promptLabel" text="ask message" height="30px"></c:Label>
            <g:LayoutPanel height="22px">
               <g:layer width="100%" height="22px">
                  <c:TextInput ui:field="textField" height="22px" width="100%" ></c:TextInput>
               </g:layer>
            </g:LayoutPanel>
            <g:SimplePanel height="20px" styleName="{style.panel-float}" width="20px"></g:SimplePanel>
         </g:FlowPanel>
      </c:layer>
      <c:layer bottom="0px" height="50px">
         <g:VerticalPanel horizontalAlignment="ALIGN_CENTER" width="100%">
            <g:HorizontalPanel spacing="10" height="100%" verticalAlignment="ALIGN_MIDDLE">
               <c:ImageButton ui:field="yesButton" text="Yes" imageName="yes" width="90px" buttonId="ideAskForValueViewYesButton"
                  styleName="{style.panel-float}"></c:ImageButton>
               <c:ImageButton ui:field="noButton" text="No" imageName="no" width="90px" buttonId="ideAskForValueViewNoButton"
                  styleName="{style.panel-float}"></c:ImageButton>
               <c:ImageButton ui:field="cancelButton" text="Cancel" imageName="cancel" width="90px"
                  buttonId="ideAskForValueViewCancelButton"></c:ImageButton>
            </g:HorizontalPanel>
         </g:VerticalPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder> 
