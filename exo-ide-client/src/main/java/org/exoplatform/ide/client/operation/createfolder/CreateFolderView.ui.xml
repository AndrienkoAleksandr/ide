<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <ui:style>
      .spacing {
      	margin-top: 15px;
      }
      
      .label {
      	margin-bottom: 5px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .floatLeft {
      	float: left;
      }
   </ui:style>

   <f:Border margin="20" borderColor="transparent">
      <f:layer top="0" bottom="22">
         <g:FlowPanel>
            <g:Label text="{ideLocale.createFolderFormFieldTitle}" styleName="{style.label}"></g:Label>
            <f:TextInput ui:field="folderNameField" width="100%" height="22px"></f:TextInput>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="createButton" width="90" height="22" text="{ideLocale.createButton}" imageResource="{resource.ok}"
               disabledImageResource="{resource.okDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{ideLocale.cancelButton}" imageResource="{resource.cancel}"
               disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>

</ui:UiBinder>