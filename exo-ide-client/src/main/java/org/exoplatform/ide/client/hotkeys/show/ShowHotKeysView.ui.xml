<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:hk="urn:import:org.exoplatform.ide.client.hotkeys.show">
    <ui:with field='resource' type="org.exoplatform.ide.client.IDEImageBundle"/>
    <ui:with field="idelocal" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
    <ui:with field="idePrefs" type="org.exoplatform.ide.client.messages.IdePreferencesLocalizationConstant"></ui:with>

    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer bottom="30px" top="0px">
            <c:Border margin="5">
                <c:layer width="100%" height="100%">
                    <hk:HotKeyItemListGrid ui:field="hotKeyItemListGrid" width="100%" height="100%"></hk:HotKeyItemListGrid>
                </c:layer>
            </c:Border>
        </g:layer>
        <g:layer height="30px" bottom="0px">
            <g:FlowPanel width="90px" styleName="{style.center}">
                <c:ImageButton ui:field="closeButton" width="90" height="22" text="{idelocal.closeButton}"
                               imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}"
                               buttonId="ideShowHotKeysViewCloseButton">
                </c:ImageButton>
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>

</ui:UiBinder>
