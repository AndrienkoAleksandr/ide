<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.client.project.create">
   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field='templateResource' type='org.exoplatform.ide.client.framework.ui.IconImageBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
   <ui:with field="templateLocale" type="org.exoplatform.ide.client.messages.IdeTemplateLocalizationConstant"></ui:with>
   <ui:style>
      .label {
      	font-size: 12px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      }

      .labelTitle {
	    font-size: 11px;
      	font-weight: bold;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	color: #545454;
      	margin-top: 4px;
      }
      
      .error {
	    font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	color: #D21A1A;
      }
      
      .labelAlign {
      	margin-top: 10px;
      }
      
      .floatRight {
      	float: right;
      	margin-left: 5px;
      }

      .floatLeft {
      	float: left;
      }
      
      .rightAlign {
      	margin-left: auto;
      }

      .question {
	    font-size: 12px;
        font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	margin-left: 30px;
      }
      
      .title {
      	height: 45px;
      	display: block;
      	width: 100%;
      	border-bottom: 1px solid #ACACAC;
      	margin-bottom: 30px;
      	font-size: 14;
      	font-weight: bold;
      }
      
      .image {
      	float: left;
      	width: 36px;
      	height: 36px;
      	margin-right: 10px;
      }

      .questionImage {
      	float: left;
      	width: 16px;
      	height: 16px;
      	margin-left: 10px;
      }
      
      .margin {
      	margin-top: 10px;
      	margin-left: 15px;
      	margin-right: 15px;
      }

      .marginTop {
      	margin-top: 10px;
      }

      .buttonsGroupTitle {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-weight: bold;
      	margin-top: 10px;
      	margin-bottom: 10px;
      	color: #545454;
      }

      .line {
      	border-bottom: 1px solid #DBDFE5;
	  }
   </ui:style>

   <f:Border borderColor="transparent" margin="15">
      <f:layer top="0" bottom="35">
         <g:FlowPanel>
            <g:FlowPanel ui:field="deployProjectStep" visible="false" width="100%" height="100%">
            </g:FlowPanel>
            <g:FlowPanel ui:field="createProjectStep" width="100%" height="100%">
               <g:DockLayoutPanel width="100%" unit="PX" height="44px" addStyleNames="{style.marginTop} {style.line}">
                  <g:west size="100">
                     <f:Label value="{templateLocale.createProjectFromTemplateName}" isHTML="true" styleName="{style.labelTitle}" width="100%"></f:Label>
                  </g:west>
                  <g:center>
                     <f:TextInput ui:field="projectNameField" width="100%" height="22px"></f:TextInput>
                  </g:center>
                  <g:south size="20">
                     <f:Label ui:field="errorLabel" isHTML="true" addStyleNames="{style.error}" width="100%"></f:Label>
                  </g:south>
               </g:DockLayoutPanel>
               <g:FlowPanel addStyleNames="{style.line}">
                  <g:Label text="{templateLocale.chooseTechnology}" addStyleNames="{style.buttonsGroupTitle}" width="100%"></g:Label>
                  <g:Grid ui:field="projectTypesGrid" />
               </g:FlowPanel>
               <g:FlowPanel addStyleNames="{style.line}">
                  <g:Label text="{templateLocale.choosePaaS}" addStyleNames="{style.buttonsGroupTitle}" width="100%"></g:Label>
                  <g:Grid ui:field="targetGrid" />
               </g:FlowPanel>
            </g:FlowPanel>
            <g:DockLayoutPanel ui:field="chooseTemplateStep" unit="PX" height="100%" styleName="{style.margin}">
               <g:north size="70">
                  <g:FlowPanel styleName="{style.title}">
                     <g:Image resource="{templateResource.template}" styleName="{style.image}"></g:Image>
                     <g:Label text="{templateLocale.createProjectFromTemplateSelectTemplate}" addStyleNames="{style.label} {style.labelAlign}"></g:Label>
                  </g:FlowPanel>
               </g:north>
               <g:center>
                  <f:Border>
                     <f:layer>
                        <e:ProjectTemplateGrid width="100%" height="100%" ui:field="templatesGrid"></e:ProjectTemplateGrid>
                     </f:layer>
                  </f:Border>
               </g:center>
               <!--
               <g:south size="30">
                  <g:FlowPanel>
                     <f:Label value="{templateLocale.zeroturnaround}" height="36px"></f:Label>
                  </g:FlowPanel>
               </g:south>
               <g:south size="30">
                  <g:FlowPanel>
                     <g:CheckBox ui:field="useJRebelPluginField" height="22px" addStyleNames="{style.floatLeft}"></g:CheckBox>
                     <f:Label value="{templateLocale.useJRebelPlugin}" height="18px" addStyleNames="{style.floatLeft} {style.label}"></f:Label>
                     <g:Image title="{templateLocale.whatIsJRebel}" resource="{resource.question}" styleName="{style.questionImage}"></g:Image>
                  </g:FlowPanel>
               </g:south>
               -->
               <g:south size="60">
	               <g:DockLayoutPanel styleName="{style.marginTop}">
	                  <g:west size="71">
	                     <g:Image resource="{resource.jrebel}" styleName="{style.marginTop}"></g:Image>
	                  </g:west>
	                  <g:center>
	                     <g:FlowPanel>
	                        <g:CheckBox ui:field="useJRebelPluginField" height="22px" addStyleNames="{style.floatLeft}"></g:CheckBox>
	                        <f:Label value="{templateLocale.useJRebelPlugin}" height="18px" addStyleNames="{style.floatLeft} {style.label}"></f:Label>
	                        <g:Image title="{templateLocale.whatIsJRebel}" resource="{resource.question}" styleName="{style.questionImage}"></g:Image>
	                     </g:FlowPanel>
	                  </g:center>
	                  <g:south size="30">
                         <g:FlowPanel>
                            <f:Label value="{templateLocale.zeroturnaround}" height="36px"></f:Label>
                         </g:FlowPanel>
	                  </g:south>
	               </g:DockLayoutPanel>
               </g:south>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel styleName="{style.rightAlign}">
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="finishButton" enabled="true" width="90" height="22" text="{locale.finishButton}" imageName="ok"
               addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="nextButton" enabled="true" width="90" height="22" text="{locale.nextButton}" imageName="next"
               addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="backButton" enabled="true" width="90" height="22" text="{locale.backButton}" imageName="back"
               addStyleNames="{style.floatRight}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 