<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:e="urn:import:org.exoplatform.ide.client.template.ui">

   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
   <ui:with field="templateLocale" type="org.exoplatform.ide.client.messages.IdeTemplateLocalizationConstant"></ui:with>

   <g:FlowPanel>
      <g:FlowPanel height="10px"></g:FlowPanel>
      <g:HorizontalPanel height="30px" horizontalAlignment="center" width="100%">
         <g:Label text="" width="10px" height="20px"></g:Label>
         <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{templateLocale.createProjectTemplateTextFieldName}" height="20px"></g:Label>
         </g:cell>

         <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
            <f:TextInput ui:field="nameField" width="100%" height="22px"></f:TextInput>
         </g:cell>
         <g:Label text="" width="10px" height="20px"></g:Label>
      </g:HorizontalPanel>

      <g:HorizontalPanel height="30px" horizontalAlignment="center" width="100%">
         <g:Label text="" width="10px" height="20px"></g:Label>
         <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
            <g:Label text="{templateLocale.createProjectTemplateTextAreaDescription}" height="20px"></g:Label>
         </g:cell>

         <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
            <f:TextAreaInput ui:field="descriptionField" width="100%" height="22px"></f:TextAreaInput>
         </g:cell>
         <g:Label text="" width="11px" height="20px"></g:Label>
      </g:HorizontalPanel>

      <g:FlowPanel height="10px"></g:FlowPanel>

      <g:LayoutPanel height="170px">
         <g:layer height="150px" left="20px" right="140px">
            <f:Border>
               <f:layer>
                  <g:ScrollPanel ui:field="scrollPanel">
                     <e:TemplateTree width="100%" height="100%" ui:field="templateTreeGrid"></e:TemplateTree>
                  </g:ScrollPanel>
               </f:layer>
            </f:Border>
         </g:layer>
         <g:layer height="100px" width="100px" right="20px">
            <g:FlowPanel height="100px">
               <g:VerticalPanel horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE" spacing="5"
                  width="100px">

                  <f:ImageButton ui:field="addFolderButton" width="90" height="22"
                     text="{templateLocale.createProjectTemplateAddFolderBtn}" imageResource="{resource.add}"
                     disabledImageResource="{resource.addDisabled}"></f:ImageButton>

                  <f:ImageButton ui:field="addFileButton" width="90" height="22"
                     text="{templateLocale.createProjectTemplateAddFileBtn}" imageResource="{resource.add}" disabledImageResource="{resource.addDisabled}"></f:ImageButton>

                  <f:ImageButton ui:field="deleteButton" width="90" height="22" text="{locale.deleteButton}"
                     imageResource="{resource.remove}" disabledImageResource="{resource.removeDisabled}"></f:ImageButton>
               </g:VerticalPanel>
            </g:FlowPanel>
         </g:layer>
      </g:LayoutPanel>

      <!--g:HorizontalPanel height="30px" horizontalAlignment="center">
         <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" imageResource="{resource.yes}"
            disabledImageResource="{resource.yesDisabled}"></f:ImageButton>

         <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancel}"
            disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
      </g:HorizontalPanel-->

      <g:FlowPanel height="30px">

         <g:HorizontalPanel spacing="5" width="100%" height="100%">

            <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
               <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}"
                  imageResource="{resource.yes}" disabledImageResource="{resource.yesDisabled}"></f:ImageButton>
            </g:cell>

            <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
               <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}"
                  imageResource="{resource.cancel}" disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
            </g:cell>

         </g:HorizontalPanel>

      </g:FlowPanel>

   </g:FlowPanel>
</ui:UiBinder> 