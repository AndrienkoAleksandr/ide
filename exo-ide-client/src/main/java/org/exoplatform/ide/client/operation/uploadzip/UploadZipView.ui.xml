<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:up="urn:import:org.exoplatform.ide.client.framework.ui.upload"
	>
	
	<ui:with field="uploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
	<ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

	<ui:style>
		
		.absolute
		{
			position:absolute;
			left:0px;
			top:0px;
		}
		
		.defaultCursor
		{
			cursor: default;
		}
		
	</ui:style>
	
	<c:Border margin="5" borderColor="transparent">
		<c:VPanel>
		
			<c:Panel></c:Panel>
			
			<c:HPanel height="50px">
				
				<c:Panel width="40px"></c:Panel>
				
			  	<g:HTMLPanel>
					<table style="width:100%; height:100%;" border="0" cellpadding="0">
					  
					  <tr style="height:20px;">
					    	<td colspan="2" style="height:20px; vertical-align: middle;">
					    		<c:Label height="20px" value="{uploadLocale.folderToUpload}"></c:Label>
					    	</td>
					  </tr>
					  
					  <tr>
							<td>
								<c:TextField showTitle="false" textItemHeight="22" width="100%" ui:field="fileNameField" textFieldId="ideUploadFormFilenameField" readOnly="true"></c:TextField>
					  		</td>
					  	
					  		<td style="width:80px;">
								<g:AbsolutePanel width="80px" height="22px">
									<c:ImageButton width="80px" height="22px" text="{uploadLocale.uploadBrowseBtn}" addStyleNames="{style.absolute}"></c:ImageButton>

									<g:FormPanel addStyleNames="{style.absolute}" ui:field="uploadForm">
										<g:HorizontalPanel ui:field="postFieldsPanel">
											<up:FileUploadInput ui:field="fileUploadInput" width="80px" height="22px" transparent="true" addStyleNames="{style.defaultCursor}"></up:FileUploadInput>
										</g:HorizontalPanel>
									</g:FormPanel>
									
								</g:AbsolutePanel>
					  		</td>
					  </tr>
					  
					</table>
			  	</g:HTMLPanel>
			  					
				<c:Panel width="40px"></c:Panel>
				
			</c:HPanel>
			
			<g:HorizontalPanel spacing="10" height="60px">
				<g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton ui:field="uploadButton" text="{uploadLocale.uploadButton}" imageName="upload" buttonId="ideUploadFormUploadButton"></c:ImageButton>
				</g:cell>
				
				<g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton ui:field="cancelButton" text="{ideLocale.closeButton}" imageName="cancel" buttonId="ideUploadFormCloseButton"></c:ImageButton>
				</g:cell>
			</g:HorizontalPanel>			

			<c:Panel></c:Panel>
			
		</c:VPanel>
	
	</c:Border>

</ui:UiBinder>
