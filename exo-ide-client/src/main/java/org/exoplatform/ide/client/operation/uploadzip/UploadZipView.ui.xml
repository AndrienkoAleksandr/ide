<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:up="urn:import:org.exoplatform.ide.client.framework.ui.upload">

   <ui:with field="uploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
   <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <ui:style>
      .absolute {
      	position: absolute;
      	left: 0px;
      	top: 0px;
      }
      
      .defaultCursor {
      	cursor: default;
      }
      
      .spacing {
      	margin-top : 15px;
      }
      
   </ui:style>

   <c:Border margin="20" borderColor="transparent" height="150px">
      <c:layer>
         <g:FlowPanel>
            <g:FlowPanel height="50px" width="100%">
               <g:HTMLPanel>
                  <table style="width:100%; height:100%;" border="0" cellpadding="0">

                     <tr style="height:20px;">
                        <td colspan="2" style="vertical-align: middle;">
                           <c:Label value="{uploadLocale.folderToUpload}"></c:Label>
                        </td>
                     </tr>

                     <tr>
                        <td width="100%">
                           <c:TextField showTitle="false" textItemHeight="18" width="100%" ui:field="fileNameField"
                              textFieldId="ideUploadFormFilenameField" readOnly="true"></c:TextField>
                        </td>

                        <td style="width:80px;">
                           <g:AbsolutePanel width="80px" height="22px">
                              <c:ImageButton width="80px" height="22px" text="{uploadLocale.uploadBrowseBtn}"
                                 addStyleNames="{style.absolute}"></c:ImageButton>

                              <g:FormPanel addStyleNames="{style.absolute}" ui:field="uploadForm">
                                 <g:HorizontalPanel ui:field="postFieldsPanel">
                                    <up:FileUploadInput ui:field="fileUploadInput" width="80px" height="22px"
                                       transparent="true" addStyleNames="{style.defaultCursor}"></up:FileUploadInput>
                                 </g:HorizontalPanel>
                              </g:FormPanel>

                           </g:AbsolutePanel>
                        </td>
                     </tr>

                  </table>
               </g:HTMLPanel>


            </g:FlowPanel>

            <g:HorizontalPanel spacing="5" width="100%" styleName="{style.spacing}">
               <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
                  <c:ImageButton ui:field="uploadButton" text="{uploadLocale.uploadButton}" imageName="upload"
                     buttonId="ideUploadFormUploadButton"></c:ImageButton>
               </g:cell>

               <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
                  <c:ImageButton ui:field="cancelButton" text="{ideLocale.closeButton}" imageName="cancel"
                     buttonId="ideUploadFormCloseButton"></c:ImageButton>
               </g:cell>
            </g:HorizontalPanel>


         </g:FlowPanel>
      </c:layer>
   </c:Border>

</ui:UiBinder>
