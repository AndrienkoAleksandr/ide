<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:p="urn:import:org.exoplatform.ide.client.project.list"
	>

	<ui:style>
		.center {
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		
		.floatLeft {
			float: left;
		}
	</ui:style>
	
	<c:Border margin="10" borderColor="transparent">
      <c:layer top="0px" bottom="40px">
         <c:Border>
            <c:layer>
				<p:ProjectsListGrid ui:field="projectsListGrid" width="100%" listGridId="ideProjectsListGrid"></p:ProjectsListGrid>
            </c:layer>
         </c:Border>
      </c:layer>
      <c:layer height="30px" bottom="0px">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <c:ImageButton text="Open" imageName="ok" ui:field="openButton" buttonId="ideShowProjectsOpenButton" addStyleNames="{style.floatLeft}"></c:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <c:ImageButton text="Cancel" imageName="cancel" ui:field="cancelButton" buttonId="ideShowProjectsCancelButton"
               addStyleNames="{style.floatLeft}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
	
	</c:Border>
	
</ui:UiBinder>
 