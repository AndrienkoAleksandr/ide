<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
   <ui:style>
      /* Add CSS here. See the GWT docs on UI Binder for more details */
      .important {
      	font-weight: bold;
      }
      .position{
	    position: static;

	}
   </ui:style>
   <g:HTMLPanel>
      <g:DockLayoutPanel unit="EM" width="100%" height="100%">
         <g:north size="2">
            <g:MenuBar styleName="menu" width="100%">
               <g:MenuItem text="New item" />
               <g:MenuItem text="New menu">
               	<g:MenuBar vertical="true">
               		<g:MenuItem text="New item"/>
               	</g:MenuBar>
               </g:MenuItem>
            </g:MenuBar>
         </g:north>
         <g:west size="25">
            <g:ScrollPanel ui:field="leftPanel">
               <!-- p1:CellTree width="100%" height="100%" ui:field="cellTree" /-->
            </g:ScrollPanel>
         </g:west>
         <g:center>
            <g:SimplePanel ui:field="centerPanel"  styleName="{style.position}">
               <!-- g:TextArea ui:field="textArea" text="Simple text" height="100%" width="100%"/-->
            </g:SimplePanel>
         </g:center>
      </g:DockLayoutPanel>
   </g:HTMLPanel>
</ui:UiBinder> 