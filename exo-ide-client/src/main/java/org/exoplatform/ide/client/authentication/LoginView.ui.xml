<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	>
	
   <ui:with type="org.exoplatform.ide.client.IDEImageBundle" field="res"></ui:with>
	<ui:style>
	</ui:style>
	
	<c:Border margin="1" borderColor="transparent">
      <c:layer>
		<g:FlowPanel>
		
			<g:HTMLPanel height="90px">
				<table style="width:100%; height:100%;">
					<tr>
						<td align="center">
							<g:Image resource='{res.ideLogo}'></g:Image>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
			
			<g:HorizontalPanel height="110px">
				
				<g:SimplePanel></g:SimplePanel>
				
					<g:HTMLPanel width="330px">

							<table style="width:100%;">
								<tr>
									<td align="center">
									
										<table>
											<tr>
												<td><c:Label text="User ID:"></c:Label></td>
												<td><c:TextInput ui:field="loginField" ></c:TextInput></td>
											</tr>
											<tr>						
												<td><c:Label text="Password:"></c:Label></td>
												<td><c:PasswordField ui:field="passwordField" passwordFieldId="ideLoginViewPasswordField"></c:PasswordField></td>
											</tr>
										</table>
									
									</td>
								</tr>
							</table>
							
							<table style="width:100%;" cellspacing="10">
								<tr>
									<td align="right"><c:ImageButton ui:field="loginButton" buttonId="ideLoginViewLoginButton" text="Login" imageName="ok"></c:ImageButton></td>
									<td><c:ImageButton ui:field="cancelButton" text="Cancel" buttonId="ideLoginViewCancelButton" imageName="cancel"></c:ImageButton></td>
								</tr>
							</table>
							
					</g:HTMLPanel>	
				
				<g:SimplePanel></g:SimplePanel>
				
			</g:HorizontalPanel>
			
			<g:SimplePanel></g:SimplePanel>			
		
		</g:FlowPanel>
      </c:layer>
	</c:Border>
	
</ui:UiBinder>
