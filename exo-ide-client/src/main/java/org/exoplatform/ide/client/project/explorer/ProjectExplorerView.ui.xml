<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:gc='urn:import:com.google.gwt.user.cellview.client'
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:n="urn:import:org.exoplatform.ide.client.framework.ui"
	xmlns:p="urn:import:org.exoplatform.ide.client.project.explorer"
	>
	
	<ui:style>
		.itemsTreePanel
		{
			z-index:0;
			width:100%;
			height:100%;
		}

		.itemsTree
		{
			z-index:0;
			width:100%;
			height:100%;
		}
		
	</ui:style>
	
	<c:Border margin="1">
		<c:layer>
         <g:LayoutPanel>
            <g:layer top="0" height="28px">
               <c:Toolbar height="28px" ui:field="toolbar"></c:Toolbar>
            </g:layer>
            <g:layer top="28px" bottom="0">
				<g:ScrollPanel width="100%" height="100%">
					<g:FlowPanel width="100%">
						<p:ItemsCellTree addStyleNames='{style.itemsTree}' width="100%" ui:field='tree' visible="false"></p:ItemsCellTree>
						
						<g:HTMLPanel ui:field="projectNotOpenedPanel" width="100%" height="100%">
                   			<table style="width:100%; height:100%;">
	                      		<tr style="vertical-align:middle;">
    	                     		<td style="text-align:center;">Project is not opened.</td>
        	              		</tr>
                   			</table>
                		</g:HTMLPanel>
                		
					</g:FlowPanel>			
				</g:ScrollPanel>
            </g:layer>
         </g:LayoutPanel>
         </c:layer>
	</c:Border>
	
</ui:UiBinder> 