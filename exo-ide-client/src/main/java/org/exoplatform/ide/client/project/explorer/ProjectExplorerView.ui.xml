<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:n="urn:import:org.exoplatform.ide.client.framework.ui"
	xmlns:e="urn:import:org.exoplatform.ide.client.project.explorer"
	>
	<ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
	
	<ui:style>
		.itemsTree
		{
			z-index:0;
			width:100%;
			height:100%;
		}
	</ui:style>

	<c:Border margin="1">
		<c:layer>
         <g:LayoutPanel>
            <g:layer top="0" height="28px">
               <c:Toolbar height="28px">
               		<c:ToolbarItem rightDocked="true" paddingTop="2" paddingRight="2">
               			<c:IconButton ui:field="linkWithEditorButton" imageName="link-with-editor" title="{ideLocale.projectExplorerLinkWithEditor}"></c:IconButton>
               		</c:ToolbarItem>
               </c:Toolbar>
            </g:layer>
            <g:layer top="28px" bottom="0">
				<g:ScrollPanel width="100%" height="100%">
					<g:FlowPanel>
						<n:ProjectTree visible="false" styleName="{style.itemsTree}" ui:field="treeGrid" prefixId="navigation-" treeGridId="ideProjectExplorerItemTreeGrid"></n:ProjectTree>
						<g:HTMLPanel ui:field="projectNotOpenedPanel" width="100%" height="100%">
                  		<table style="width:100%; height:100%;">
	                     	<tr style="vertical-align:middle;">
    	                      	<td style="text-align:center;">Project is not opened.</td>
        	               	</tr>
                  		</table>
                	</g:HTMLPanel>
                	<e:ProjectsListGrid visible="false" ui:field="projectsListGrid" width="100%" height="100%" listGridId="ideProjectExplorerProjectsListGrid"></e:ProjectsListGrid>
					</g:FlowPanel>			
				</g:ScrollPanel>
            </g:layer>
         </g:LayoutPanel>
         </c:layer>
	</c:Border>

</ui:UiBinder>
