<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle' />
   <ui:with field="ideLocale" type="org.exoplatform.ide.client.messages.IdeOverwriteLocalizationConstant"></ui:with>
   <ui:with field="lb" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

   <ui:style>
      .spacing {
      margin-top: 20px;
      margin-left: 15px;
      margin-right: 15px;
      }

      .label {
      margin-bottom: 5px;
      cursor: default;
      font-family: Verdana,
      Bitstream Vera Sans, sans-serif;
      font-size:
      11px;
      font-style: normal;
      font-weight: normal;
      }

      .errLabel {
      margin-bottom: 5px;
      cursor: default;
      font-family: Verdana,
      Bitstream Vera Sans, sans-serif;
      font-size:
      11px;
      font-style: normal;
      font-weight: bold;
      }


      .center {
      display: block;
      margin-left:
      auto;
      margin-right:
      auto;
      }

      .left-float {
      float: left;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer top="0" bottom="40px">
         <g:DockLayoutPanel unit="PX" height="60px" addStyleNames="{style.spacing}">
            <g:north size="30">
               <f:Label ui:field="errMsgLabel" height="18px" styleName="{style.errLabel}"></f:Label>
            </g:north>
            <g:west size="55">
               <g:Label text="{ideLocale.dialogAskToOverwrite}" styleName="{style.label}"></g:Label>
            </g:west>
            <g:center>
               <f:TextInput ui:field="renameField" width="100%" height="20"></f:TextInput>
            </g:center>
         </g:DockLayoutPanel>
      </g:layer>

      <g:layer height="40px" bottom="0">
         <g:FlowPanel width="273px" styleName="{style.center}">

            <f:ImageButton ui:field="renameButton" width="90" height="22" text="{ideLocale.renameButton}" imageResource="{resource.ok}"
               disabledImageResource="{resource.okDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="overwriteButton" width="90" height="22" text="{ideLocale.overwriteButton}" imageResource="{resource.ok}"
               disabledImageResource="{resource.okDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{lb.cancelButton}" imageResource="{resource.cancel}"
               disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>

   </g:LayoutPanel>

</ui:UiBinder>