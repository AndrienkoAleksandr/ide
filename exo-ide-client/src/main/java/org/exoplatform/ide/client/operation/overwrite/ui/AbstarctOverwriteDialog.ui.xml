<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle'/>
    <ui:with field="ideLocale" type="org.exoplatform.ide.client.messages.IdeOverwriteLocalizationConstant"></ui:with>
    <ui:with field="lb" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

    <ui:style>
        .spacing {
            margin: 15px;
        }

        .label {
            margin-top: 4px;
        }

        .errLabel {
            font-weight: bold;
        }

        .center {
            text-align: center;
        }

        .left-float {
            display: inline-block;
        }

        .marginTop5 {
            margin-top: 5px;
        }
        .clear {
            clear: both;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.spacing}">
        <f:Label ui:field="errMsgLabel" height="18px" styleName="{style.errLabel}"></f:Label>
        <div class="{style.marginTop5}">
            <g:Label text="{ideLocale.dialogAskToOverwrite}" styleName="{style.label} {style.left-float}"></g:Label>
            <div class="{style.left-float}"><f:TextInput ui:field="renameField" width="290px" height="20px"></f:TextInput></div>
        </div>
        <div class="{style.clear}">&nbsp;</div>
        <div class="{style.center}">
            <f:ImageButton ui:field="renameButton" width="90px" height="22px" text="{ideLocale.renameButton}" imageResource="{resource.ok}"
                           disabledImageResource="{resource.okDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="overwriteButton" width="90px" height="22px" text="{ideLocale.overwriteButton}"
                           imageResource="{resource.ok}"
                           disabledImageResource="{resource.okDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="cancelButton" width="90px" height="22px" text="{lb.cancelButton}" imageResource="{resource.cancel}"
                           disabledImageResource="{resource.cancelDisabled}" styleName="{style.left-float}"></f:ImageButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>