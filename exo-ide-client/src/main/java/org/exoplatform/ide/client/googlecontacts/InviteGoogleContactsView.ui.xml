<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
	<ui:with field='resource' type="org.exoplatform.ide.client.IDEImageBundle" />
	<ui:with field="idelocal" type="org.exoplatform.ide.client.IdeLocalizationConstant" />
	<ui:style>
		.important {
        	font-weight: bold;
         }
         .cw-DockPanel td {
            border: 1px solid #BBBBBB;
            padding: 3px;
         }
        .center {
        	display: block;
        	margin-left: auto;
        	margin-right: auto;
		}
		.floatLeft {
			float: left;
		}
	</ui:style>
	<g:ScrollPanel>
		<g:HTMLPanel>
			<g:Grid ui:field="contactsGrid" width="550px" height="550px" />
			<g:FlowPanel width="190px" styleName="{style.center}">
				<f:ImageButton ui:field="inviteButton" width="90" height="22" addStyleNames="{style.floatLeft}"
					text="{idelocal.inviteButton}" buttonId="ideInviteGoogleContactsViewInviteButton"
					imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}">
				</f:ImageButton>
				<g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
				<f:ImageButton ui:field="closeButton" width="90" height="22" addStyleNames="{style.floatLeft}"
					text="{idelocal.closeButton}" buttonId="ideInviteGoogleContactsViewCloseButton"
					imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}">
				</f:ImageButton>
			</g:FlowPanel>
		</g:HTMLPanel>
	</g:ScrollPanel>
</ui:UiBinder>
