<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:p="urn:import:org.exoplatform.ide.client.project.prepare">

   <ui:style>
      .center {
         display: block;
         margin-left: auto;
         margin-right: auto;
      }

      .butPanelInner {
         position: relative;
         width: 220px;
         margin-left: auto;
         margin-right: auto;
         left: 25px;
      }

      .butLeft {
         display: inline-block;
      }

      .butRight {
         display: inline-block;
         margin-left: 10px;
      }
   </ui:style>

   <c:Border margin="10" borderColor="transparent">
      <c:layer>
         <g:FlowPanel width="300px" height="22px" styleName="{style.center}">
            <g:DockLayoutPanel width="100%" height="100%">
               <g:center>
                  <c:SelectItem ui:field="projectTypeField" width="290px" height="22px"
                                styleName="{style.center}"></c:SelectItem>
               </g:center>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </c:layer>
      <c:layer height="30px" bottom="0">
         <g:FlowPanel addStyleNames="{style.butPanelInner} {style.center}">
            <c:ImageButton ui:field="okButton" text="Ok" imageName="ok" addStyleNames="{style.butLeft}"></c:ImageButton>
            <c:ImageButton ui:field="cancelButton" text="Cancel" imageName="cancel"
                           addStyleNames="{style.butRight}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder>
