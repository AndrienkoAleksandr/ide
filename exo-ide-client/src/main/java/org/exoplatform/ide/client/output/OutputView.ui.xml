<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	>

   <c:Border margin="1">
      <c:layer width="100%" hetight="100%">
         <g:LayoutPanel>
            <g:layer top="0" height="28px">
               <c:Toolbar height="28px" ui:field="toolbar"></c:Toolbar>
            </g:layer>
            <g:layer top="28px" bottom="0">
               <g:ScrollPanel width="100%" height="100%" ui:field="scrollPanel">
                  <g:FlowPanel width="100%" ui:field="contentPanel"></g:FlowPanel>
               </g:ScrollPanel>
            </g:layer>
         </g:LayoutPanel>
      </c:layer>
   </c:Border>

</ui:UiBinder>
 