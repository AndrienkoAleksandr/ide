<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:org.exoplatform.ide.client.editor.custom">

	<ui:style>
	</ui:style>

	<c:VPanel>
		
		<c:Border margin="5">
			<w:EditorsListGrid ID="ideOpenFileWithListGrid" ui:field="editorsListGrid"></w:EditorsListGrid>
		</c:Border>
		
		<c:Panel height="30px">
			<c:Border borderColor="transparent" margin="3">
				<c:CheckboxItem name="ideOpenWithIsDefault" ui:field="isDefaultCheckItem" 
					title="Use as default editor"></c:CheckboxItem>
			</c:Border>
		</c:Panel>

		<c:Panel height="40px">
			<g:HorizontalPanel spacing="5" width="100%" height="100%">
				<g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text="Open" imageName="yes" ui:field="openButton" buttonId="ideOpenFileWithOkButton" enabled="false"></c:ImageButton>
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text="Cancel" imageName="no" ui:field="cancelButton" buttonId="ideOpenFileWithCancelButton"></c:ImageButton>
				</g:cell>
			</g:HorizontalPanel>
		</c:Panel>
		
	</c:VPanel>

</ui:UiBinder>
