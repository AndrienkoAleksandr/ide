<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.client.IDEImageBundle'/>
    <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>
    <ui:with field="ideUploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
    <ui:style>
        .spacing {
            margin-top: 15px;
        }

        .label {
            margin-bottom: 5px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-size: 11px;
            font-style: normal;
            font-weight: normal;
        }
    </ui:style>

    <f:Border margin="20" borderColor="transparent">
        <f:layer>
            <g:FlowPanel>
                <g:Label text="{ideUploadLocale.openFileByPathFileUrl}" styleName="{style.label}"></g:Label>
                <f:TextInput ui:field="filePathField" width="100%" height="20px"></f:TextInput>

                <g:HorizontalPanel spacing="5" width="100%" styleName="{style.spacing}">
                    <g:cell horizontalAlignment='ALIGN_RIGHT' verticalAlignment="ALIGN_MIDDLE">
                        <f:ImageButton ui:field="openButton" width="90" height="22" text="{ideUploadLocale.openButton}"
                                       imageResource="{resource.openFileByPath}"
                                       disabledImageResource="{resource.openFileByPathDisabled}"></f:ImageButton>
                    </g:cell>
                    <g:cell horizontalAlignment='ALIGN_LEFT' verticalAlignment="ALIGN_MIDDLE">
                        <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{ideLocale.cancelButton}"
                                       imageResource="{resource.cancel}"
                                       disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
                    </g:cell>
                </g:HorizontalPanel>
            </g:FlowPanel>
        </f:layer>
    </f:Border>

</ui:UiBinder>