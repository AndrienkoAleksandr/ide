<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	>
	
	<ui:style>
		
		.info
		{
			margin-top:10px;
			text-align: center;
		}
		
		.button-panel
		{
			width:100px;
			height:22px;
			margin-left: auto;
			margin-right: auto;
		}
		
	</ui:style>
	
   <c:Border margin="10" borderColor="transparent">
      <c:layer width="100%" hetight="100%">
         <g:FlowPanel width="100%" height="100%" ui:field="jobPanel">
         	<g:HTML ui:field="jobInfo" width="100%" height="40px" addStyleNames="ide-label, {style.info}"></g:HTML>
         	<g:FlowPanel addStyleNames="{style.button-panel}">
         		<c:ImageButton imageName="hide" text="Hide" ui:field="hideButton"></c:ImageButton>
         	</g:FlowPanel>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
	
</ui:UiBinder>
 