<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
        >
    <ui:with type="org.exoplatform.ide.client.IdeLocalizationConstant" field="idelocal"></ui:with>

    <ui:style>

        .butPanel {
            height: 30px;
            width: 100%;
        }

        .but {
            width: 100px;
            margin-left: 50%;
            left: -50px;
            position: relative;
        }

    </ui:style>


    <c:Border margin="5">
        <c:layer>
            <c:Border margin="0">
                <c:layer top="0px" bottom="35px">
                    <g:ScrollPanel width="100%" height="100%">
                        <g:Grid ui:field="imagesGrid" width="100%" height="100%"></g:Grid>
                    </g:ScrollPanel>
                </c:layer>
            </c:Border>
        </c:layer>

        <c:layer height="30px" bottom="0px">
            <g:FlowPanel addStyleNames="{style.butPanel}">
                <c:ImageButton text="{idelocal.closeButton}" imageName="cancel" ui:field="closeButton"
                               addStyleNames="{style.but}"></c:ImageButton>
            </g:FlowPanel>
        </c:layer>

    </c:Border>

</ui:UiBinder>
 