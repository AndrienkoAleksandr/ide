<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	>
	
	<ui:style>
	</ui:style>
	
	<c:VPanel>
		<c:Border margin="5">
			<g:ScrollPanel width="100%" height="100%">
				<g:Grid ui:field="imagesGrid" width="100%" height="100%"></g:Grid>
			</g:ScrollPanel>
		</c:Border>

		<c:Panel height="40px">
			<g:HorizontalPanel spacing="5" width="100%" height="100%">
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text="Close" imageName="cancel" ui:field="closeButton"></c:ImageButton>
				</g:cell>
			</g:HorizontalPanel>
		</c:Panel>
		
	</c:VPanel>
	
</ui:UiBinder>
 