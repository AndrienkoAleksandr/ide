[
{
  "command": ["cli"],
  "path":"ide/cli/resources",
  "method":"GET"
},
{
    "command": ["help", "man","cd", "commit", "cp", "ls", "mixin", "mv", "node", "pwd", "rm", "rollback", "select", "setperm", "version", "ws", "xpath"],
    "path": "/ide/crash/command",
    "method": "POST",
    "description": "To view command help try : [command] -h",
    "params": [
      {
        "mandatory": true,
        "name": "cmd",
        "type": "BODY"
      }
    ]
},
{
    "command": ["git init"],
    "path": "/ide/git/init",
    "method": "POST",
    "description" : "Initialize new GIT repository.",
    "params": [
      {
	  "name": "workdir",
	  "type": "QUERY",
	  "options":["-w", "--workdir"],
	  "mandatory": true
      },
      {
	  "name": "bare",
	  "type": "BODY",
	  "options":["-b", "--bare"],
	  "mandatory": true
      }
    ]
},
{
    "command": ["git status"],
    "path": "/ide/git/status",
    "method": "POST",
    "description" : "Get status of working directory.",
    "params": [
      {
	  "name": "workdir",
	  "type": "QUERY",
	  "options":["-w", "--workdir"],
	  "mandatory": true
      },
      {
	  "name": "shortFormat",
	  "type": "BODY",
	  "options":["-s", "--short"],
	  "mandatory": true
      }
    ]
},
{
    "command": ["git add"],
    "path": "/ide/git/add",
    "method": "POST",
    "description" : "Add file contents to the index.",
    "params": [
      {
	  "name": "workdir",
	  "type": "QUERY",
	  "options":["-w", "--workdir"],
	  "mandatory": true
      },
      {
	  "name": "update",
	  "type": "BODY",
	  "options":["-u", "--update"],
	  "mandatory": false
      }
      {
	  "name": "filepattern",
	  "type": "BODY",
	  "options":["-u", "--update"],
	  "mandatory": false
      }
    ]
}
]