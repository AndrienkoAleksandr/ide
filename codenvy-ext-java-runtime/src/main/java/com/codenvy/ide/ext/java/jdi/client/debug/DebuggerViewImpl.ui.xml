<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.java.jdi.client.JavaRuntimeLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.java.jdi.client.JavaRuntimeResources'/>
    <ui:with field='coreRes' type='com.codenvy.ide.Resources'/>
    <ui:style>
        .alignRight {
            float: right;
        }

        .alignLeft {
            float: left;
        }

        .withoutPadding {
            padding: 0px;
        }

        .buttonBorder {
            margin-left: 6px;
            margin-top: 6px;
        }

        .labelBorder {
            margin-right: 6px;
            margin-top: 6px;
        }

        .emptyBorder {
            margin: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="26.0">
            <g:FlowPanel width="100%" height="100%">
                <g:FlowPanel addStyleNames="{style.alignLeft} {style.buttonBorder}">
                    <c:Button ui:field="btnResume" title="{locale.resumeButton}" icon="{res.resumeButton}" width="18px" height="16px"
                              size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnStepInto" title="{locale.stepInto}" icon="{res.stepIntoButton}" width="18px" height="16px"
                              size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnStepOver" title="{locale.stepOver}" icon="{res.stepOverButton}" width="18px" height="16px"
                              size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnStepReturn" title="{locale.stepReturn}" icon="{res.stepReturnButton}" width="18px" height="16px"
                              size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding} "/>
                    <c:Button ui:field="btnDisconnect" title="{locale.disconnectButton}" icon="{res.disconnectButton}" width="18px"
                              height="16px" size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnRemoveAllBreakpoints" title="{locale.removeBreakpointsButton}"
                              icon="{res.removeAllBreakpointsButton}" width="18px" height="16px" size="SMALL"
                              addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnChangeValue" title="{locale.changeValue}" icon="{res.changeVariableValue}" width="18px" height="16px"
                              size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                    <c:Button ui:field="btnEvaluateExpression" title="{locale.evaluateExpression}" icon="{res.evaluate}" width="18px"
                              height="16px" size="SMALL" addStyleNames="{style.alignLeft} {style.withoutPadding}"/>
                </g:FlowPanel>
                <g:Label ui:field="vmName" addStyleNames="{style.alignRight} {style.labelBorder}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:SplitLayoutPanel>
                <g:west size="450">
                    <g:FlowPanel addStyleNames="{style.emptyBorder}">
                        <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                            <g:north size="20">
                                <g:Label text="{locale.breakpoints}" addStyleNames="{style.alignLeft}"/>
                            </g:north>
                            <g:center>
                                <g:ScrollPanel ui:field="breakpointsPanel" addStyleNames="{coreRes.coreCss.simpleListContainer}"/>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:FlowPanel addStyleNames="{style.emptyBorder}">
                        <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                            <g:north size="20">
                                <g:Label text="{locale.variables}" addStyleNames="{style.alignLeft}"/>
                            </g:north>
                            <g:center>
                                <g:ScrollPanel ui:field="variablesPanel" addStyleNames="{coreRes.coreCss.simpleListContainer}"/>
                            </g:center>
                        </g:DockLayoutPanel>
                    </g:FlowPanel>
                </g:center>
            </g:SplitLayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>