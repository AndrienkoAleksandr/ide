<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.java.jdi.client.JavaRuntimeLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.java.jdi.client.JavaRuntimeResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .alignLeft {
            float: left;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="440px" height="200px" addStyleNames="{style.emptyBorder}">
        <g:south size="26">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" width="60px" size="SMALL" type="DANGER" ui:field="btnCancel"
                          text="{locale.changeValueViewCancelButtonTitle}"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="60px" size="SMALL" type="SUCCESS" ui:field="btnChange"
                          text="{locale.changeValueViewChangeButtonTitle}"/>
            </g:FlowPanel>
        </g:south>
        <g:center>
            <g:FlowPanel addStyleNames="{style.emptyBorder}">
                <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                    <g:north size="20">
                        <g:Label ui:field="changeValueLabel" addStyleNames="{style.alignLeft}"/>
                    </g:north>
                    <g:center>
                        <g:TextArea ui:field="value"/>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>