<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
	<ui:with
		type="org.exoplatform.ide.extension.logreader.client.LogReaderMessages"
		field="con"></ui:with>
	<ui:style>
		.pad {
			padding: 5px;
		}
	</ui:style>

	<c:VPanel styleName="{style.pad}" width="100%" height="100%">
	    <g:Label text="{con.getDate}"></g:Label>
		<d:DateBox ui:field="dateField" width="215px">
		</d:DateBox>
		<c:TextField ui:field="limitField" title='{con.getLimit}' width="215"></c:TextField>
		<c:TextField ui:field="offsetField" title='{con.getOffset}' width="215"></c:TextField>
		<g:Label ui:field="messageLabel" height="20px" />
		<c:Panel height="40px">
			<g:HorizontalPanel spacing="5" width="100%" height="100%">
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text='{con.getOkButton}' ui:field="okButton"
						buttonId="ideLogRederSettingsOkButton"></c:ImageButton>
				</g:cell>
				<g:cell horizontalAlignment='ALIGN_CENTER' verticalAlignment="ALIGN_MIDDLE">
					<c:ImageButton text='{con.getCancelButton}' ui:field="cancelButton"
						buttonId="ideLogRederSettingsCancelButton"></c:ImageButton>
				</g:cell>
			</g:HorizontalPanel>
		</c:Panel>
	</c:VPanel>

</ui:UiBinder> 