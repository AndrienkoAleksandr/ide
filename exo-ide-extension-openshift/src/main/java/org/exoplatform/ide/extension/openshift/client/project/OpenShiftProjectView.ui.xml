<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />

   <ui:style>
      .close {
      	margin-right: auto;
      }
      
      .left {
      	float: left;
      }
      
      .space {
      	margin-right: 5px;
      }
      
      .right {
      	float: right;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      	font-weight: bold;
      }
      
      .link {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      }
      
      .padding {
      	padding: 15px;
      }
      
      .actions {
      	border-top: 1px solid #DBDFE5;
      	padding-top: 5px;
      }
   </ui:style>
   <c:Border margin="15" borderColor="transparent">
      <c:layer top="0" bottom="40">
         <c:Border>
            <c:layer>
               <g:FlowPanel styleName="{style.padding}">
                  <g:FlowPanel width="100%" height="28px">
                     <g:Label text="{locale.manageProjectApplicationName}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:TextInput ui:field="nameField" width="73%" height="22px" addStyleNames="{style.left} {style.space}"></c:TextInput>
                     <c:ImageButton ui:field="infoButton" imageName="cancel" width="22" height="22px" text=""
                        title="{locale.manageProjectApplicationProperies}" styleName="{style.left}" imageResource="{resource.propertiesButton}"
                        disabledImageResource="{resource.propertiesButtonDisabled}"></c:ImageButton>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectApplicationUrl}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <g:Anchor ui:field="urlField" addStyleNames="{style.left} {style.link}"></g:Anchor>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="23px">
                     <g:Label text="{locale.manageProjectApplicationType}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <c:Label ui:field="typeField" addStyleNames="{style.left}"></c:Label>
                  </g:FlowPanel>
                  <g:FlowPanel width="100%" height="28px" styleName="{style.actions}">
                     <g:Label text="{locale.manageProjectApplicationActions}" addStyleNames="{style.labelH}" width="20%"></g:Label>
                     <g:Button ui:field="previewButton" height="20px" width="70px" text="{locale.previewButton}" styleName="{style.left} {style.space}"></g:Button>
                     <g:Button ui:field="deleteButton" height="20px" width="70px" text="{locale.deleteButton}" styleName="{style.left}"></g:Button>
                  </g:FlowPanel>
               </g:FlowPanel>
            </c:layer>
         </c:Border>
      </c:layer>
      <c:layer height="22px" bottom="0">
         <g:FlowPanel>
            <c:ImageButton ui:field="closeButton" imageName="cancel" width="90px" height="22px" text="{locale.closeButton}" styleName="{style.right}"></c:ImageButton>
         </g:FlowPanel>
      </c:layer>
   </c:Border>
</ui:UiBinder>
