<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.openshift.client.info"
             xmlns:u="urn:import:org.exoplatform.ide.extension.openshift.client.user">
    <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
    <ui:style>

        .left {
            float: left;
        }

        .clear {
            clear: both;
        }

        .marginTop3 {
            margin-top: 3px;
        }

        .marginTop10 {
            margin-top: 10px;
        }

        .marginRight10 {
            margin-right: 10px;
        }

            /* user info section */
        .userInfoLabel, .userInfoBtn, .userInfoFields {
            float: left;
        }

        .userInfoLabel {
            width: 80px;
        }

        .userInfoBtn {
            margin-left: 10px;
        }

        .switchAccNamespace {
            width: 150px;
        }

        .userInfoFields {
            width: 420px;
        }

        .userInfoWrapper {
            margin: 10px;
        }

            /* application list section */
        .applicationList {
            margin: 10px;
            width: auto;
            position: absolute;
            bottom: 35px;
            top: 65px;
            min-height: 250px;
        }

        .apps {
            width: 200px;
            height: 100%;
            margin-right: -100%;
        }

        .props {
            margin-left: 210px;
        }

        .closeBtn {
            position: absolute;
            bottom: 10px;
            right: 10px;
        }

        .gridBorder {
            border: 1px solid #D4D4D4;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{style.userInfoWrapper}">
            <div class="{style.userInfoLabel}">
                <g:Label text="{locale.userInfoViewLoginField}" styleName="{style.marginTop3}"></g:Label>
            </div>
            <div class="{style.userInfoFields}">
                <f:TextInput ui:field="loginField" width="100%" enabled="false"></f:TextInput>
            </div>
            <div class="{style.userInfoBtn}">
                <f:ImageButton ui:field="switchAccount" text="Switch account" styleName="{style.switchAccNamespace}"></f:ImageButton>
            </div>
        </div>
        <div class="{style.clear}"></div>
        <div class="{style.userInfoWrapper}">
            <div class="{style.userInfoLabel}">
                <g:Label text="{locale.userInfoViewDomainField}" styleName="{style.marginTop3}"></g:Label>
            </div>
            <div class="{style.userInfoFields}">
                <f:TextInput ui:field="domainField" width="100%" enabled="false"></f:TextInput>
            </div>
            <div class="{style.userInfoBtn}">
                <f:ImageButton ui:field="changeNamespace" text="Change namespace" styleName="{style.switchAccNamespace}"></f:ImageButton>
            </div>
        </div>
        <div class="{style.clear}"></div>
        <div class="{style.applicationList}">
            <div class="{style.left} {style.apps}">
                <u:ApplicationGrid ui:field="applicationGrid" width="100%" height="100%" styleName="{style.gridBorder}"></u:ApplicationGrid>
            </div>
            <div class="{style.left} {style.props}">
                <e:ApplicationInfoListGrid ui:field="applicationInfoGrid" width="100%" height="100%"
                                           styleName="{style.gridBorder}"></e:ApplicationInfoListGrid>
                <u:CartridgeGrid ui:field="cartridgeGrid" styleName="{style.gridBorder} {style.marginTop10}" width="100%"></u:CartridgeGrid>
            </div>
        </div>
        <div class="{style.closeBtn}">
            <f:ImageButton ui:field="addCartridgeButton" width="125px" height="22" text="{locale.addCartridgeButton}"
                           imageResource="{resource.addCartridge}" disabledImageResource="{resource.addCartridgeDisable}"
                           styleName="{style.left} {style.marginRight10}"></f:ImageButton>
            <f:ImageButton ui:field="okButton" buttonId="ideUserInfoViewOkButton" width="90px" height="22"
                           text="{locale.okButton}" imageResource="{resource.okButton}"
                           disabledImageResource="{resource.okButtonDisabled}" styleName="{style.left}"></f:ImageButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
