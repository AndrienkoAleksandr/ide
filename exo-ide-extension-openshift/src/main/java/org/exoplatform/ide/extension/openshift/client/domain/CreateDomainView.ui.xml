<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant' />
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
   </ui:style>
   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:Label text="{locale.createDomainViewNameField}"></g:Label>
            <f:TextInput ui:field="nameField" width="100%" height="22px"></f:TextInput>
            <g:FlowPanel height="20px" width="100%"></g:FlowPanel>
            <g:FlowPanel width="190px" styleName="{style.center}">
               <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}"
                  imageResource="{resource.okButton}" addStyleNames="{style.left-float}" disabledImageResource="{resource.okButtonDisabled}">
               </f:ImageButton>
               <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
               <f:ImageButton ui:field="cancelButton" addStyleNames="{style.left-float}" width="90" height="22" text="{locale.cancelButton}"
                  imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}">
               </f:ImageButton>
            </g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 