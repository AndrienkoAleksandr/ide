<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:e="urn:import:org.exoplatform.ide.extension.openshift.client.info"
   xmlns:u="urn:import:org.exoplatform.ide.extension.openshift.client.user">
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
   <ui:style>
      .center {
         display: block;
         margin-left: auto;
         margin-right: auto;
         vertical-align: middle;
      }
   </ui:style>
   <f:Border margin="5" borderColor="transparent">
      <f:layer top="0" height="54px">
         <g:FlowPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="50%">
               <g:west size="50">
                  <g:Label text="{locale.userInfoViewLoginField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="loginField" width="100%" enabled="false"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="50%">
               <g:west size="50">
                  <g:Label text="{locale.userInfoViewDomainField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="domainField" width="100%" enabled="false"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>

         </g:FlowPanel>
      </f:layer>
      <f:layer top="54px" bottom="30px">
         <g:DockLayoutPanel width="100%" unit="PCT" height="100%">
            <g:west size="25">
               <f:Border margin="2">
                  <f:layer>
                     <u:ApplicationGrid ui:field="applicationGrid" width="100%" height="100%"></u:ApplicationGrid>
                  </f:layer>
               </f:Border>
            </g:west>
            <g:east size="75">
               <f:Border margin="2">
                  <f:layer>
                     <e:ApplicationInfoListGrid ui:field="applicationInfoGrid" width="100%" height="100%"></e:ApplicationInfoListGrid>
                  </f:layer>
               </f:Border>
            </g:east>
         </g:DockLayoutPanel>
      </f:layer>
      <f:layer bottom="0" height="30px">
         <g:FlowPanel width="90px" styleName="{style.center}" height="24px">
            <f:ImageButton ui:field="okButton" buttonId="ideUserInfoViewOkButton" width="90" height="22"
               text="{locale.okButton}" imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>

</ui:UiBinder>
