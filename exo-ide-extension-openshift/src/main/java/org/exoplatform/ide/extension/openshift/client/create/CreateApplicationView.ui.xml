<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
   </ui:style>
   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:Label text="{locale.createApplicationViewWorkDirField}"></g:Label>
            <f:TextInput ui:field="workDirField" width="100%" height="22px" enabled="false"></f:TextInput>
            <g:FlowPanel width="100%" height="10px"></g:FlowPanel>
            <g:Label text="{locale.createApplicationViewNameField}"></g:Label>
            <f:TextInput ui:field="nameField" width="100%" height="22px"></f:TextInput>
            <g:FlowPanel width="100%" height="10px"></g:FlowPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px">
               <g:west size="150">
                  <g:Label text="{locale.createApplicationViewTypeField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:SelectItem ui:field="typeField" width="100%" height="22px"></f:SelectItem>
               </g:center>
            </g:DockLayoutPanel>
            <g:FlowPanel width="100%" height="10px"></g:FlowPanel>
            <g:FlowPanel width="190px" styleName="{style.center}">
               <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}"
                  imageResource="{resource.okButton}" addStyleNames="{style.left-float}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
               <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
               <f:ImageButton ui:field="cancelButton" addStyleNames="{style.left-float}" width="90" height="22" text="{locale.cancelButton}"
                  imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
            </g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 