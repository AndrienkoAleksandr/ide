<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
   <f:Border margin="7" borderColor="transparent">
      <g:VerticalPanel spacing="3" horizontalAlignment="center">
         <f:TextField ui:field="workDirField" title="{locale.createApplicationViewWorkDirField}" width="100%" height="22px" enabled="false"></f:TextField>
         <f:TextField ui:field="nameField" title="{locale.createApplicationViewNameField}" width="100%" height="22px"></f:TextField>

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createApplicationViewTypeField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:SelectItem ui:field="typeField" width="100%" height="22px" showTitle="false"></f:SelectItem>
            </g:cell>
         </g:HorizontalPanel>
         <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
            <f:IButton ui:field="createButton" width="90" height="22" title="{locale.createButton}" icon="{resource.okButton.getURL}"
               disableIcon="{resource.okButtonDisabled.getURL}"></f:IButton>
            <f:IButton ui:field="cancelButton" width="90" height="22" title="{locale.cancelButton}" icon="{resource.cancelButton.getURL}"
               disableIcon="{resource.cancelButtonDisabled.getURL}"></f:IButton>
         </g:HorizontalPanel>
      </g:VerticalPanel>
   </f:Border>
</ui:UiBinder> 