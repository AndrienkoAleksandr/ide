<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant'/>

    <ui:style>
        .margin15 {
            margin: 15px;
        }

        .left {
            float: left;
        }

        .marginBottom10 {
            margin-bottom: 10px;
        }

        .marginRight10 {
            margin-right: 10px;
            margin-left: 13px;
        }

        .center {
            margin: 0 auto;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.margin15}">
        <div class="{style.marginBottom10}">
            <f:SelectItem ui:field="cartridgesList" width="100%" height="22px"></f:SelectItem>
        </div>
        <div class="{style.center}">
            <f:ImageButton ui:field="okButton" width="120px" height="22" text="{locale.addCartridgeButton}"
                           imageResource="{resource.okButton}"
                           disabledImageResource="{resource.okButtonDisabled}" styleName="{style.left} {style.marginRight10}"></f:ImageButton>
            <f:ImageButton ui:field="cancelButton" width="90px" height="22" text="{locale.cancelButton}"
                           imageResource="{resource.cancelButton}"
                           disabledImageResource="{resource.cancelButtonDisabled}" styleName="{style.left}"></f:ImageButton>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>