<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:e="urn:import:org.exoplatform.ide.extension.openshift.client.info">
   <ui:with field='resource' type='org.exoplatform.ide.extension.openshift.client.OpenShiftClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.openshift.client.OpenShiftLocalizationConstant"></ui:with>
   <g:LayoutPanel>
      <g:layer top="0" bottom="30px">
         <f:Border margin="10">
            <f:layer>
               <e:ApplicationInfoListGrid width="100%" ui:field="applicationInfoGrid"></e:ApplicationInfoListGrid>
            </f:layer>
         </f:Border>
      </g:layer>
      <g:layer bottom="0" height="30px">
         <g:HorizontalPanel height="30px" horizontalAlignment="center">
            <f:ImageButton ui:field="okButton" buttonId="ide.OpenShift.ApplicationInfo.OkButton" width="90" height="22"
               text="{locale.okButton}" imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
         </g:HorizontalPanel>
      </g:layer>
   </g:LayoutPanel>

</ui:UiBinder> 