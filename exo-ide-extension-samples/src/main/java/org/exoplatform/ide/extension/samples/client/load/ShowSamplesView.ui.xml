<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>
   
   <ui:style>
      .table
      {
         width:100%;
         height:100%;
         border-collapse: collapse;
      }
   </ui:style>

   <f:VPanel>
      <f:Border margin="10">
         <g:ScrollPanel>
            <e:SamplesListGrid width="100%" ui:field="samplesListGrid"></e:SamplesListGrid>
         </g:ScrollPanel>
      </f:Border>
      
      <g:HTMLPanel height="30px">
         
         <table class="{style.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:60px;">
                  <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" 
                     buttonId="ideImportSamplesCloseButtonId"></f:ImageButton>
               </td>
               
               <td><div style="width:100%; height:1px;"></div></td>
               
               <td style="width:100px">
                  <f:ImageButton ui:field="nextButton" text="Next" width="90" height="22" 
                     imageResource="{resource.next}"
                     disabledImageResource="{resource.nextDisabled}" 
                     buttonId="ideImportSamplesNextButtonId"></f:ImageButton>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
      </g:HTMLPanel>
      
      <g:FlowPanel height="10px"></g:FlowPanel>
   </f:VPanel>
</ui:UiBinder> 