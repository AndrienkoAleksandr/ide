<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <f:Border margin="5" borderColor="transparent">
      <f:layer>
         <g:VerticalPanel spacing="3" horizontalAlignment="center">
            <f:Label ui:field="loginLabel" width="100%" styleName="{resource.css.loginLable}"></f:Label>
            <f:TextField ui:field="emailField" title="{locale.loginViewEmailField}" height="22" width="100%"></f:TextField>
            <f:PasswordField ui:field="passwordField" title="{locale.loginViewPasswordField}" height="22" width="100%"></f:PasswordField>

            <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
               <f:ImageButton ui:field="loginButton" width="90" height="22" text="{locale.loginButton}"
                  imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}"></f:ImageButton>
               <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}"
                  imageResource="{resource.cancel}" disabledImageResource="{resource.cancelDisabled}"></f:ImageButton>
            </g:HorizontalPanel>

         </g:VerticalPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 