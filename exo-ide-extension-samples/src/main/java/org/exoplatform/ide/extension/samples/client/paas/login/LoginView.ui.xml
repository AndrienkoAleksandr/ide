<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .spacing {
         margin-top: 10px;
      }
         
      .label {
         margin-bottom: 5px;
         cursor: default;
         font-family: Verdana, Bitstream Vera Sans, sans-serif;
         font-size: 11px;
         font-style: normal;
         font-weight: normal;
      }
      
      .center {
         display: block;
         margin-left: auto;
         margin-right: auto;
      }
      
      .left-float {
         float: left;
      }
   </ui:style>
   
   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <f:Label ui:field="loginLabel" width="100%" styleName="{resource.css.loginLable}"></f:Label>
            <g:Label addStyleNames="{style.label} {style.spacing}" text="{locale.loginViewEmailField}" width="100%"></g:Label>
            <f:TextInput ui:field="emailField" title="" width="100%"></f:TextInput>
            <g:Label addStyleNames="{style.label} {style.spacing}" text="{locale.loginViewPasswordField}" width="100%"></g:Label>
            <f:PasswordTextInput ui:field="passwordField" width="100%"></f:PasswordTextInput>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="33px" bottom="0">
         <g:FlowPanel width="190px" addStyleNames="{style.center} {style.spacing}">
            <f:ImageButton ui:field="loginButton" width="90px" text="{locale.loginButton}" imageResource="{resource.ok}"
               disabledImageResource="{resource.okDisabled}" styleName="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90px" text="{locale.cancelButton}" imageResource="{resource.cancel}"
               disabledImageResource="{resource.cancelDisabled}" styleName="{style.left-float}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
   
</ui:UiBinder> 