<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style type='org.exoplatform.ide.extension.samples.client.inviting.github.UserCard.UserCardStyle'>
	
		.userField
		{
			width:300px;
			height:74px;
			overflow: hidden;
			position: relative;
			float: left;
		}	
		
		.userFieldBody
		{
			position: absolute;
			left:5px;
			top:5px;
			right:5px;
			bottom:5px;
			overflow: hidden;
		}
		
		.userFieldBody:HOVER
		{
			background: #F5F5FF;
		}
		
		.userFieldBodySelected
		{
			position: absolute;
			left:5px;
			top:5px;
			right:5px;
			bottom:5px;
			overflow: hidden;
			background: #EEEEFF;
		}
		
		.userFieldBodySelected:HOVER
		{
		}				
		
		.userCheck
		{
			position: absolute;
			left:0px;
			top:26px;
			width:20px;
			height:20px;
			overflow: hidden;
		}
		
		.check
		{
			margin-top: 0px;
			margin-bottom: 0px;
		}
		
		.userAvatarImage
		{
			position: absolute;
			left:22px;
			top:8px;
			width:48px;
			height: 48px;
			overflow: hidden;
			cursor: pointer;
		}				
		
		.userName
		{
			position: absolute;
			left:80px;
			top:8px;
			right:10px;
			height: 16px;
			overflow: hidden;
			
			font-family:Verdana, Bitstream Vera Sans, sans-serif;
			font-size:12px;
			font-weight: normal;
			font-style: normal;
			line-height:12px;
		}
		
		.userCompany
		{
			position: absolute;
			left:80px;
			top:24px;
			right:10px;
			height: 16px;
			overflow: hidden;
			
			font-family:Verdana, Bitstream Vera Sans, sans-serif;
			font-size:12px;
			font-weight: normal;
			font-style: normal;
			line-height:12px;
		}
		
		.userEmail
		{
			position: absolute;
			left:80px;
			top:40px;
			right:10px;
			height: 16px;
			overflow: hidden;
			
			font-family:Verdana, Bitstream Vera Sans, sans-serif;
			font-size:12px;
			font-weight: normal;
			font-style: normal;
			line-height:12px;
		}
		
		
	</ui:style>

	<g:FlowPanel styleName="{style.userField}">
		<g:FlowPanel ui:field="userFieldBody" styleName="{style.userFieldBody}">
			<g:FlowPanel styleName="{style.userCheck}">
				<g:CheckBox ui:field="checkBox" styleName="{style.check}"></g:CheckBox>
			</g:FlowPanel>
			<g:Image ui:field="avatarImage" styleName="{style.userAvatarImage}"></g:Image>
			<g:Label ui:field="name" styleName="{style.userName}"></g:Label>
			<g:Label ui:field="company" styleName="{style.userCompany}"></g:Label>
			<g:Label ui:field="email" styleName="{style.userEmail}"></g:Label>
		</g:FlowPanel>
	
	</g:FlowPanel>

