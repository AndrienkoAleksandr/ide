<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	>
	
	<ui:style>
      
      .label {
      	margin-bottom: 5px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
		.center {
	      	display: block;
	      	margin-left: auto;
	      	margin-right: auto;
		}
		
      .floatRight {
      	float: right;
      }		
      
      .textArea {
	    -moz-box-sizing: border-box;
	    -webkit-box-sizing: border-box;
	    box-sizing: border-box;
		border-color: #ABADB3 #DBDFE5 #DBDFE5 #DBDFE5;
		border-width: 1px;
		border-style: solid;
		resize: none;
	  }

	</ui:style>
	
	<f:Border>
	
	  <f:layer top="20" height="15" left="15" right="15" >
	    <g:Label text="Enter email adresses:" height="15px" styleName="{style.label}"></g:Label>
	  </f:layer>
	  
	  <f:layer top="45" height="22" left="15" right="15" >
	    <f:TextInput ui:field="emailListField" width="100%" height="22px"></f:TextInput>
	  </f:layer>
	
	  <f:layer top="100" height="22" left="15" width="200" >
	    <g:Label text="Or find contact from:" styleName="{style.label}"></g:Label>
	  </f:layer>
	  
	  <f:layer top="97" height="22" left="150" width="100" >
	    <f:ImageButton imageName="ok" text="Google" ui:field="useGoogleButton"></f:ImageButton>
	  </f:layer>
	  
	  <f:layer top="97" height="22" left="250" width="100" >
	    <f:ImageButton imageName="ok" text="GitHub" ui:field="useGitHubButton"></f:ImageButton>
	  </f:layer>

      <f:layer top="135" bottom="200" left="15" right="15" >
        <f:TextInput ui:field="contactListField" width="100%" height="100%"></f:TextInput>
      </f:layer>

      <f:layer bottom="150" left="15" right="15" height="20" >
        <g:Label text="Write a personal message:" styleName="{style.label}" width="100%" height="100%"></g:Label>
      </f:layer>

      <f:layer bottom="70" left="15" right="15" height="70" >
      	<f:TextAreaInput width="100%" height="100%" styleName="{style.textArea}"></f:TextAreaInput>
      </f:layer>

      <f:layer height="22" left="15" bottom="25" right="15">
         <g:FlowPanel width="100%" height="100%" styleName="{style.center}">
            <f:ImageButton ui:field="inviteButton" width="90" height="22" text="Invite" imageName="ok"
               addStyleNames="{style.floatRight}"></f:ImageButton>
			<g:FlowPanel width="15px" height="22px" addStyleNames="{style.floatRight}"></g:FlowPanel>
            <f:ImageButton ui:field="closeButton" width="90" height="22" text="Close" imageName="cancel"
               addStyleNames="{style.floatRight}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
      
	</f:Border>
</ui:UiBinder>
