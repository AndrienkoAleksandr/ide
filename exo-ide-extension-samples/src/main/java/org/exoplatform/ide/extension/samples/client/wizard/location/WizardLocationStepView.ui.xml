<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.location" xmlns:n="urn:import:org.exoplatform.ide.client.framework.ui">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .bottomBox {
      display: block;
      margin:
      0 8px;
      }

      .left-float {
      float: left;
      }

      .right {
      position: absolute;
      right: 0;
      }

      .middle {
      position: absolute;
      right: 100px;
      }

      .newFolderDivInput {
      position: absolute;
      right: 100px;
      left: 100px;
      }

      .label {
      margin-top: 5px;
      float: left;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.wizardLocationTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.wizardLocationText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>
      
      <!-- navigation tree -->
      <g:layer top="60px" bottom="67px">
         <f:Border margin="8">
            <f:layer>
               <g:ScrollPanel>
                  <n:ItemTree styleName="{resource.css.itemsTree}" ui:field="navigationTreeGrid"></n:ItemTree>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </g:layer>
      
      <!-- panel to create new folder -->
      <g:layer height="30px" bottom="35px">
         <g:FlowPanel width="auto" styleName="{style.bottomBox}">

            <g:Label text="{locale.wizardLocationNewFolder}" width="90px" styleName="{style.leftFloat}"></g:Label>

            <g:SimplePanel styleName="{style.newFolderDivInput}">
               <f:TextInput ui:field="newFolderField" width="100%" name="ideSelectLocationNewFolderFieldName"></f:TextInput>
            </g:SimplePanel>

            <f:ImageButton ui:field="newFolderButton" text="{locale.createButton}" width="90px" styleName="{style.right}" imageResource="{resource.add}"
               disabledImageResource="{resource.addDisabled}" buttonId="ideSelectLocationNewFolderButtonId"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>
      
      <!-- Buttons panel -->
      <g:layer height="30px" bottom="0">
         <g:FlowPanel width="auto" styleName="{style.bottomBox}">
            <f:ImageButton ui:field="cancelButton" styleName="{style.left-float}" width="90px" text="{locale.cancelButton}" imageName="cancel"
               buttonId="ideSelectLocationCancelButtonId"></f:ImageButton>

            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

            <f:ImageButton ui:field="backButton" width="90px" styleName="{style.middle}" text="{locale.backButton}" imageResource="{resource.back}"
               disabledImageResource="{resource.backDisabled}" buttonId="ideSelectLocationBackButtonId"></f:ImageButton>

            <f:ImageButton ui:field="nextButton" width="90px" styleName="{style.right}" text="{locale.nextButton}" imageResource="{resource.next}"
               disabledImageResource="{resource.nextDisabled}" buttonId="ideWizardLocationNextButtonId"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder> 