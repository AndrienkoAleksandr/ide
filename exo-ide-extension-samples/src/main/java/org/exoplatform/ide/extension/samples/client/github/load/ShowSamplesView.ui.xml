<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.github.load">

    <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

    <ui:style>
        .buttonsBox {
            display: block;
            margin: 0 8px;
        }

        .left-float {
            float: left;
        }

        .rightButton {
            position: absolute;
            right: 0;
        }

        .formLine {
            margin-top: 8px;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer>
            <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
                <g:Label text="{locale.importLoadTitle}" styleName="{resource.css.labelTitle}"></g:Label>
                <g:Label text="{locale.importLoadText}" styleName="{resource.css.labelDescription}"></g:Label>
            </g:FlowPanel>
        </g:layer>

        <g:layer top="60px" bottom="33px">
            <f:Border margin="8">
                <f:layer>
                    <g:ScrollPanel>
                        <e:SamplesListGrid width="100%" ui:field="samplesListGrid"></e:SamplesListGrid>
                    </g:ScrollPanel>
                </f:layer>
            </f:Border>
        </g:layer>

        <g:layer height="33px" bottom="0">
            <g:FlowPanel width="auto" styleName="{style.buttonsBox}">
                <g:DockLayoutPanel width="260px" unit="PX" height="22px" stylePrimaryName="{style.left-float}">
                    <g:west size="60">
                        <g:Label text="Name" height="18px"></g:Label>
                    </g:west>
                    <g:center>
                        <f:TextInput ui:field="loadProjectName" width="160px" height="22px"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
                <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>

                <f:ImageButton ui:field="cancelButton" styleName="{resource.css.middle}" width="90px" text="{locale.cancelButton}"
                               imageName="cancel"
                               buttonId="ideImportSamplesCloseButtonId"></f:ImageButton>

                <f:ImageButton ui:field="nextButton" text="{locale.nextButton}" width="90px" styleName="{style.rightButton}"
                               imageResource="{resource.next}"
                               disabledImageResource="{resource.nextDisabled}" buttonId="ideImportSamplesNextButtonId"></f:ImageButton>

            </g:FlowPanel>
        </g:layer>

    </g:LayoutPanel>
</ui:UiBinder> 