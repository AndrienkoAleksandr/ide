<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .selectAndInputWrapperBox {
      position: absolute;
      right: 1px;
      left: 100px;
      }
   </ui:style>
   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.wizardDefinitionTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.wizardDefinitionText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <!-- panel to set project properties -->
      <g:layer top="75px" height="30px">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <g:Label text="{locale.wizardDefinitionName}" width="90px" styleName="{resource.css.leftFloat}"></g:Label>
            <g:FlowPanel width="10px" styleName="{resource.css.leftFloat}"></g:FlowPanel>
            <g:SimplePanel styleName="{style.selectAndInputWrapperBox}">
               <f:TextInput ui:field="nameProjectField" width="100%" height="22"></f:TextInput>
            </g:SimplePanel>
         </g:FlowPanel>
      </g:layer>
      
      <g:layer top="105px" height="30px">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <g:Label text="{locale.wizardDefinitionType}" width="90px" styleName="{resource.css.leftFloat}"></g:Label>
            <g:FlowPanel width="10px" styleName="{resource.css.leftFloat}"></g:FlowPanel>
            <g:SimplePanel styleName="{style.selectAndInputWrapperBox}">
               <f:SelectItem ui:field="typeSelectField" width="100%" height="22px"></f:SelectItem>
            </g:SimplePanel>
         </g:FlowPanel>
      </g:layer>

      <!-- Buttons panel -->
      <g:layer height="33px" bottom="0">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <f:ImageButton ui:field="cancelButton" styleName="{resource.css.leftFloat}" width="90px" text="{locale.cancelButton}"
               imageName="cancel" buttonId="ideWizardDefinitionCancelButtonId"></f:ImageButton>

            <g:FlowPanel width="10px" height="22px" styleName="{resource.css.leftFloat}"></g:FlowPanel>

            <f:ImageButton ui:field="nextButton" width="90px" styleName="{resource.css.right}" text="{locale.nextButton}" imageResource="{resource.next}"
               disabledImageResource="{resource.nextDisabled}" buttonId="ideWizardDefinitionNextButtonId"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder> 