<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style type='org.exoplatform.ide.extension.samples.client.inviting.manage.InvitedDeveloperTile.Style'>

        .userField {
            width: 100%;
            height: auto;
            overflow: hidden;
            position: relative;
            float: left;
            clear: both;
        }

        .userField:hover {
            background: #F5F5FF;
        }

        .userFieldBodySelected {
        }

        .userFieldBody {
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.userField}">
        <div style="">
            <div style="float:left; margin:10px">
                <g:Label ui:field="recipient"></g:Label>
            </div>
            <div style="float:right; margin:10px">
                <div style="float:left;">
                    <g:Label ui:field="status"></g:Label>
                </div>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
