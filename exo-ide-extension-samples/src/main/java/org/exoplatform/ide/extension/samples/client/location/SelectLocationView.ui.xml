<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.location"
             xmlns:n="urn:import:org.exoplatform.ide.client.framework.ui">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>
   
   <ui:style>
      .table
      {
         width:100%;
         height:100%;
         border-collapse: collapse;
      }
      .itemsTree
      {
         z-index:0;
         width:100%;
         height:100%;
      }
   </ui:style>

   <g:FlowPanel>
      <!-- navigation tree -->
      <f:Border margin="10">
      <f:layer>
         <g:ScrollPanel>
            <n:ItemTree styleName="{style.itemsTree}" ui:field="navigationTreeGrid"></n:ItemTree>
         </g:ScrollPanel>
         </f:layer>
      </f:Border>
      
      <!-- panel to create new folder -->
      <g:HTMLPanel height="30px">
         
         <table class="{style.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="New Folder" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:TextField ui:field="newFolderField" width="100%" height="22" name="ideSelectLocationNewFolderFieldName"></f:TextField>
               </td>
               
               <td><div style="width:3px; height:1px;"></div></td>
               
               <td style="width:100px">
                  <f:ImageButton ui:field="newFolderButton" text="{locale.createButton}" width="90px" height="22" 
                     imageResource="{resource.add}"
                     disabledImageResource="{resource.addDisabled}"
                     buttonId="ideSelectLocationNewFolderButtonId"></f:ImageButton>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
      </g:HTMLPanel>
      
      <g:FlowPanel height="10px"></g:FlowPanel>

      <!-- Buttons panel -->
      <g:HTMLPanel height="30px">
         
         <table class="{style.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" 
                     buttonId="ideSelectLocationCancelButtonId"></f:ImageButton>
               </td>
               
               <td style="width:100%;"><div style="width:100%; height:1px;"></div></td>
               
               <td style="width:90px; height:22px">
                  <f:ImageButton ui:field="backButton" width="90" height="22" text="{locale.backButton}" 
                     imageResource="{resource.back}"
                     disabledImageResource="{resource.backDisabled}" 
                     buttonId="ideSelectLocationBackButtonId"></f:ImageButton>
               </td>
               
               <td style="width:3px;"><div style="width:3px; height:1px;"></div></td>
               
               <td style="width:90px">
                  <f:ImageButton ui:field="finishButton" width="90" height="22" text="{locale.finishButton}" 
                     imageResource="{resource.ok}"
                     disabledImageResource="{resource.okDisabled}"
                     buttonId="ideSelectLocationFinishButtonId"></f:ImageButton>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
      </g:HTMLPanel>
      
      <g:FlowPanel height="10px"></g:FlowPanel>
   </g:FlowPanel>
</ui:UiBinder> 