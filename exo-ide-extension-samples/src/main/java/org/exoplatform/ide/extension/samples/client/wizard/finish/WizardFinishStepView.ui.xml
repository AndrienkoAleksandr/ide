<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .formLine {
      margin-top: 8px;
      }
   </ui:style>
   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.wizardFinishTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.wizardFinishText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="80px" height="100px">
         <g:FlowPanel stylePrimaryName="{resource.css.innerBox}">
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.wizardFinishName}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:Label ui:field="nameLabel" width="90px" styleName="{resource.css.labelValue}"></f:Label>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.wizardFinishType}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:Label ui:field="typeLabel" width="90px" styleName="{resource.css.labelValue}"></f:Label>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.wizardFinishDeployment}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:Label ui:field="deploymentLabel" width="90px" styleName="{resource.css.labelValue}"></f:Label>
               </g:center>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </g:layer>
         
      <!-- Buttons -->
      <g:layer height="33px" bottom="0">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <f:ImageButton ui:field="cancelButton" styleName="{resource.css.leftFloat}" width="90px" text="{locale.cancelButton}"
               imageName="cancel" buttonId="ideWizardFinishCancelButtonId"></f:ImageButton>

            <g:FlowPanel width="10px" height="22px" styleName="{resource.css.leftFloat}"></g:FlowPanel>

            <f:ImageButton ui:field="backButton" width="90px" styleName="{resource.css.middle}" text="{locale.backButton}"
               imageResource="{resource.back}" disabledImageResource="{resource.backDisabled}" buttonId="ideWizardFinishBackButtonId"></f:ImageButton>

            <f:ImageButton ui:field="finishButton" width="90px" styleName="{resource.css.right}" text="{locale.finishButton}"
               imageResource="{resource.ok}" disabledImageResource="{resource.okDisabled}" buttonId="ideWizardFinishButtonId"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder> 