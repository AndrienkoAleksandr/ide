<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
   <!-- To make button look like link -->
      .button-link
      {
      cursor: pointer;
      border: none;
      /* Disable the button-style */
      background-color: transparent;
      padding: 0px;
      color: #0000aa;
      text-decoration: underline;
      font-family: Arial Unicode MS,Arial,sans-serif;
      font-size: small;
      }

      .text-block
      {
      text-align: justify;
      }

   </ui:style>

   <f:VPanel>

      <f:Border margin="1">
         <g:HTMLPanel>
            <table style="width:100%; height:100%; margin-top:10px;" border="0" cellpadding="0">
               <tr style="height:50px;">
                  <td colspan="2" style="width:20%; height:50px; vertical-align: middle;">
                     <div style="width:10px; height:1px;"></div>
                  </td>
                  <td colspan="2" style="height:50px; vertical-align: middle;">
                  <!-- About IDE -->
                     <!--g:HorizontalPanel spacing="3" horizontalAlignment="left" width="500px" height="50px"-->
                     <div style="max-width: 450px; margin: 5 auto;">
                        <div style="float:left">
                           <g:Image resource="{resource.ideLogo}"></g:Image>
                        </div>
                        <g:Label text="{locale.aboutIde}" styleName="{style.text-block}"></g:Label>
                     </div>
                     <!--/g:HorizontalPanel-->
                  </td>
                  <td colspan="2" style="width:20%; height:50px; vertical-align: middle;">
                     <div style="width:10px; height:1px;"></div>
                  </td>
               </tr>
               <tr style="height:50px;">
                  <td colspan="2" style="width:20%; height:auto; vertical-align: middle;">
                  </td>
                  <td colspan="2" style="height:auto; vertical-align: middle;">
                  <!-- Tutorial link -->
                     <div style="max-width: 200px; margin: 5 auto;">
                        <g:HorizontalPanel verticalAlignment="middle" height="auto">
                           <g:Image ui:field="docImage" resource="{resource.welcomeTutorial}"></g:Image>
                           <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                              <g:Anchor ui:field="docLink" text="{locale.tutorialTitle}" target="_blank"
                                 href="https://wiki-int.exoplatform.org/display/exoproducts/eXo+IDE+User+Manual"></g:Anchor>
                              <g:Label text="{locale.tutorialText}"></g:Label>
                           </g:VerticalPanel>
                        </g:HorizontalPanel>
                     </div>
                  </td>
                  <td colspan="2" style="width:20%; height:auto; vertical-align: middle;">
                  </td>
               </tr>
               <tr style="height:50px;">
                  <td colspan="2" style="width:20%; height:auto; vertical-align: middle;">
                  </td>
                  <td colspan="2" style="height:auto; vertical-align: middle;">
                  <!-- Samples link -->
                     <div style="max-width: 200px; margin: 5 auto;">
                        <g:HorizontalPanel verticalAlignment="middle" height="auto">
                           <g:Image ui:field="samplesImage" resource="{resource.welcomeSamples}"></g:Image>
                           <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                              <g:Button ui:field="samplesLink" text="{locale.sampleTitle}" styleName="{style.button-link}"></g:Button>
                              <g:Label text="{locale.sampleText}"></g:Label>
                           </g:VerticalPanel>
                        </g:HorizontalPanel>
                     </div>
                  </td>
                  <td colspan="2" style="width:20%; height:auto; vertical-align: middle;">
                  </td>
               </tr>
               <tr style="height:100%;">
                  <td colspan="2" style="width:20%; height:100%; vertical-align: middle;">
                     <div style="width:10px; height:1px;"></div>
                  </td>
                  <td colspan="2" style="height:50px; vertical-align: middle;">
                     <div style="width:10px; height:1px;"></div>
                  </td>
                  <td colspan="2" style="width:20%; height:50px; vertical-align: middle;">
                     <div style="width:10px; height:1px;"></div>
                  </td>
               </tr>
            </table>
         </g:HTMLPanel>
      </f:Border>

   </f:VPanel>


</ui:UiBinder>
