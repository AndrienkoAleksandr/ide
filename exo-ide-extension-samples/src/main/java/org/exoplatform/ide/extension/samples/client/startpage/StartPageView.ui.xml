<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        >

    <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

    <!-- To make button look like link -->
    <ui:style>

        .button-link, .a {
            cursor: pointer;
            border: none;
            /* Disable the button-style */
            background-color: transparent;
            font-family: Verdana, Arial, sans-serif;
            font-size: 18px;
            font-weight: bold;
            color: #5E5E5E;
            text-decoration: none;
            text-align: left;
        }

        .button-link {
            margin-left: -10px;
        }

        .a:visited {
            color: #5E5E5E;
        }

        .a:hover {
            color: #5E5E5E;
            text-decoration: underline;
        }

        .button-link:hover {
            text-decoration: underline;
        }

        .hPanel {
            margin-top: 0px;
        }

        .scroll {
            overflow-x: scroll;
        }

        .img {
            width: 80px;
            height: 80px;
            margin-left: 15px;
            margin-right: 10px;
        }

        .linkText {
            margin-left: 0px;
        }

        .welcomaLabel {
            font-size: 12px;
            color: #5E5E5E;
            font-family: Verdana, Arial, sans-serif;
        }

        .fbLikePanel {
            position: absolute;
            width: 100px;
            height: 25px;
            background: none;
            border: none;
            top: 28px;
            right: 0px;
            overflow: hidden;
        }

        .floatLeft {
            float: left;
        }

        .clear {
            clear: both;
        }

        .item {
            float: left;
            width: 50%;
            margin: 10px 0;
        }

        .height20px {
            height: 20px;
        }

        .linkWithText {
            max-width: 60%;
        }
    </ui:style>

    <g:HTMLPanel>
        <div class="{resource.css.welcomeHeader}">
            <div class="{style.floatLeft}">
                <g:Image ui:field="logo" resource="{resource.ideLogo}"
                         styleName="{resource.css.welcomeHeaderLogo}"></g:Image>
            </div>
            <div class="{style.floatLeft}">
                <g:Label text="{locale.aboutIde}" styleName="{resource.css.welcomeHeaderText}"></g:Label>
                <iframe class="{style.fbLikePanel}" src="/IDE/fblike.html" frameborder="0" marginheight="0px"
                        marginwidth="0px;" style="overflow:hidden;" allowtransparency="true"></iframe>
            </div>
        </div>

        <div class="{style.scroll} {resource.css.welcomeTopContainer}">
            <div class="{style.height20px}"></div>
            <div class="{style.hPanel}">
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.welcomeProject}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Button ui:field="projectLink" text="{locale.projectTitle}"
                                  styleName="{style.button-link}"></g:Button>
                        <g:Label text="{locale.projectText}"
                                 styleName="{style.linkText} {style.welcomaLabel}"></g:Label>
                    </div>
                </div>
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.documentation}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Anchor ui:field="documentationLink" styleName="{style.a}"
                                  text="{locale.documentationTitle}"
                                  target="_blank" href="./docs"></g:Anchor>
                        <g:Label text="{locale.documentationText}" styleName="{style.welcomaLabel}"></g:Label>
                    </div>
                </div>
            </div>
            <div class="{style.clear}"></div>
            <div class="{style.hPanel}">
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.importFromGithub}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Button ui:field="importLink" text="{locale.importTitle}"
                                  styleName="{style.button-link}"></g:Button>
                        <g:Label text="{locale.importText}"
                                 styleName="{style.linkText}  {style.welcomaLabel}"></g:Label>
                    </div>
                </div>
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.invitation}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Button ui:field="invitationsLink" text="{locale.invitationTitle}"
                                  styleName="{style.button-link}"></g:Button>
                        <g:Label text="{locale.invitationText}" styleName="{style.linkText} {style.welcomaLabel}"></g:Label>
                    </div>
                </div>
            </div>
            <div class="{style.clear}"></div>
            <div class="{style.hPanel}">
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.welcomeClone}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Button ui:field="cloneLink" text="{locale.cloneTitle}"
                                  styleName="{style.button-link}"></g:Button>
                        <g:Label text="{locale.cloneText}"
                                 styleName="{style.linkText} {style.welcomaLabel}"></g:Label>
                    </div>
                </div>
                <div class="{style.item}">
                    <div class="{style.floatLeft} {style.img}">
                        <g:Image resource="{resource.support}"></g:Image>
                    </div>
                    <div class="{style.floatLeft} {style.linkWithText}">
                        <g:Anchor ui:field="supportLink" text="{locale.supportTitle}"
                                  styleName="{style.a}"
                                  href="javascript:UserVoice.showPopupWidget();"></g:Anchor>
                        <g:Label text="{locale.supportText}"
                                 styleName="{style.linkText} {style.welcomaLabel}"></g:Label>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
