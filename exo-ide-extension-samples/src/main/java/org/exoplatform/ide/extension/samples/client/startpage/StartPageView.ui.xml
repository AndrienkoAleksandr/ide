<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <!-- To make button look like link -->
   <ui:style>
      .button-link {
      	cursor: pointer;
      	border: none;
      	/* Disable the button-style */
      	background-color: transparent;
      	padding: 0px;
      	color: #0000aa;
      	text-decoration: underline;
      	font-family: Arial Unicode MS, Arial, sans-serif;
      	font-size: small;
      }
      
      .text-block {
      	text-align: justify;
      	padding-left: 20px;
      }
      
      .hPanel {
      	padding: 20px 20px 0 20px;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer height="100%" top="0px">
         <f:Border margin="1">
            <f:layer>
               <g:FlowPanel>
         <!-- About IDE -->
                  <g:HorizontalPanel verticalAlignment="middle" stylePrimaryName="{style.hPanel}" height="auto"
                     width="100%">
                     <g:Image resource="{resource.ideLogo}" width="160px"></g:Image>
                     <g:Label text="{locale.aboutIde}" styleName="{style.text-block}"></g:Label>
                  </g:HorizontalPanel>

                  <g:HorizontalPanel verticalAlignment="middle" stylePrimaryName="{style.hPanel}" height="auto"
                     width="100%">
                     <!-- Tutorial link -->
                     <g:HorizontalPanel verticalAlignment="middle" height="auto">
                        <g:Image ui:field="docImage" resource="{resource.welcomeTutorial}"></g:Image>
                        <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                           <g:Anchor ui:field="docLink" text="{locale.tutorialTitle}" target="_blank"
                              href="https://wiki-int.exoplatform.org/display/exoproducts/eXo+IDE+User+Manual"></g:Anchor>
                           <g:Label text="{locale.tutorialText}"></g:Label>
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                        <!-- Samples link -->
                     <g:HorizontalPanel verticalAlignment="middle" height="auto">
                        <g:Image ui:field="samplesImage" resource="{resource.welcomeSamples}"></g:Image>
                        <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                           <g:Button ui:field="samplesLink" text="{locale.sampleTitle}" styleName="{style.button-link}"></g:Button>
                           <g:Label text="{locale.sampleText}"></g:Label>
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                  </g:HorizontalPanel>

                  <g:HorizontalPanel verticalAlignment="middle" stylePrimaryName="{style.hPanel}" height="auto"
                     width="100%">
                     <!-- Projects link -->
                     <g:HorizontalPanel verticalAlignment="middle" height="auto">
                        <g:Image resource="{resource.welcomeProject}"></g:Image>
                        <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                           <g:Button ui:field="projectLink" text="{locale.projectTitle}" styleName="{style.button-link}"></g:Button>
                           <g:Label text="{locale.projectText}"></g:Label>
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                      <g:HorizontalPanel verticalAlignment="middle" height="auto">
                        <g:Image ui:field="convertImage" resource="{resource.convertToProject}"></g:Image>
                        <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                           <g:Button ui:field="convertLink" text="{locale.convertTitle}" styleName="{style.button-link}"></g:Button>
                           <g:Label text="{locale.convertText}"></g:Label>
                        </g:VerticalPanel>
                     </g:HorizontalPanel>
                  </g:HorizontalPanel>

               </g:FlowPanel>
            </f:layer>
         </f:Border>
      </g:layer>
   </g:LayoutPanel>


</ui:UiBinder>
