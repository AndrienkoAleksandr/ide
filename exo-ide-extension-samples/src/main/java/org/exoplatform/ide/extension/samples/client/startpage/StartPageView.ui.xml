<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
   <!-- To make button look like link -->
      .button-link 
      {
         cursor: pointer;
         border: none;
         /* Disable the button-style */
         background-color: transparent;
         padding: 0px;
         color: #0000aa;
         text-decoration: underline;
         font-family: Arial Unicode MS,Arial,sans-serif;
         font-size: small;
      }
    
   </ui:style>

   <f:VPanel>

      <f:Border margin="1">
         <g:HorizontalPanel verticalAlignment="middle" height="auto" spacing="10">
            <g:VerticalPanel spacing="3" horizontalAlignment="left" verticalAlignment="top" width="50%">
            <!-- About IDE -->
               <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                  <g:Image resource="{resource.ideLogo}"></g:Image>
                  <g:Label text="{locale.aboutIde}"></g:Label>
               </g:VerticalPanel>
               
            <!-- Tutorial link -->
               <g:HorizontalPanel verticalAlignment="middle" height="auto">
                  <g:Image ui:field="docImage" resource="{resource.welcomeTutorial}"></g:Image>
                  <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                     <g:Anchor ui:field="docLink" text="{locale.tutorialTitle}" target="_blank"
                        href="https://wiki-int.exoplatform.org/display/exoproducts/eXo+IDE+User+Manual"></g:Anchor>
                     <g:Label text="{locale.tutorialText}"></g:Label>
                  </g:VerticalPanel>
               </g:HorizontalPanel>
            
            <!-- Samples link -->
               <g:HorizontalPanel verticalAlignment="middle" height="auto">
                  <g:Image ui:field="samplesImage" resource="{resource.welcomeSamples}"></g:Image>
                  <g:VerticalPanel spacing="3" horizontalAlignment="left" width="100%">
                     <g:Button ui:field="samplesLink" text="{locale.sampleTitle}" styleName="{style.button-link}" ></g:Button>
                     <g:Label text="{locale.sampleText}"></g:Label>
                  </g:VerticalPanel>
               </g:HorizontalPanel>
            </g:VerticalPanel>

            <g:VerticalPanel spacing="3" horizontalAlignment="left" verticalAlignment="top" width="50%">
            </g:VerticalPanel>
         </g:HorizontalPanel>
      </f:Border>

   </f:VPanel>


</ui:UiBinder>
