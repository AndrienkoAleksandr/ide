<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.github.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .buttonsBox {
      display: block;
      margin: 0 8px;
      }

      .left-float {
      float: left;
      }

      .rightButton {
      position: absolute;
      right: 0;
      }

      .formLine {
      margin-top:
      8px;
      }

      .selectAndInputWrapperBox {
      position: absolute;
      right: 18px;
      left: 0px;
      margin-top: 5px;
      }

      .notifyLabel {
      color: #919191;
      font-family: Verdana,Bitstream Vera Sans,sans-serif;
      font-size: 11px;
      }
      
   </ui:style>

   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.importFromGithubTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.importFromGithubText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="70px" height="45px">
         <g:FlowPanel width="100%" styleName="{resource.css.innerBox}">
            <g:Label text="{locale.importFromGithubEnterUrl}" width="100%"></g:Label>
            <g:SimplePanel styleName="{style.selectAndInputWrapperBox}">
               <f:TextInput ui:field="projectUrlField" width="100%" height="22px"></f:TextInput>
            </g:SimplePanel>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="120px" height="45px">
         <g:FlowPanel width="100%" styleName="{resource.css.innerBox}">
            <g:Label text="{locale.importFromGithubSelectProjectType}" width="100%"></g:Label>
            <g:SimplePanel styleName="{style.selectAndInputWrapperBox}">
               <f:SelectItem ui:field="selectProjectTypeField" width="100%" height="22px"></f:SelectItem>
            </g:SimplePanel>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="170px" height="25px">
         <g:FlowPanel width="100%" styleName="{resource.css.innerBox}">
            <f:Label ui:field="notifyLabel" styleName="{style.notifyLabel}" width="100%" height="18px"></f:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer height="40px" bottom="0">
         <g:DockLayoutPanel unit="PCT" width="100%" height="40px">
            <g:west size="50">
               <g:LayoutPanel width="100%" height="100%">
                  <g:layer right="5px" width="90px">
                     <f:ImageButton ui:field="importButton" text="{locale.importButton}" width="90px" imageResource="{resource.ok}"
                        disabledImageResource="{resource.okDisabled}" buttonId="ideImportFromGithubOkButtonId"></f:ImageButton>
                  </g:layer>
               </g:LayoutPanel>
            </g:west>
            <g:east size="50">
               <g:LayoutPanel width="100%" height="100%">
                  <g:layer left="5px" width="90px">
                     <f:ImageButton ui:field="cancelButton" width="90px" text="{locale.cancelButton}" imageName="cancel"
                        buttonId="ideImportFromGithubCancelButtonId"></f:ImageButton>

                  </g:layer>
               </g:LayoutPanel>
            </g:east>
         </g:DockLayoutPanel>
      </g:layer>

   </g:LayoutPanel>
</ui:UiBinder> 