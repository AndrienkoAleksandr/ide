<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.githubimport">

	<ui:with field='resource'
		type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
	<ui:with field="locale"
		type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

	<ui:style>
		.buttons {
			display: block;
			margin-left: 10px;
			margin-right: 10px;
		}
		
		.floatRight {
			float: right;
		}
		
		.floatLeft {
			float: left;
		}
		
		.label {
			padding-left: 2px;
			margin-top: 3px;
			margin-right: 10px;
		}
		
		.boldLabel {
			font-weight: bold;
		}
		
		.indents10 {
			margin: 0 10px 10px;
		}
		
		.border {
			border: 1px solid gray
		}
	</ui:style>

	<g:LayoutPanel>
		<g:layer left="0px" right="0" top="10px" height="30px">
			<g:FlowPanel stylePrimaryName="{style.indents10}">
				<g:Label text="{locale.importFromGithubAccount}"
					addStyleNames="{style.floatLeft} {style.label} {style.boldLabel}"></g:Label>
				<f:ComboBoxField ui:field="accountNameBox"
					addStyleNames="{style.floatLeft}" height="20px" pickListHeight="100"
					width="30%"></f:ComboBoxField>
				<f:Label text="Name:"
					addStyleNames="{style.floatLeft} {style.label} {style.boldLabel}"></f:Label>
				<f:TextInput ui:field="projectNameField" addStyleNames="{style.floatLeft} {style.border}"></f:TextInput>
			</g:FlowPanel>
		</g:layer>
		<g:layer top="30px" bottom="35px">
			<g:DockLayoutPanel ui:field="importStep" width="100%"
				height="100%">
				<g:center>
					<f:Border margin="10">
						<f:layer top="0px" bottom="0">
							<g:ScrollPanel>
								<e:GitHubProjectsListGrid width="100%"
									ui:field="repositoriesGrid" height="100%"></e:GitHubProjectsListGrid>
							</g:ScrollPanel>
						</f:layer>
					</f:Border>
				</g:center>
			</g:DockLayoutPanel>
		</g:layer>
		<g:layer height="22px" bottom="10">
			<g:FlowPanel styleName="{style.buttons}">
				<f:ImageButton ui:field="cancelButton" width="90"
					height="22" text="{locale.cancelButton}" imageResource="{resource.cancel}"
					disabledImageResource="{resource.cancelDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
				<f:ImageButton ui:field="finishButton" width="90"
					height="22" text="{locale.finishButton}" imageResource="{resource.next}"
					disabledImageResource="{resource.nextDisabled}" addStyleNames="{style.floatRight}"></f:ImageButton>
			</g:FlowPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>
