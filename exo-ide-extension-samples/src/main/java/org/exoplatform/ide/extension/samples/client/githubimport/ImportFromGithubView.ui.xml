<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.githubimport">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle'/>
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .buttonsBox {
      	display: block;
      	margin: 0 8px;
      }
      
      .left-float {
      	float: left;
      }
      
      .rightButton {
      	position: absolute;
      	right: 0;
      }
      
      .formLine {
      	margin-top: 8px;
      }
      
      .selectAndInputWrapperBox {
      	position: absolute;
      	right: 18px;
      	left: 0px;
      	margin-top: 5px;
      }
      
      .notifyLabel {
      	color: #919191;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer left="0px" right="0" top="0px" height="60px">
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.importFromGithubTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.importFromGithubText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="66px" height="22px" left="8px" right="8px">
         <g:DockLayoutPanel unit="PX">
            <g:west size="130">
               <g:Label>Your GitHub Name:</g:Label>
            </g:west>
            <g:west size="160">
               <f:TextInput ui:field="gitHubName" width="160px" height="22px"></f:TextInput>
            </g:west>
            <g:west size="40">
               <g:Label></g:Label>
            </g:west>
            <g:west size="99">
               <f:ImageButton ui:field="refreshButton" text="Get" width="90px" buttonId="ideImportSamplesGetGitHub"></f:ImageButton>
            </g:west>
         </g:DockLayoutPanel>
      </g:layer>
      <g:layer top="88px" bottom="55px">
         <f:Border margin="8">
            <f:layer top="0px" bottom="0">
               <g:ScrollPanel>
                  <e:GitHubProjectsListGrid width="100%" ui:field="samplesListGrid" height="100%"></e:GitHubProjectsListGrid>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </g:layer>

      <g:layer top="170px" height="25px">
         <g:FlowPanel width="100%" styleName="{resource.css.innerBox}">
            <f:Label ui:field="notifyLabel" styleName="{style.notifyLabel}" width="100%" height="18px"></f:Label>
         </g:FlowPanel>
      </g:layer>

      <g:layer height="50px" bottom="5px">
         <g:LayoutPanel>
            <g:layer top="0" height="22px" left="8px" right="8px">
               <g:DockLayoutPanel width="360px" unit="PX" height="22px" stylePrimaryName="{style.left-float}">
                  <g:west size="40">
                     <g:Label text="Name" height="18px"></g:Label>
                  </g:west>
                  <g:west size="150">
                     <f:TextInput ui:field="loadProjectName" width="100%" height="22px"></f:TextInput>
                  </g:west>
                  <g:west size="10">
                     <g:Label></g:Label>
                  </g:west>
                  <g:west size="130">
                     <g:Label text="{locale.importFromGithubSelectProjectType}" height="18px"></g:Label>
                  </g:west>
                  <g:west size="115">
                     <f:SelectItem ui:field="selectProjectTypeField" width="100%"></f:SelectItem>
                  </g:west>
               </g:DockLayoutPanel>
            </g:layer>
            <g:layer top="28px" bottom="0">
               <g:FlowPanel width="auto" styleName="{style.buttonsBox}">
                  <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
                  <f:ImageButton ui:field="cancelButton" styleName="{resource.css.middle}" width="90px" text="{locale.cancelButton}"
                     imageName="cancel" buttonId="ideImportSamplesCloseButtonId"></f:ImageButton>

                  <f:ImageButton ui:field="nextButton" text="{locale.nextButton}" width="90px" styleName="{style.rightButton}"
                     imageResource="{resource.next}" disabledImageResource="{resource.nextDisabled}" buttonId="ideImportSamplesNextButtonId"></f:ImageButton>
               </g:FlowPanel>
            </g:layer>
         </g:LayoutPanel>
      </g:layer>

   </g:LayoutPanel>
</ui:UiBinder> 