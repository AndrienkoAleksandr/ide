<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <ui:style>
      .selectAndInputWrapperBox {
      position: absolute;
      right: 1px;
      left: 100px;
      }
      
      .formLine {
      margin-top: 8px;
      }
   </ui:style>
   <g:LayoutPanel>
      <g:layer>
         <g:FlowPanel stylePrimaryName="{resource.css.topBox}">
            <g:Label text="{locale.wizardDeploymentTitle}" styleName="{resource.css.labelTitle}"></g:Label>
            <g:Label text="{locale.wizardDeploymentText}" styleName="{resource.css.labelDescription}"></g:Label>
         </g:FlowPanel>
      </g:layer>

      <!-- panel to select source of project -->
      <g:layer top="80px" height="30px">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <g:Label text="{locale.wizardDeploymentPaas}" width="90px" styleName="{resource.css.leftFloat}"></g:Label>
            <g:FlowPanel width="10px" styleName="{resource.css.leftFloat}"></g:FlowPanel>
            <g:SimplePanel styleName="{style.selectAndInputWrapperBox}">
               <f:SelectItem ui:field="selectPaasField" width="100%" height="22px"></f:SelectItem>
            </g:SimplePanel>
         </g:FlowPanel>
      </g:layer>

      <g:layer top="110px" height="100px">
         <!-- CloudFoudry deployment form: show only when CloudFoundry selected from list -->
         <g:FlowPanel ui:field="cloudFoundryPanel" stylePrimaryName="{resource.css.innerBox}">
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudFoundryAppTargetField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:ComboBoxField ui:field="cloudFoundryTargetField" width="100%" height="22px"></f:ComboBoxField>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudFoundryAppNameField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="cloudFoundryNameField" width="100%" height="22px"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudFoundryAppUrlField}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="cloudFoundryUrlField" width="100%" height="22px"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </g:layer>
         
      <g:layer top="110px" height="100px">
         <!-- CloudBees deployment form: show only when CloudBees selected from list -->
         <g:FlowPanel ui:field="cloudBeesPanel" stylePrimaryName="{resource.css.innerBox}">
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudBeesDomainLabel}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:SelectItem ui:field="selectDomainField" width="100%" height="22px"></f:SelectItem>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudBeesNameLabel}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="cloudBeesNameField" width="100%" height="22px"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" stylePrimaryName="{style.formLine}">
               <g:west size="90">
                  <g:Label text="{locale.cloudBeesIdLabel}" height="18px"></g:Label>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="cloudBeesIdField" width="100%" height="22px" enabled="false"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </g:layer>
      
      <!-- Buttons -->
      <g:layer height="33px" bottom="0">
         <g:FlowPanel width="auto" styleName="{resource.css.innerBox}">
            <f:ImageButton ui:field="cancelButton" styleName="{resource.css.leftFloat}" width="90px" text="{locale.cancelButton}"
               imageName="cancel" buttonId="ideWizardDeploymentCancelButtonId"></f:ImageButton>

            <g:FlowPanel width="10px" height="22px" styleName="{resource.css.leftFloat}"></g:FlowPanel>

            <f:ImageButton ui:field="backButton" width="90px" styleName="{resource.css.middle}" text="{locale.backButton}"
               imageResource="{resource.back}" disabledImageResource="{resource.backDisabled}" buttonId="ideWizardDeploymentBackButtonId"></f:ImageButton>

            <f:ImageButton ui:field="nextButton" width="90px" styleName="{resource.css.right}" text="{locale.nextButton}" imageResource="{resource.next}"
               disabledImageResource="{resource.nextDisabled}" buttonId="ideWizardDeploymentNextButtonId"></f:ImageButton>

         </g:FlowPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder> 