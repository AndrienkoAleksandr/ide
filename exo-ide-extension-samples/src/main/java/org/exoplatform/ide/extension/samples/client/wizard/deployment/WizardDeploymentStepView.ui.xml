<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.samples.client.load">

   <ui:with field='resource' type='org.exoplatform.ide.extension.samples.client.SamplesClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.samples.client.SamplesLocalizationConstant"></ui:with>

   <g:FlowPanel>
      <g:VerticalPanel spacing="3" horizontalAlignment="left" verticalAlignment="middle"
               width="100%" height="60px" stylePrimaryName="{resource.css.topBox}">
         <g:Label text="{locale.wizardDeploymentTitle}" styleName="{resource.css.labelTitle}"></g:Label>
         <g:Label text="{locale.wizardDeploymentText}" styleName="{resource.css.labelDescription}"></g:Label>
      </g:VerticalPanel>
         
      <g:FlowPanel height="30px" width="100%"></g:FlowPanel>

      <!-- panel to select source of project -->
      <g:HTMLPanel height="30px" width="100%">
         
         <table class="{resource.css.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.wizardDeploymentPaas}" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:SelectItem ui:field="selectPaasField" width="100%" height="22px"></f:SelectItem>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
      </g:HTMLPanel>
      
      <g:FlowPanel height="10px" width="100%"></g:FlowPanel>
      
      <g:HTMLPanel ui:field="paasPanel" width="100%">
         
         <!-- CloudFoudry deployment form: show only when CloudFoundry selected from list -->
         <table class="{resource.css.cloudfoundryTable}" id="cloudFoundryTable">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudFoundryAppTargetField}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:ComboBoxField ui:field="cloudFoundryTargetField" width="100%" height="22px" showTitle="false"></f:ComboBoxField>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
            
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudFoundryAppNameField}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:TextInput ui:field="cloudFoundryNameField" width="100%" height="22px"></f:TextInput>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
            
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudFoundryAppUrlField}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:TextInput ui:field="cloudFoundryUrlField" width="100%" height="22px"></f:TextInput>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
         <!-- CloudBees deployment form: show only when CloudBees selected from list -->
         <table class="{resource.css.cloudbeesTable}" id="cloudBeesTable">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudBeesDomainLabel}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:SelectItem ui:field="selectDomainField" width="100%" height="22px"></f:SelectItem>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
            </tr>
            
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudBeesNameLabel}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:TextInput ui:field="cloudBeesNameField" width="100%" height="22px"></f:TextInput>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
            </tr>
            
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <g:Label text="{locale.cloudBeesIdLabel}" height="18px" width="90px"></g:Label>
               </td>
               
               <td><div style="width:1px; height:1px;"></div></td>
               
               <td style="width:100%; height:22px">
                  <f:TextInput ui:field="cloudBeesIdField" width="100%" height="22px" enabled="false"></f:TextInput>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
            </tr>
         </table>
         
         <table class="{resource.css.table}">
            <tr>
               <td style="width:10px;">
                  <div id="divStretch" style="width:10px; height:100%;"></div>
               </td>
            </tr>
         </table> 
         
      </g:HTMLPanel>
      
      <!-- Buttons -->
      <g:HTMLPanel height="30px" width="100%" stylePrimaryName="{resource.css.footer}">
         
         <table class="{resource.css.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:90px;">
                  <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" 
                     buttonId="ideWizardDeploymentCancelButtonId"></f:ImageButton>
               </td>
               
               <td style="width:100%;"><div style="width:100%; height:1px;"></div></td>
               
               <td style="width:90px; height:22px">
                  <f:ImageButton ui:field="backButton" width="90" height="22" text="{locale.backButton}" 
                     imageResource="{resource.back}"
                     disabledImageResource="{resource.backDisabled}" 
                     buttonId="ideWizardDeploymentBackButtonId"></f:ImageButton>
               </td>
               
               <td style="width:3px;"><div style="width:3px; height:1px;"></div></td>
               
               <td style="width:90px">
                  <f:ImageButton ui:field="nextButton" width="90" height="22" text="{locale.nextButton}" 
                     imageResource="{resource.next}"
                     disabledImageResource="{resource.nextDisabled}"
                     buttonId="ideWizardDeploymentNextButtonId"></f:ImageButton>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
            </tr>
         </table>
         
      </g:HTMLPanel>

      <g:FlowPanel height="10px" width="100%"></g:FlowPanel>
   </g:FlowPanel>
</ui:UiBinder> 