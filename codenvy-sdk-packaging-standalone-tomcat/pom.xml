            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <id>Prepare Tomcat</id>
                        <phase>prepare-package</phase>
                        <configuration>
                            <tasks>
                                <unzip src="${project.build.directory}/packager-conf/zip/tomcat.zip" dest="${project.build.directory}">
                                    <patternset>
                                        <exclude name="**/ROOT/**" />
                                        <exclude name="**/docs/**" />
                                        <exclude name="**/examples/**" />
                                        <exclude name="**/manager/**" />
                                        <exclude name="**/host-manager/**" />
                                    </patternset>
                                </unzip>
                                <move file="${project.build.directory}/apache-tomcat-${tomcat.version}" tofile="${tomcat.output.dir}" />
                                <copy todir="${tomcat.output.dir}" overwrite="true">
                                    <fileset dir="${basedir}/src/main/resources/tomcat" />
                                </copy>
                                <chmod dir="${tomcat.output.dir}/bin" perm="+x" includes="**/*.sh" />
                                <move file="${tomcat.output.dir}/lib/log4j-over-slf4j-${org.slf4j.version}.jar" tofile="${tomcat.output.dir}/lib/log4j-over-slf4j.jar" />
                                <move file="${tomcat.output.dir}/lib/logback-core-${ch.qos.logback.version}.jar" tofile="${tomcat.output.dir}/lib/logback-core.jar" />
                                <move file="${tomcat.output.dir}/lib/logback-classic-${ch.qos.logback.version}.jar" tofile="${tomcat.output.dir}/lib/logback-classic.jar" />
                                <move file="${tomcat.output.dir}/lib/slf4j-api-${org.slf4j.version}.jar" tofile="${tomcat.output.dir}/lib/slf4j-api.jar" />
                                <move file="${tomcat.output.dir}/lib/jul-to-slf4j-${org.slf4j.version}.jar" tofile="${tomcat.output.dir}/lib/jul-to-slf4j.jar" />

                                <unwar src="${project.build.directory}/packager-conf/war/codenvy-sdk-application-war-${project.version}.war" dest="${project.build.directory}/packager-conf/war/ide">
                                    <patternset>
                                        <exclude name="**/lib/**" />
                                    </patternset>
                                </unwar>

                                <move todir="${project.build.directory}/packager-conf/war/ide/_app">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ide/_app/" />
                                </move>

                                <war destfile="${tomcat.output.dir}/webapps/ide.war" needxmlfile="false">
                                    <fileset dir="${project.build.directory}/packager-conf/war/ide" />
                                </war>

                                <copy file="${project.build.directory}/packager-conf/war/exo-ide-git-server-${org.exoplatform.ide.version}.war" tofile="${tomcat.output.dir}/webapps/git.war" overwrite="true" />
                                <copy file="${project.build.directory}/packager-conf/war/exo-ide-maven-${org.exoplatform.ide.version}.war" tofile="${tomcat.output.dir}/webapps/builder.war" overwrite="true" />
                                <copy file="${project.build.directory}/packager-conf/war/exo-ide-codeassistant-storage-${org.exoplatform.ide.version}.war" tofile="${tomcat.output.dir}/webapps/codeassistant-storage.war" overwrite="true" />
                                <copy file="${project.build.directory}/packager-conf/war/codenvy-organization-packaging-api-war-${com.codenvy.organization.version}.war" tofile="${tomcat.output.dir}/webapps/userdb.war" overwrite="true" />
                                <unzip src="${project.build.directory}/ide-codeassistant-lucene-index.zip" dest="${tomcat.output.dir}" />
                                <unzip src="${project.build.directory}/repo.zip" dest="${tomcat.output.dir}" />
                                <chmod dir="${tomcat.output.dir}" perm="+x" includes="install.sh" />
                                <unzip src="${project.build.directory}/packager-conf/appengine/appengine-java-sdk.zip" dest="${tomcat.output.dir}">
                                    <patternset>
                                        <exclude name="**/bin/**" />
                                        <exclude name="**/demos/**" />
                                        <exclude name="**/src/**" />
                                        <exclude name="**/docs/javadoc/**" />
                                        <exclude name="**/docs/remoteapi/**" />
                                        <exclude name="**/docs/testing/**" />
                                        <exclude name="**/docs/tools/**" />
                                        <exclude name="**/docs/javadoc/**" />
                                        <exclude name="**/ABOUT" />
                                        <exclude name="**/COPYING" />
                                        <exclude name="**/README" />
                                        <exclude name="**/README.ORM" />
                                        <exclude name="**/RELEASE_NOTES" />
                                        <exclude name="**/RELEASE_NOTES.ORM" />
                                    </patternset>
                                </unzip>
                                <move file="${tomcat.output.dir}/appengine-java-sdk-${appengine.version}" tofile="${tomcat.output.dir}/appengine-java-sdk" />
                                <unzip src="${project.build.directory}/packager-conf/appengine/appengine-python-sdk.zip" dest="${tomcat.output.dir}">
                                    <patternset>
                                        <exclude name="**/demos/**" />
                                        <exclude name="**/new_project_template/**" />
                                        <exclude name="**/BUGS" />
                                        <exclude name="**/LICENSE" />
                                        <exclude name="**/README" />
                                        <exclude name="**/RELEASE_NOTES" />
                                    </patternset>
                                </unzip>
                                <move file="${tomcat.output.dir}/google_appengine" tofile="${tomcat.output.dir}/appengine-python-sdk" />
                            </tasks>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
