<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">

    <ui:style>
        .htmlstyle {
            background: transparent;
            overflow: auto;
            position: relative;
            left: 0px;
            top: 0px;
            direction: ltr;
        }

        .outtext {
            font-family: monospace;
            font-size: 12px;
            font-style: normal;
            color: #007700;
            padding: 5px;
            margin: 0px;
        }
    </ui:style>

    <c:Border margin="1">
        <c:layer top="0" height="28px">
            <c:Toolbar height="28px" ui:field="toolbar"></c:Toolbar>
        </c:layer>
        <c:layer top="28px" bottom="0">
            <g:HTMLPanel ui:field="buildOutputPanel" styleName="{style.htmlstyle}">
                <div style="position:relative; width:100%;">
                    <pre id="ide.builder.buildOutput" class="{style.outtext}"></pre>
                    <span id="ide.builder.buildingAnimation" class="{style.outtext}" style="display:none;"></span>
                </div>
            </g:HTMLPanel>
        </c:layer>
    </c:Border>

</ui:UiBinder>
