<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:h="urn:import:org.exoplatform.ide.extension.groovy.client.classpath.ui">

   <ui:with field='resource' type='org.exoplatform.ide.extension.groovy.client.GroovyClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.groovy.client.GroovyLocalizationConstant"></ui:with>

   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
      .zIndex{
	z-index: 0;

	}
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="40px">
         <f:Border>
            <f:layer>
               <g:ScrollPanel>
                  <h:ItemTreeGrid width="100%" height="100%" ui:field="pathTreeGrid" addStyleNames="{style.zIndex}" ></h:ItemTreeGrid>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </f:layer>
      <f:layer bottom="0" height="30px">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="okButton" width="90" height="22px" text="{locale.okButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}" addStyleNames="{style.left-float}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22px" text="{locale.cancelButton}"
               imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}" addStyleNames="{style.left-float}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 