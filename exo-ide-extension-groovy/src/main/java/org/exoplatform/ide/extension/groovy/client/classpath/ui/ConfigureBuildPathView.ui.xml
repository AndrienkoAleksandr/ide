<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:h="urn:import:org.exoplatform.ide.extension.groovy.client.classpath.ui">

   <ui:with field='resource' type='org.exoplatform.ide.extension.groovy.client.GroovyClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.groovy.client.GroovyLocalizationConstant"></ui:with>

   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .left-float {
      	float: left;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="40px">
         <g:LayoutPanel>
            <g:layer left="0" right="112px">
               <f:Border>
                  <f:layer>
                     <g:ScrollPanel>
                        <h:ClassPathEntryListGrid width="100%" height="100%" ui:field="classPathEntryListGrid"></h:ClassPathEntryListGrid>
                     </g:ScrollPanel>
                  </f:layer>
               </f:Border>
            </g:layer>
            <g:layer right="0" width="102px">
               <g:FlowPanel>
                  <f:ImageButton ui:field="addButton" width="90px" height="22px" text="{locale.addButton}"
                     imageResource="{resource.addButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
                  <g:FlowPanel height="10px"></g:FlowPanel>
                  <f:ImageButton ui:field="removeButton" width="90px" height="22px" text="{locale.removeButton}"
                     imageResource="{resource.removeButton}" disabledImageResource="{resource.removeButtonDisabled}"></f:ImageButton>
               </g:FlowPanel>
            </g:layer>
         </g:LayoutPanel>
      </f:layer>
      <f:layer bottom="0" height="30px">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="saveButton" width="90" height="22px" addStyleNames="{style.left-float}" text="{locale.saveButton}"
               imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
            <g:FlowPanel width="10px" height="22px" styleName="{style.left-float}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22px" text="{locale.cancelButton}"
               imageResource="{resource.cancelButton}" addStyleNames="{style.left-float}" disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 