<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:h="urn:import:org.exoplatform.ide.extension.groovy.client.classpath.ui">
	
	 <ui:with field='resource' type='org.exoplatform.ide.extension.groovy.client.GroovyClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.groovy.client.GroovyLocalizationConstant"></ui:with>
	
	 <ui:style>
      .classPathEntryListGrid
	    {
	       z-index:0;
         width:100%;
         height:100%;
	    } 
	    
	    .classPathEntryListGridContainer
	    {
	       border: 1px solid #a7abb4;
	       z-index:0;
	       width:420px;
         height:210px;
	    }
	 </ui:style>
	 
   <f:Border margin="15" borderColor="transparent">
     <g:VerticalPanel spacing="3" horizontalAlignment="center">
         <g:HorizontalPanel width="100%" height="100%" spacing="0">
             <g:cell verticalAlignment="top">
                  <g:HorizontalPanel spacing="3" horizontalAlignment="left" width="100%" height="100%">
		                 <g:cell styleName="{style.classPathEntryListGrid}" verticalAlignment="middle">
		                    <g:ScrollPanel styleName="{style.classPathEntryListGridContainer}">
		                        <h:ClassPathEntryListGrid styleName="{style.classPathEntryListGrid}" ui:field="classPathEntryListGrid"></h:ClassPathEntryListGrid>
			                  </g:ScrollPanel>
			               </g:cell>
			               
			               <g:cell spacing="5" verticalAlignment="top" horizontalAlignment="center" width="100%" height="54px">
                        <g:VerticalPanel spacing="10" horizontalAlignment="center" verticalAlignment="bottom">
                            <g:cell>
						                   <f:ImageButton ui:field="addButton" width="90px" height="22px" text="{locale.addButton}" imageResource="{resource.addButton}"
						                      disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
						                </g:cell>
					                  <g:cell>
						                   <f:ImageButton ui:field="removeButton" width="90px" height="22px" text="{locale.removeButton}" imageResource="{resource.removeButton}"
					                        disabledImageResource="{resource.removeButtonDisabled}"></f:ImageButton>
					                  </g:cell>
					              </g:VerticalPanel>
	                   </g:cell>            
                 </g:HorizontalPanel>
	           </g:cell>
         </g:HorizontalPanel>
   
			   <g:HorizontalPanel height="40px" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
			      <f:ImageButton ui:field="saveButton" width="90" height="22px" text="{locale.saveButton}" imageResource="{resource.okButton}"
			         disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
			      <f:ImageButton ui:field="cancelButton" width="90" height="22px" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
			         disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>            
			   </g:HorizontalPanel>
      </g:VerticalPanel>
	 </f:Border>
</ui:UiBinder> 