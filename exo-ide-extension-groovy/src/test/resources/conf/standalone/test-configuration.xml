<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
   xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">

   <component>
      <key>org.exoplatform.services.log.LogConfigurationInitializer</key>
      <type>org.exoplatform.services.log.LogConfigurationInitializer</type>
      <init-params>
         <value-param>
            <name>logger</name>
            <value>org.exoplatform.services.log.impl.BufferedLog4JLogger</value>
         </value-param>
         <value-param>
            <name>configurator</name>
            <value>org.exoplatform.services.log.impl.Log4JConfigurator</value>
         </value-param>
         <properties-param>
            <name>properties</name>
            <description>Log4J properties</description>
            <property name="log4j.rootLogger" value="INFO, stdout, file"/>

            <property name="log4j.appender.stdout" value="org.apache.log4j.ConsoleAppender"/>
            <property name="log4j.appender.stdout.threshold" value="DEBUG"/>

            <property name="log4j.appender.stdout.layout" value="org.apache.log4j.PatternLayout"/>
            <property name="log4j.appender.stdout.layout.ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} *%-5p* [%t] %c{1}: %m (%F, line %L) %n"/>

            <property name="log4j.appender.file" value="org.apache.log4j.FileAppender"/>
            <property name="log4j.appender.file.File" value="target/jcr.log"/>

            <property name="log4j.appender.file.layout" value="org.apache.log4j.PatternLayout"/>
            <property name="log4j.appender.file.layout.ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} *%-5p* [%t] %c{1}: %m (%F, line %L) %n"/>

            <!-- property name="log4j.category.ext.BackupScheduler" value="DEBUG"/> <property name="log4j.category.ext.BackupManagerImpl" value="DEBUG"/ --><!--
            
            <property name="log4j.category.exo.ws.rest.core.RequestHandlerImpl" value="DEBUG" />
            <property name="log4j.category.exo.ws.rest.core.DefaultMethodInvoker" value="DEBUG" />
            --><!-- property name="log4j.category.exo" value="DEBUG" /-->
            <property name="log4j.category.org.exoplatform" value="DEBUG" />
            <property name="log4j.category.org.everrest.core.impl.method.DefaultMethodInvoker" value="DEBUG" />
         </properties-param>
      </init-params>
   </component>


   <component>
      <type>org.everrest.exoplatform.EverrestInitializer</type>
   </component>

   <component>
      <key>org.everrest.core.ResourceBinder</key>
      <type>org.everrest.core.impl.ResourceBinderImpl</type>
   </component>

   <component>
      <type>org.everrest.exoplatform.ProvidersRegistry</type>
   </component>

   <component>
      <type>org.everrest.exoplatform.ExoRequestDispatcher</type>
   </component>

   <component>
      <key>org.everrest.core.RequestHandler</key>
      <type>org.everrest.exoplatform.ExoRequestHandler</type>
      <init-params>
         <value-param>
            <name>org.everrest.http.method.override</name>
            <value>true</value>
         </value-param>
      </init-params>
   </component>

   <component>
      <type>org.everrest.exoplatform.StartableApplication</type>
   </component>

   <component>
      <type>org.everrest.exoplatform.ExoDependencySupplier</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.groovy.server.IDEGroovyClassLoaderProvider</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.groovy.server.GroovyCodeAssistant</type>
   </component>

   <component>
      <key>RestfulContainerProvider</key>
      <type>org.everrest.exoplatform.container.RestfulContainerProvider</type>
   </component>

   <component>
      <key>everrest</key>
      <type>org.everrest.exoplatform.container.RestfulContainer</type>
   </component>

   <component>
      <type>org.exoplatform.ide.vfs.server.VirtualFileSystemApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.vfs.server.VirtualFileSystemRegistry</type>
   </component>

    <component>
      <type>org.exoplatform.ide.vfs.server.impl.memory.MemoryFileSystemInitializer</type>
      <init-params>
         <values-param>
            <name>ids</name>
            <value>dev-monit</value>
            <value>ws</value>
         </values-param>
      </init-params>
   </component>

   <component>
      <type>org.exoplatform.ide.vfs.server.observation.EventListenerList
      </type>
   </component>

   <component>
      <type>org.exoplatform.ide.IDEServiceApplication</type>
      <init-params>
         <value-param>
            <name>defaultEntryPoint</name>
            <value>ws</value>
         </value-param>
         <value-param>
            <name>discoverable</name>
            <value>true</value>
         </value-param>
         <value-param>
            <name>workspace</name>
            <value>ws</value>
         </value-param>
         <value-param>
            <name>user-config</name>
            <value>/ide-home/users/</value>
         </value-param>
         <value-param>
            <name>template-config</name>
            <value>/ide-home/templates</value>
         </value-param>
      </init-params>
   </component>


   <component>
      <type>org.exoplatform.ide.extension.groovy.server.GroovyScriptServiceApplication</type>
   </component>

 

    <component>
       <type>org.exoplatform.ide.extension.groovy.server.IDEGroovyResourceLoader</type>
    </component>

   
</configuration>

