<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .space {
            margin-right: 5px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="480px" height="150px" addStyleNames="{style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel width="100%">
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.cancelButton}" size="SMALL" type="DANGER" ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" text="{locale.createButton}" size="SMALL" type="SUCCESS"
                          ui:field="btnCreate"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" addStyleNames="{res.cloudBeesCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="{locale.appNameDomainField}" height="18px" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="targetField" width="357px" height="22px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.cloudBeesCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="{locale.appNameFieldName}" height="18px" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="nameField" width="97%" height="16px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{res.cloudBeesCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="{locale.appNameIdField}" height="18px" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="urlField" width="97%" height="16px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>