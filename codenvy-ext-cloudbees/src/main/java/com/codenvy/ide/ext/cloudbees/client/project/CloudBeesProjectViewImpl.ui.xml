<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesResources'/>
    <ui:style>
        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .right {
            float: right;
        }

        .labelH {
            margin-right: 5px;
            float: left;
        }

        .middle {
            margin-top: 3px;
        }

        .withoutPadding {
            padding: 0px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .spacing {
            margin-bottom: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="500px" height="180px" addStyleNames="{style.emptyBorder} {res.cloudBeesCSS.project}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.right}" text="{locale.closeButton}" size="SMALL" type="DANGER" ui:field="btnClose"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{locale.appNameFieldName}" addStyleNames="{style.labelH} {style.middle} {res.cloudBeesCSS.labelH}"/>
                </g:west>
                <g:east size="18.0">
                    <c:Button width="18px" height="16px" addStyleNames="{style.space} {style.withoutPadding}" icon="{res.propertiesButton}"
                              ui:field="btnInfo"/>
                </g:east>
                <g:center>
                    <g:TextBox height="16px" addStyleNames="{style.space} {res.cloudBeesCSS.textinput}" ui:field="applicationName"
                               width="320px" readOnly="true"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{locale.manageProjectApplicationUrl}"
                             addStyleNames="{style.labelH} {style.middle} {res.cloudBeesCSS.labelH}"/>
                </g:west>
                <g:center>
                    <g:Anchor href="" addStyleNames="{style.left} {style.space} {res.cloudBeesCSS.link}" target="_blank" height="16px"
                              ui:field="url"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{locale.manageProjectApplicationStatus}" addStyleNames="{style.labelH} {res.cloudBeesCSS.labelH}"/>
                </g:west>
                <g:center>
                    <g:Label addStyleNames="{style.left} {res.cloudBeesCSS.labelH}" ui:field="status"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{locale.manageProjectApplicationInstances}" addStyleNames="{style.labelH} {res.cloudBeesCSS.labelH}"/>
                </g:west>
                <g:center>
                    <g:Label addStyleNames="{style.left} {res.cloudBeesCSS.labelH}" ui:field="instances"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{style.spacing}">
                <g:west size="150.0">
                    <g:Label text="{locale.manageProjectApplicationActions}" addStyleNames="{style.labelH} {res.cloudBeesCSS.labelH}"/>
                </g:west>
                <g:center>
                    <g:FlowPanel>
                        <c:Button size="SMALL" width="50px" text="Update" addStyleNames="{style.left} {style.space}" ui:field="btnUpdate"/>
                        <c:Button size="SMALL" width="50px" text="Delete" addStyleNames="{style.left} {style.space}" ui:field="btnDelete"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>