<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.codenvy.ide.ui'>
    <ui:with field='locale' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.cloudbees.client.CloudBeesResources'/>
    <ui:style>
        .alignRight {
            float: right;
        }

        .label {
            margin-top: 3px;
            float: left;
        }

        .optional {
            margin-left: 3px;
        }

        .spacing {
            margin-bottom: 6px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .errLabel {
            margin-bottom: 11px;
            text-align: center;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="570px" height="300px"
                       addStyleNames="{style.emptyBorder} {res.cloudBeesCSS.login}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button width="50px" addStyleNames="{style.alignRight}" size="SMALL" text="{locale.cancelButton}" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button width="50px" addStyleNames="{style.alignRight} {style.space}" text="{locale.createButton}" size="SMALL"
                          type="SUCCESS" ui:field="btnCreate"/>
            </g:FlowPanel>
        </g:south>
        <g:south size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:center>
                    <g:Label horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.errLabel} {res.cloudBeesCSS.loginErrorFont}"
                             ui:field="errorText"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:south>
        <g:center>
            <g:FlowPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="26px" addStyleNames="{style.spacing}">
                    <g:west size="160.0">
                        <g:Label text="{locale.createAccountDomainField}" addStyleNames="{style.label} {res.cloudBeesCSS.loginFont}"/>
                    </g:west>
                    <g:center>
                        <g:TextBox height="16px" width="400px" ui:field="domainField"/>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="26px" addStyleNames="{style.spacing}">
                    <g:west size="160.0">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountCompanyField}" addStyleNames="{style.label} {res.cloudBeesCSS.loginFont}"/>
                            <g:Label text="{locale.createAccountOptional}"
                                     addStyleNames="{style.label} {style.optional} {res.cloudBeesCSS.loginFont}"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:center>
                        <g:TextBox height="16px" width="400px" ui:field="companyField"/>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel unit="PX" width="100%" height="26px" addStyleNames="{style.spacing}">
                    <g:west size="160.0">
                        <g:Label text="{locale.createAccountEmailField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                    </g:west>
                    <g:east size="120.0">
                        <g:CheckBox text="{locale.createAccountCreateNewUser}" ui:field="newUser"/>
                    </g:east>
                    <g:center>
                        <g:TextBox width="280px" height="16px" ui:field="emailField"/>
                    </g:center>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" height="45px" unit="PX">
                    <g:west size="280">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountUserNameField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                            <g:TextBox width="270px" height="16px" ui:field="userNameField"/>
                        </g:FlowPanel>
                    </g:west>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" height="45px" unit="PX" addStyleNames="{style.spacing}">
                    <g:west size="280">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountFirstNameField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                            <g:TextBox width="270px" height="16px" ui:field="firstNameField"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:east size="280">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountLastNameField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                            <g:TextBox width="270px" height="16px" ui:field="lastNameField"/>
                        </g:FlowPanel>
                    </g:east>
                </g:DockLayoutPanel>
                <g:DockLayoutPanel width="100%" height="45px" unit="PX" styleName="{style.spacing}">
                    <g:west size="280">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountPasswordField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                            <g:PasswordTextBox width="270px" height="16px" ui:field="passwordField"/>
                        </g:FlowPanel>
                    </g:west>
                    <g:east size="280">
                        <g:FlowPanel>
                            <g:Label text="{locale.createAccountConfirmPasswordField}" addStyleNames="{res.cloudBeesCSS.loginFont}"/>
                            <g:PasswordTextBox width="270px" height="16px" ui:field="confirmPasswordField"/>
                        </g:FlowPanel>
                    </g:east>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>