<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>eXo IDE WebSocket Servlet</display-name>

  <filter>
    <filter-name>SetCurrentIdentityFilter</filter-name>
    <filter-class>org.exoplatform.services.security.web.SetCurrentIdentityFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ThreadLocalSessionProviderInitializedFilter</filter-name>
    <filter-class>org.exoplatform.frameworks.jcr.web.ThreadLocalSessionProviderInitializedFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SetCurrentIdentityFilter</filter-name>
    <servlet-name>IDEWebSocketServlet</servlet-name>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ThreadLocalSessionProviderInitializedFilter</filter-name>
    <servlet-name>IDEWebSocketServlet</servlet-name>
  </filter-mapping>

  <servlet>
    <servlet-name>IDEWebSocketServlet</servlet-name>
    <servlet-class>org.exoplatform.ide.websocket.IDEWebSocketServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>IDEWebSocketServlet</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
</web-app>
