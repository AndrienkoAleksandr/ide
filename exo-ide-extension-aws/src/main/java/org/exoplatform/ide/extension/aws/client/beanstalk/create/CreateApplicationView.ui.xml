<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:t="urn:import:org.exoplatform.gwtframework.ui.client.tablayout">
   <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />
   <ui:style>
      .floatRight {
      	float: right;
      	margin-left: 5px;
      }
      
      .rightAlign {
      	margin-left: auto;
      }
      
      .padding {
      	padding: 15px;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      }
      
      .labelTitle {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-weight: bold;
      	border-bottom: 1px solid #DBDFE5;
      	margin-top: 10px;
      	margin-bottom: 10px;
      }
      
      .middle {
      	margin-top: 3px;
      }
      
      .left {
      	float: left;
      }
      
      .right {
      	float: right;
      }
      
      .launch {
      	border-bottom: 1px solid #DBDFE5;
      	margin-bottom: 20px;
      	font-weight: bold;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="35">
         <g:FlowPanel>
            <g:FlowPanel ui:field="createApplicationStep" width="100%" height="100%">
               <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="General Information">
               </g:Label>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.createApplicationNameField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
                  <f:TextInput ui:field="nameField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.createApplicationDescriptionField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
                  <f:TextInput ui:field="descriptionField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
               <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="{locale.createApplicationS3Title}">
               </g:Label>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.createApplicationS3BucketField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
                  <f:TextInput ui:field="s3BucketField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.createApplicationS3KeyField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
                  <f:TextInput ui:field="s3KeyField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel ui:field="createEnvironmentStep" width="100%" height="100%" visible="false">
               <g:FlowPanel width="100%" height="35px" styleName="{style.launch}">
                  <g:CheckBox ui:field="launchEnvironment" width="100%" height="40px" HTML="{locale.launchEnvironmentLaunch}"></g:CheckBox>
               </g:FlowPanel>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.launchEnvironmentName}" addStyleNames="{style.labelH} {style.middle}" width="30%"></g:Label>
                  <f:TextInput ui:field="envNameField" width="69%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.launchEnvironmentDescription}" addStyleNames="{style.labelH} {style.middle}" width="30%"></g:Label>
                  <f:TextInput ui:field="envDescriptionField" width="69%" height="22px" addStyleNames="{style.right}"></f:TextInput>
               </g:FlowPanel>
               <g:FlowPanel width="100%" height="30px">
                  <g:Label text="{locale.launchEnvironmentSolutionStack}" addStyleNames="{style.labelH} {style.middle}" width="30%"></g:Label>
                  <f:SelectItem ui:field="solutionStackField" width="69%" height="22px" addStyleNames="{style.right}"></f:SelectItem>
               </g:FlowPanel>
            </g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel styleName="{style.rightAlign}">
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="finishButton" enabled="false" width="90" height="22" text="{locale.finishButton}" imageName="ok"
               addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="nextButton" enabled="false" width="90" height="22" text="{locale.nextButton}" imageName="next"
               addStyleNames="{style.floatRight}"></f:ImageButton>
            <f:ImageButton ui:field="backButton" enabled="true" width="90" height="22" text="{locale.backButton}" imageName="back"
               addStyleNames="{style.floatRight}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>

</ui:UiBinder> 