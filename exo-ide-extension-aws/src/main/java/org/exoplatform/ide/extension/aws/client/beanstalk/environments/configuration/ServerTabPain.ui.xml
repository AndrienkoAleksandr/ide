<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .padding {
            padding: 15px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
            font-weight: bold;
        }

        .middle {
            margin-top: 3px;
        }

        .left {
            float: left;
        }

        .space {
            margin-right: 5px;
        }

        .right {
            float: right;
        }

        .textinput {
            background-color: #FFFFFF !important;
            color: #000000 !important;
        }
    </ui:style>

    <f:Border>
        <f:layer>
            <g:FlowPanel styleName="{style.padding}">
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.editConfigurationEC2InstanceType}" addStyleNames="{style.labelH} {style.middle}"
                             width="35%"></g:Label>
                    <f:SelectItem ui:field="ec2InstanceTypeField" width="60%" height="22px"
                                  addStyleNames="{style.left} {style.space}"></f:SelectItem>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.editConfigurationEC2SecurityGroups}" addStyleNames="{style.labelH} {style.middle}"
                             width="35%"></g:Label>
                    <f:TextInput ui:field="ec2SecurityGroupsField" width="60%" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}"></f:TextInput>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.editConfigurationKeyName}" addStyleNames="{style.labelH} {style.middle}" width="35%"></g:Label>
                    <f:TextInput ui:field="keyNameField" width="60%" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}"></f:TextInput>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.editConfigurationMonitoringInterval}" addStyleNames="{style.labelH} {style.middle}"
                             width="35%"></g:Label>
                    <f:SelectItem ui:field="monitoringIntervalField" width="60%" height="22px"
                                  addStyleNames="{style.left} {style.space}"></f:SelectItem>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.editConfigurationImageId}" addStyleNames="{style.labelH} {style.middle}" width="35%"></g:Label>
                    <f:TextInput ui:field="imageIdField" width="60%" height="22px"
                                 addStyleNames="{style.textinput} {style.left} {style.space}"></f:TextInput>
                </g:FlowPanel>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder>
