<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />
   <ui:style>
      .padding {
      	padding: 15px;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      	font-weight: bold;
      }
      
      .middle {
      	margin-top: 3px;
      }
      
      .left {
      	float: left;
      }
      
      .space {
      	margin-right: 5px;
      }
      
      .right {
      	float: right;
      }
      
      .textinput {
      	background-color: #FFFFFF !important;
      	color: #000000 !important;
      }
      
      .actions {
      	border-top: 1px solid #DBDFE5;
      	padding-top: 10px;
      	margin-top: 10px;
      }
   </ui:style>


   <f:Border>
      <f:layer>
         <g:FlowPanel styleName="{style.padding}">
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.applicationName}" addStyleNames="{style.labelH} {style.middle}" width="24%"></g:Label>
               <f:TextInput ui:field="nameField" width="69%" height="22px" enabled="false" addStyleNames="{style.textinput} {style.left} {style.space}"></f:TextInput>
               <f:ImageButton ui:field="deleteApplicationButton" width="22" height="22px" text="" styleName="{style.left}"
                  imageResource="{resource.delete}" disabledImageResource="{resource.deleteDisabled}" title="{locale.deleteApplicationPrompt}"></f:ImageButton>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.applicationDescription}" addStyleNames="{style.labelH} {style.middle}" width="24%"></g:Label>
               <f:TextInput ui:field="descriptionField" width="69%" height="22px" enabled="false" addStyleNames="{style.textinput} {style.left} {style.space}"></f:TextInput>
               <f:ImageButton ui:field="editDescriptionButton" width="22" height="22px" text="" styleName="{style.left}"
                  title="{locale.editDescriptionPrompt}" imageResource="{resource.edit}" disabledImageResource="{resource.editDisabled}"></f:ImageButton>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="25px">
               <g:Label text="{locale.applicationCreationDate}" addStyleNames="{style.labelH}" width="24%"></g:Label>
               <f:Label ui:field="creationDateField" addStyleNames="{style.left}"></f:Label>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="25px">
               <g:Label text="{locale.applicationUpdatedDate}" addStyleNames="{style.labelH}" width="24%"></g:Label>
               <f:Label ui:field="updatedDateField" addStyleNames="{style.left}"></f:Label>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="28px" styleName="{style.actions}">
               <g:Label text="{locale.applicationActions}" addStyleNames="{style.labelH}" width="24%"></g:Label>
               <f:ImageButton ui:field="createVersionButton" height="22px" width="180px" text="{locale.createVersionButton}" styleName="{style.left} {style.space}" imageResource="{resource.newVersion}" disabledImageResource="{resource.newVersionDisabled}"></f:ImageButton>
               <f:ImageButton ui:field="launchEnvironmentButton" height="22px" width="160px" text="{locale.launchEnvironmentButton}"
                  styleName="{style.left}" imageResource="{resource.newEnvironment}" disabledImageResource="{resource.newEnvironmentDisabled}"></f:ImageButton>
            </g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder>
