<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <ui:style>
      .floatLeft {
      	float: left;
      }
      
      .floatRight {
      	float: right;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .spacing {
      	margin-bottom: 10px;
      }
   </ui:style>

   <f:Border margin="10" borderColor="transparent">
      <f:layer>
         <g:DockLayoutPanel width="100%" unit="PCT" height="75%">
            <g:north size="50">
               <f:Label ui:field="askLabel"></f:Label>
            </g:north>
            <g:south size="50">
               <g:FlowPanel>
                  <g:CheckBox ui:field="deleteServicesField" height="22px" addStyleNames="{style.floatLeft}"></g:CheckBox>
                  <f:Label ui:field="askDeleteServicesLabel" height="18px" addStyleNames="{style.floatLeft}"></f:Label>
               </g:FlowPanel>
            </g:south>
         </g:DockLayoutPanel>
      </f:layer>
      <f:layer height="30px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="deleteButton" width="90" height="22" text="{locale.deleteButton}" addStyleNames="{style.floatLeft}"
               imageResource="{resource.okButton}" disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" addStyleNames="{style.floatLeft}"
               imageResource="{resource.cancelButton}" disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 