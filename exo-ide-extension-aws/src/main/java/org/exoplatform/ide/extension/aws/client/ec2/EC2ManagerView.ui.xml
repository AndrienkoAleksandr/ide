<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:u="urn:import:org.exoplatform.ide.extension.aws.client.ec2">

	<ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
	<ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />

	<f:Border margin="15" borderColor="transparent">
		<f:layer top="0" bottom="35"><!--  -->
			<g:LayoutPanel>
				<g:layer top="0" height="28px">
					<f:Toolbar height="28px">
						<f:ToolbarItem rightDocked="true" paddingRight="2">
							<f:ImageButton ui:field="startInstanceButton" width="122px" buttonId="startInstanceButton" title="{locale.updateButton}"
								imageResource="{resource.switchAccount}" disabledImageResource="{resource.switchAccountDisabled}"></f:ImageButton>
						</f:ToolbarItem>
					</f:Toolbar>
				</g:layer>
				<g:layer top="30" bottom="0">
					<f:Border margin="5" borderColor="transparent">
						<u:EC2InstancesGrid  ui:field="ec2ImagesGrid" width="100%" height="100%"></u:EC2InstancesGrid>
					</f:Border>
				</g:layer>
			</g:LayoutPanel>
		</f:layer>
	</f:Border>
</ui:UiBinder>