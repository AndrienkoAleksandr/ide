<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
			 xmlns:c="urn:import:com.google.gwt.user.cellview.client"
			 xmlns:u="urn:import:org.exoplatform.ide.extension.aws.client.ec2">

	<ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
	<ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />
	<ui:style>
		.floatLeft {
			float: left;
			margin-left: 5px;
		}

		.center {
      		display: block;
      		margin-left: auto;
      		margin-right: auto;
		}
	</ui:style>

	<f:Border margin="15" borderColor="transparent">
		<f:layer top="0" bottom="0">
			<g:FlowPanel width="100%" height="100%">
				<g:FlowPanel width="100%" height="32px">
					<f:ImageButton ui:field="terminateButton" width="90" height="22" text="{locale.terminateInstanceButton}"
						addStyleNames="{style.floatLeft}"></f:ImageButton>
					<f:ImageButton ui:field="rebootButton" width="90" height="22" text="{locale.rebootInstanceButton}"
						addStyleNames="{style.floatLeft}"></f:ImageButton>
					<f:ImageButton ui:field="stopButton" width="90" height="22" text="{locale.stopInstanceButton}"
						addStyleNames="{style.floatLeft}"></f:ImageButton>
					<f:ImageButton ui:field="startButton" width="90" height="22" text="{locale.startInstanceButton}"
						addStyleNames="{style.floatLeft}"></f:ImageButton>
				</g:FlowPanel>
				<f:Border height="65%">
					<f:layer>
						<g:ScrollPanel>
							<u:EC2InstancesGrid ui:field="ec2InstancesGrid" width="100%" height="100%"></u:EC2InstancesGrid>
						</g:ScrollPanel>
					</f:layer>
				</f:Border>
			</g:FlowPanel>
		</f:layer>
		<f:layer height="122px" bottom="0">
         <g:FlowPanel>
         	<g:FlowPanel width="100%" height="100px">
				<g:Label width="100%" height="20px" text="Tags:"></g:Label>
				<g:ScrollPanel>
					<u:EC2InstancesTagsGrid ui:field="ec2InstancesTagsGrid" width="100%" height="100%"></u:EC2InstancesTagsGrid>
				</g:ScrollPanel>
			</g:FlowPanel>
            <f:ImageButton ui:field="closeButton" imageName="cancel" width="90px" height="22px" text="{locale.closeButton}"
            	styleName="{style.center}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
	</f:Border>
</ui:UiBinder>