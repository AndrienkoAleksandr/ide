<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
    <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }
    </ui:style>
    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="35">
            <g:DockLayoutPanel unit="PX">
                <g:north size="20">
                    <g:Label text="{locale.updateDescriptionField}" width="100%">
                    </g:Label>
                </g:north>
                <g:center>
                    <f:TextAreaInput ui:field="descriptionField" width="100%" height="100%"></f:TextAreaInput>
                </g:center>
            </g:DockLayoutPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <f:ImageButton ui:field="updateButton" width="90" height="22" text="{locale.updateButton}" imageName="yes"
                               addStyleNames="{style.floatLeft}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel"
                               addStyleNames="{style.floatLeft}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder> 