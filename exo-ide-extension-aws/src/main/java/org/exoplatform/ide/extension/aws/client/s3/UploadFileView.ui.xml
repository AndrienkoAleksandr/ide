<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:up="urn:import:org.exoplatform.ide.client.framework.ui.upload">

    <ui:with field="ideUploadLocale" type="org.exoplatform.ide.client.messages.IdeUploadLocalizationConstant"></ui:with>
    <ui:with field="ideLocale" type="org.exoplatform.ide.client.IdeLocalizationConstant"></ui:with>

    <ui:style>
        .absolute {
            position: absolute;
            left: 0px;
            top: 0px;
        }

        .defaultCursor {
            cursor: default;
        }

        .labels {
            cursor: default;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-size: 11px;
            font-style: normal;
            font-weight: normal;
            margin-bottom: 5px;
        }

        .spacing {
            margin-left: 15px;
            margin-right: 15px;
        }

        .spacingTop {
            margin-top: 20px;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .floatLeft {
            float: left;
        }

        .spacingLeft {
            margin-left: 2px;
        }
    </ui:style>

    <g:LayoutPanel>
        <g:layer top="0" bottom="40px">
            <g:DockLayoutPanel unit="PX" height="50px" addStyleNames="{style.spacing} {style.spacingTop}">
                <g:north size="20">
                    <c:Label text="{ideUploadLocale.fileToOpen}"></c:Label>
                </g:north>
                <g:center>
                    <c:TextInput ui:field="fileNameField" width="100%" height="22px" name="ideUploadFormFilenameField"
                                 readOnly="true"></c:TextInput>
                </g:center>
                <g:east size="85">
                    <g:AbsolutePanel width="80px" height="22px" addStyleNames="{style.spacingLeft}">
                        <c:ImageButton width="80px" height="22px" text="{ideUploadLocale.uploadBrowseBtn}"
                                       addStyleNames="{style.absolute}"></c:ImageButton>

                        <g:FormPanel addStyleNames="{style.absolute}" ui:field="uploadForm">
                            <g:HorizontalPanel ui:field="postFieldsPanel">
                                <up:FileUploadInput ui:field="fileUploadInput" width="80px" height="22px" transparent="true"
                                                    addStyleNames="{style.defaultCursor}"></up:FileUploadInput>
                            </g:HorizontalPanel>
                        </g:FormPanel>

                    </g:AbsolutePanel>
                </g:east>
            </g:DockLayoutPanel>
        </g:layer>

        <g:layer top="70px" bottom="40px">
            <g:DockLayoutPanel unit="PX" height="60px" addStyleNames="{style.spacing}">
                <g:north size="20">
                    <g:Label text="{ideUploadLocale.uploadFileMimeType}"></g:Label>
                </g:north>
                <g:center>
                    <c:ComboBoxField ui:field="mimeTypesField" name="ideUploadFormMimeTypeField" pickListHeight="100" width="100%"
                                     height="22px"></c:ComboBoxField>
                </g:center>
            </g:DockLayoutPanel>
        </g:layer>

        <g:layer height="40px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <c:ImageButton ui:field="openButton" text="{ideUploadLocale.uploadButton}" imageName="upload" width="90" height="22"
                               addStyleNames="{style.floatLeft}" buttonId="ideUploadFormUploadButton"></c:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>

                <c:ImageButton ui:field="cancelButton" width="90" height="22" text="{ideLocale.cancelButton}" imageName="cancel"
                               addStyleNames="{style.floatLeft}" buttonId="ideUploadFormCloseButton"></c:ImageButton>
            </g:FlowPanel>
        </g:layer>
    </g:LayoutPanel>

</ui:UiBinder>
 