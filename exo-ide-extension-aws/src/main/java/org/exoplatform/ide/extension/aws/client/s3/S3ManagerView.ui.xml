<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:u="urn:import:org.exoplatform.ide.extension.aws.client.s3" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator" ui:generateLocales="default">


	<ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
	<ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />

	<ui:style>
		.rightAlign {
			float: right;
			padding-right: 3px;
		}
		
		.labelH {
			margin: 5px;
			font-size: 11px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			float: left;
		}
		
		.buckets {
			font-size: 14px;
			font-family: Verdana, Bitstream Vera Sans, sans-serif;
			float: left;
			background-color: #B6CCE8;
			color: white;
			font-weight: bold;
		}
		
		.downArrow::AFTER {
			content: " \25BE"; /*Hexadecimal for Unicode down arrow*/
			display: inline;
		}
		
		.gwt-MenuBar-horizontal-action {
			border: 1px solid #BBBBBB;
			border-radius: 3px;
			background: -moz-linear-gradient(center top , #FFFFFF 0%, #E0E0E0 100%) repeat scroll 0 0 transparent;
		}
	</ui:style>

	<f:Border borderColor="transparent">
		<f:layer>
			<g:SplitLayoutPanel>
				<g:west size="260">
					<g:VerticalPanel>
						<g:Label text="Buckets" styleName="{style.buckets}" width="100%"></g:Label>
						<g:MenuBar width="75px">
							<g:MenuItem text="Actions" styleName="{style.downArrow}" >
								<g:MenuBar vertical="true">
									<g:MenuItem ui:field="createBucketAction">
										<div>
											<img src="{resource.upload.getSafeUri}"></img>
											<ui:msg description="action.createBucketAction">Create</ui:msg>
										</div>
									</g:MenuItem>
									<g:MenuItem ui:field="deleteBucketAction">
										<div>
											<img src="{resource.delete.getSafeUri}"></img>
											<ui:msg description="action.deleteBucketAction">Delete</ui:msg>
										</div>
									</g:MenuItem>
								</g:MenuBar>
							</g:MenuItem>
						</g:MenuBar>
						<g:ListBox ui:field="buckets" visibleItemCount="42" width="255px"></g:ListBox>
					</g:VerticalPanel>
				</g:west>
				<g:center>
					<g:ScrollPanel width="100%" ui:field="scrollPanel" verticalScrollPosition="0">
						<u:S3ObjectGrid ui:field="s3ObjectsGrid" width="100%" height="100%"></u:S3ObjectGrid>
					</g:ScrollPanel>
				</g:center>
				<g:north size="55">
					<g:VerticalPanel width="100%">
						<g:Label text="Objects" styleName="{style.buckets}" width="100%"></g:Label>
						<g:HorizontalPanel spacing="10">
							<f:ImageButton ui:field="uploadButton" width="100" height="22" text="{locale.uploadButton}"
								imageName="upload"></f:ImageButton>
							<f:ImageButton ui:field="refreshButton" width="100" height="22" text="{locale.refreshButton}"
								imageResource="{resource.s3Refresh}"></f:ImageButton>
							<g:MenuBar ui:field="mmm" styleName="{style.gwt-MenuBar-horizontal-action}">
								<g:MenuItem text="Actions" styleName="{style.downArrow}">
									<g:MenuBar vertical="true">
										<g:MenuItem ui:field="download">
											<div>
												<img src="{resource.download.getSafeUri}"></img>
												<ui:msg description="action.download">Download</ui:msg>
											</div>
										</g:MenuItem>
										<g:MenuItem ui:field="uploadAction">
											<div>
												<img src="{resource.upload.getSafeUri}"></img>
												<ui:msg description="action.upload">Upload</ui:msg>
											</div>
										</g:MenuItem>
										<g:MenuItem ui:field="uploadProjectAction">
											<div>
												<img src="{resource.upload.getSafeUri}"></img>
												<ui:msg description="action.uploadProject">Upload Project</ui:msg>
											</div>
										</g:MenuItem>
										<g:MenuItem ui:field="deleteAction">
											<div>
												<img src="{resource.delete.getSafeUri}"></img>
												<ui:msg description="action.delete">Delete</ui:msg>
											</div>
										</g:MenuItem>
										<g:MenuItem ui:field="refreshAction">
											<div>
												<img src="{resource.s3Refresh.getSafeUri}"></img>
												<ui:msg description="action.refresh">Refresh</ui:msg>
											</div>
										</g:MenuItem>
									</g:MenuBar>
								</g:MenuItem>
							</g:MenuBar>
							<!-- <f:ImageButton ui:field="deleteButton" width="110px" height="22" text="{locale.deleteButton}" imageName="delete"></f:ImageButton> -->
						</g:HorizontalPanel>
					</g:VerticalPanel>
				</g:north>
			</g:SplitLayoutPanel>
		</f:layer>
	</f:Border>

</ui:UiBinder> 