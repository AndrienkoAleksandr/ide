<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:u="urn:import:org.exoplatform.ide.extension.aws.client.s3" 
	>

	<ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
	<ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />

	<f:Border margin="15" borderColor="transparent">
		<f:layer top="0" bottom="35">
			<g:SplitLayoutPanel>
				<g:west size="200">
					<g:VerticalPanel>
						<g:ListBox ui:field="buckets" visibleItemCount="10"></g:ListBox>
					</g:VerticalPanel>
				</g:west>
				<g:center>
					<g:VerticalPanel>
						<u:ObjectGrid  ui:field="s3ObjectsGrid" width="100%" height="100%"></u:ObjectGrid>
					</g:VerticalPanel>
				</g:center>
				<g:south size="200">
					<g:VerticalPanel />
				</g:south>
				<g:north size="200">
					<g:VerticalPanel>
						<f:ImageButton ui:field="propertiesButton" width="90" height="22" text="{locale.propertiesButton}"
							imageName="properties"></f:ImageButton>
					</g:VerticalPanel>
				</g:north>
			</g:SplitLayoutPanel>
		</f:layer>
	</f:Border>

</ui:UiBinder> 