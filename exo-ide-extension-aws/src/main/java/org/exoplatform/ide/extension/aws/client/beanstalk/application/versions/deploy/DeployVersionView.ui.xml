<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
	xmlns:t="urn:import:org.exoplatform.gwtframework.ui.client.tablayout">
   <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />
   <ui:style>
      .labelTitle {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-weight: bold;
      	border-bottom: 1px solid #DBDFE5;
      	margin-top: 10px;
      	margin-bottom: 10px;
      }
      
      .left {
      	float: left;
      }
      
      .right {
      	float: right;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }

      .radioButton {
	    margin-bottom: 3px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="35">
         <g:FlowPanel>
            <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="Deployment mode">
            </g:Label>
			<g:FlowPanel width="100%" height="30px">
				<g:RadioButton ui:field="deployToNewEnvironment" addStyleNames="{style.radioButton}" checked="true"
               		name="ideDeployVersionViewDeployToNewEnvironment" text="{locale.deployVersionToNewEnvironment}" width="100%" height="22px"></g:RadioButton>
				<g:RadioButton ui:field="deployToExistingEnvironment" addStyleNames="{style.radioButton}" checked="false"
					name="ideDeployVersionViewDeployToExistingEnvironment" text="{locale.deployVersionToExistingEnvironment}" width="45%" height="22px"></g:RadioButton>
				<f:SelectItem ui:field="environmentsField" width="50%" height="22px" addStyleNames="{style.right}"></f:SelectItem>
			</g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="deployButton" width="90" height="22" text="{locale.deployButton}"
				imageName="yes" addStyleNames="{style.left}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.left}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}"
				imageName="cancel" addStyleNames="{style.left}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder>