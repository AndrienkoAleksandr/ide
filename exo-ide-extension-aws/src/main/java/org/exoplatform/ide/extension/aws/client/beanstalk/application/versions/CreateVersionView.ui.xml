<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:t="urn:import:org.exoplatform.gwtframework.ui.client.tablayout">
   <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant' />
   <ui:style>
      .floatRight {
      	float: right;
      	margin-left: 5px;
      }
      
      .rightAlign {
      	margin-left: auto;
      }
      
      .padding {
      	padding: 15px;
      }
      
      .labelH {
      	margin-right: 5px;
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	float: left;
      }
      
      .labelTitle {
      	font-size: 11px;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-weight: bold;
      	border-bottom: 1px solid #DBDFE5;
      	margin-top: 10px;
      	margin-bottom: 10px;
      }
      
      .middle {
      	margin-top: 3px;
      }
      
      .left {
      	float: left;
      }
      
      .right {
      	float: right;
      }
      
      .launch {
      	border-bottom: 1px solid #DBDFE5;
      	margin-bottom: 20px;
      	font-weight: bold;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
   </ui:style>

   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="35">
         <g:FlowPanel>
            <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="General Information">
            </g:Label>
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.createVersionNameField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
               <f:TextInput ui:field="versionLabelField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.createVersionDescriptionField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
               <f:TextInput ui:field="descriptionField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
            </g:FlowPanel>
            <g:Label width="100%" height="20px" addStyleNames="{style.labelTitle}" text="{locale.createApplicationS3Title}">
            </g:Label>
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.createApplicationS3BucketField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
               <f:TextInput ui:field="s3BucketField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
            </g:FlowPanel>
            <g:FlowPanel width="100%" height="30px">
               <g:Label text="{locale.createApplicationS3KeyField}" addStyleNames="{style.labelH} {style.middle}" width="22%"></g:Label>
               <f:TextInput ui:field="s3KeyField" width="76%" height="22px" addStyleNames="{style.right}"></f:TextInput>
            </g:FlowPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" imageName="yes" addStyleNames="{style.left}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.left}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel" addStyleNames="{style.left}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>

</ui:UiBinder>