<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
        >
    <ui:with field='resource' type='org.exoplatform.ide.extension.aws.client.AWSClientBundle'/>
    <ui:with field='locale' type='org.exoplatform.ide.extension.aws.client.AWSLocalizationConstant'/>
    <ui:style>
        .floatRight {
            float: right;
            margin-left: 5px;
        }

        .rightAlign {
            margin-left: auto;
        }

        .padding {
            padding: 15px;
        }

        .labelH {
            margin-right: 5px;
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            float: left;
        }

        .labelTitle {
            font-size: 11px;
            font-family: Verdana, Bitstream Vera Sans, sans-serif;
            font-weight: bold;
            border-bottom: 1px solid #DBDFE5;
            margin-top: 10px;
            margin-bottom: 10px;
        }

        .middle {
            margin-top: 3px;
        }

        .left {
            float: left;
        }

        .right {
            float: right;
        }

        .launch {
            border-bottom: 1px solid #DBDFE5;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer top="0" bottom="35">
            <g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.launchEnvironmentName}" addStyleNames="{style.labelH} {style.middle}" width="30%"></g:Label>
                    <f:TextInput ui:field="envNameField" width="69%" height="22px" addStyleNames="{style.right}"></f:TextInput>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.launchEnvironmentDescription}" addStyleNames="{style.labelH} {style.middle}"
                             width="30%"></g:Label>
                    <f:TextInput ui:field="envDescriptionField" width="69%" height="22px" addStyleNames="{style.right}"></f:TextInput>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.launchEnvironmentSolutionStack}" addStyleNames="{style.labelH} {style.middle}"
                             width="30%"></g:Label>
                    <f:SelectItem ui:field="solutionStackField" width="69%" height="22px" addStyleNames="{style.right}"></f:SelectItem>
                </g:FlowPanel>
                <g:FlowPanel width="100%" height="30px">
                    <g:Label text="{locale.launchEnvironmentVersions}" addStyleNames="{style.labelH} {style.middle}" width="30%"></g:Label>
                    <f:SelectItem ui:field="versionsField" width="69%" height="22px" addStyleNames="{style.right}"></f:SelectItem>
                </g:FlowPanel>
            </g:FlowPanel>
        </f:layer>
        <f:layer height="22px" bottom="0">
            <g:FlowPanel width="190px" styleName="{style.center}">
                <f:ImageButton ui:field="launchButton" width="90" height="22" text="{locale.launchButton}" imageName="yes"
                               addStyleNames="{style.left}"></f:ImageButton>
                <g:FlowPanel width="5px" height="22px" styleName="{style.left}"></g:FlowPanel>
                <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageName="cancel"
                               addStyleNames="{style.left}"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>

</ui:UiBinder> 