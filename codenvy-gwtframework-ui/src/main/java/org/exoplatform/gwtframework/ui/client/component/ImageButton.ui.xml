<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="res" type="org.exoplatform.gwtframework.ui.client.component.ImageButton.Resources"/>
    <g:HTMLPanel styleName="{res.css.imageButtonPanel}">

        <table cellpadding="0" cellspacing="0" class="{res.css.imageButtonTable}" ui:field="table">
            <tr>
                <td class="{res.css.imageButtonLeft}">
                    <div/>
                </td>
                <td class="{res.css.imageButtonStretch}">
                    <table class="{res.css.imageButtonTitleTable}" cellpadding="0" cellspacing="0">
                        <tr>
                            <td ui:field="imageElement">
                                <g:SimplePanel styleName="{res.css.imageButtonIconPanel}" ui:field="imagePanel"></g:SimplePanel>
                            </td>

                            <td ui:field="delimiterElement">
                                <div style="width:6px;"></div>
                            </td>

                            <td class="{res.css.imageButtonText}" nowrap="nowrap" ui:field="textElement">Hello</td>
                        </tr>
                    </table>
                </td>
                <td class="{res.css.imageButtonRight}">
                    <div/>
                </td>
            </tr>
        </table>

    </g:HTMLPanel>

</ui:UiBinder>
