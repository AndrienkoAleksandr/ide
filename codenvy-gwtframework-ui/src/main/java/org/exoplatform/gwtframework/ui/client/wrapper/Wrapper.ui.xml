<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style type='org.exoplatform.gwtframework.ui.client.wrapper.Wrapper.Style'>

        .wrapperPanel {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .wrapperTable {
            width: 100%;
            height: 100%;
        }

        .contentCell {
            border-width: 5px;
            border-color: transparent;
            border-style: solid;
        }

        .contentCellHighlighted {
            border-color: #B6CCE8;
        }

        .contentPanel {
            width: 100%;
            height: 100%;
            overflow: hidden;
            position: relative;
            /*
            padding-bottom: 1px;
            */
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.wrapperPanel}">

        <table ui:field="wraperTable" class="{style.wrapperTable}" border="0" cellpadding="0" cellspacing="0">
            <tr>
                <td ui:field="contentCell" class="{style.contentCell}">
                    <g:SimplePanel styleName="{style.contentPanel}" ui:field="contentPanel"></g:SimplePanel>
                </td>
            </tr>
        </table>

    </g:HTMLPanel>

</ui:UiBinder>
 