<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
   <ui:with field='resource' type='org.exoplatform.gwtframework.ui.client.SelectItemResource' />

   <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{resource.css.comboBoxDocPanel}">
      <g:east size="22" width="100%" height="100%">
         <g:Image ui:field="image" resource='{resource.arrow}' width="20px" height="100%" styleName="{resource.css.comboBoxImageButton}"></g:Image>
      </g:east>
      <g:center height="100%">
         <g:SuggestBox ui:field="suggestBox" width="100%" height="100%"></g:SuggestBox>
      </g:center>
   </g:DockLayoutPanel>

</ui:UiBinder>
