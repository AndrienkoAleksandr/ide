<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <f:Border margin="7" borderColor="transparent">
      <g:VerticalPanel spacing="3" horizontalAlignment="center">
         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppNameField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:TextField ui:field="nameField" width="100%" height="22px" showTitle="false"></f:TextField>
            </g:cell>
            <g:cell width="100px">
               <g:Label text="" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>
         
         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppWarField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:TextField ui:field="warField" width="100%" height="22px" showTitle="false"></f:TextField>
            </g:cell>
            <g:cell width="100px">
               <g:Label text="" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppTypeField}" height="18px"></g:Label>
            </g:cell>
            <g:cell verticalAlignment="middle">
               <f:SelectItem ui:field="typeField" width="100%" height="22px" showTitle="false"></f:SelectItem>
            </g:cell>
            <g:cell verticalAlignment="middle" width="25px">
               <f:CheckboxItem ui:field="changeTypeField" width="25px" height="22px"></f:CheckboxItem>
            </g:cell>
            <g:cell verticalAlignment="middle" horizontalAlignment="right" width="75px">
               <g:Label text="{locale.createAppAutodetectTypeLabel}" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppUrlField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:TextField ui:field="urlField" width="100%" height="22px" showTitle="false" enabled="false"></f:TextField>
            </g:cell>
            <g:cell verticalAlignment="middle" width="25px">
               <f:CheckboxItem ui:field="changeUrlField" width="25px" height="22px"></f:CheckboxItem>
            </g:cell>
            <g:cell verticalAlignment="middle" horizontalAlignment="right" width="75px">
               <g:Label text="{locale.createAppUseDefaultUrlLabel}" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppInstancesField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:TextField ui:field="instansesField" width="100%" height="22px" showTitle="false"></f:TextField>
            </g:cell>
            <g:cell width="100px">
               <g:Label text="" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppMemoryField}" height="18px"></g:Label>
            </g:cell>
            <g:cell>
               <f:TextField ui:field="memoryField" width="100%" height="22px" enabled="false" showTitle="false"></f:TextField>
            </g:cell>
            <g:cell verticalAlignment="middle" width="25px">
               <f:CheckboxItem ui:field="changeMemoryField" width="25px" height="22px"></f:CheckboxItem>
            </g:cell>
            <g:cell verticalAlignment="middle" horizontalAlignment="right" width="75px">
               <g:Label text="{locale.createAppUseDefaultMemorySizeLabel}" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>
         
         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <g:Label text="{locale.createAppStartAfterCreationField}" height="18px"></g:Label>
            </g:cell>
            <g:cell verticalAlignment="middle">
               <f:CheckboxItem ui:field="startAfterCreationField" width="100%" height="22px"></f:CheckboxItem>
            </g:cell>
            <g:cell width="100px">
               <g:Label text="" ></g:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
            <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
               disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
         </g:HorizontalPanel>
      </g:VerticalPanel>
   </f:Border>
</ui:UiBinder> 