<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" 
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant' />

   <ui:style>
      .label {
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
      
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .spacing {
      	margin-bottom: 10px;
      }
      
      .floatLeft {
      	float: left;
      }
      
      .errLabel {
         margin-bottom: 11px;
         cursor: default;
         font-family: Verdana, Bitstream Vera Sans, sans-serif;
         font-size: 11px;
         font-style: normal;
         font-weight: normal;
         color: #d21a1a;
         text-align: center;
         height: 14px;
      }
      
      .line {
         margin-bottom: 8px;
      }
      
      .borderBox {
         margin: 15px;
      }
   </ui:style>


   <f:Border borderColor="transparent" styleName="{style.borderBox}">
      <f:layer>
         <g:FlowPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{style.line}">
               <g:west size="75">
                  <g:Label text="{locale.loginViewTargetField}" styleName="{style.label}"></g:Label>
               </g:west>
               <g:center>
                  <f:ComboBoxField ui:field="targetField" height="22px" width="100%" addStyleNames="{style.spacing}"></f:ComboBoxField>
               </g:center>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{style.line}">
               <g:west size="75">
                  <g:Label text="{locale.loginViewEmailField}" styleName="{style.label}"></g:Label>
               </g:west>
               <g:center>
                  <g:TextBox ui:field="emailField" height="22px" width="100%" addStyleNames="{style.spacing}"></g:TextBox>
               </g:center>
            </g:DockLayoutPanel>
            
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{style.line}">
               <g:west size="75">
                  <g:Label text="{locale.loginViewPasswordField}" styleName="{style.label}"></g:Label>
               </g:west>
               <g:center>
                  <f:PasswordTextInput ui:field="passwordField" height="22px" width="100%" addStyleNames="{style.spacing}"></f:PasswordTextInput>
               </g:center>
            </g:DockLayoutPanel>
            <f:Label ui:field="errLabel" styleName="{style.errLabel}"></f:Label>
         </g:FlowPanel>
      </f:layer>

      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="loginButton" width="90" height="22" text="Log in" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="Cancel" imageResource="{resource.cancelButton}"
               disabledImageResource="{resource.cancelButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 