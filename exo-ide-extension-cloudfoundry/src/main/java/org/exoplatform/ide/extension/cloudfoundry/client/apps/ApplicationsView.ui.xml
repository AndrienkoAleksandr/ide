<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.cloudfoundry.client.apps">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <ui:style>
      .table {
         width: 100%;
         height: 100%;
         border-collapse: collapse;
      }
   </ui:style>
   
   <g:FlowPanel>
   
      <f:Border margin="5">
      <f:layer>
         <g:ScrollPanel>
            <e:ApplicationsListGrid width="100%" ui:field="applicationsGrid" ></e:ApplicationsListGrid>
         </g:ScrollPanel>
         </f:layer>
      </f:Border>
      
      <!-- Bottom panel -->
      <g:HTMLPanel height="30px">
         <table class="{style.table}">
            <tr>
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
               
               <td style="width:150px;">
                  <f:ComboBoxField ui:field="serverField" title="{locale.appsServerLabel}" height="22px" width="320px"
                     pickListWidth="250px" pickListHeight="100" titleOrientation="LEFT" name="applicationsTarget" ></f:ComboBoxField>
               </td>
               
               <td style="width:3px;"><div style="width:3px; height:1px;"></div></td>
               
               <td style="width:90px">
                  <f:ImageButton ui:field="showButton" width="90" height="22" text="{locale.showButton}" 
                     imageResource="{resource.okButton}"
                     disabledImageResource="{resource.okButtonDisabled}"
                     buttonId="applicationsShowButton"
                     ></f:ImageButton>
               </td>
               
               <td style="width:100%;"><div style="width:100%; height:1px;"></div></td>
               
               <td style="width:90px">
                  <f:ImageButton ui:field="closeButton" width="100" height="22" text="{locale.closeButton}" imageResource="{resource.cancelButton}"
                        disabledImageResource="{resource.cancelButtonDisabled}" buttonId="applicationsCloseButton"></f:ImageButton>
               </td>
               
               <td style="width:10px;"><div style="width:10px; height:1px;"></div></td>
            </tr>
         </table>
      </g:HTMLPanel>
      
      <g:FlowPanel height="10px"></g:FlowPanel>
   </g:FlowPanel>
</ui:UiBinder> 