<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui" 
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <f:Border margin="7" borderColor="transparent">
      <g:VerticalPanel spacing="3" horizontalAlignment="center">

         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="150px">
               <f:Label ui:field="askLabel"></f:Label>
            </g:cell>
         </g:HorizontalPanel>
         
         <g:HorizontalPanel width="100%" spacing="0">
            <g:cell verticalAlignment="middle" width="25px">
               <f:CheckboxItem ui:field="deleteServicesField" width="100%" height="22px"></f:CheckboxItem>
            </g:cell>
            <g:cell verticalAlignment="middle" width="150px">
               <f:Label ui:field="askDeleteServicesLabel" height="18px"></f:Label>
            </g:cell>
         </g:HorizontalPanel>

         <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
            <f:ImageButton ui:field="deleteButton" width="90" height="22" text="{locale.deleteButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}"></f:ImageButton>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
               disabledImageResource="{resource.cancelButtonDisabled}"></f:ImageButton>
         </g:HorizontalPanel>
      </g:VerticalPanel>
   </f:Border>
</ui:UiBinder> 