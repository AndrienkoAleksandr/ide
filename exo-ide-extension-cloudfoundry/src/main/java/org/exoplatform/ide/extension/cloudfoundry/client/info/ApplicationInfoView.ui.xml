<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component" xmlns:e="urn:import:org.exoplatform.ide.extension.cloudfoundry.client.info">

   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

   <ui:style>
      .event {
      	background: #f1f2f5;
      }
   </ui:style>

   <g:LayoutPanel>
      <g:layer top="0" bottom="30px">
         <f:Border margin="10">
            <f:layer>
               <g:ScrollPanel>
         <!--e:ApplicationInfoGrid width="100%" ui:field="applicationInfoGrid"></e:ApplicationInfoGrid-->
                  <g:VerticalPanel spacing="3" horizontalAlignment="center" width="100%">
                     <g:HorizontalPanel height="22px" width="100%" spacing="0">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoName}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                     		<f:Label ui:field="nameLabel" iD="appNameLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0" styleName="{style.event}">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoState}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="stateLabel" iD="appStateLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoInstances}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="instancesLabel" iD="appInstancesLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0" styleName="{style.event}">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoVersion}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="versionLabel" iD="appVersionLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoResourcesDisk}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="diskLabel" iD="appDiskLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0" styleName="{style.event}">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoResourcesMemory}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="memoryLabel" iD="appMemoryLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoStagingModel}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="modelLabel" iD="appModelLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <g:HorizontalPanel height="22px" width="100%" spacing="0" styleName="{style.event}">
                        <g:cell verticalAlignment="middle" width="140px">
                           <g:Label text="{locale.appInfoStagingStack}" height="18px"></g:Label>
                        </g:cell>
                        <g:cell verticalAlignment="middle">
                           <f:Label ui:field="stackLabel" iD="appStackLabel"></f:Label>
                        </g:cell>
                     </g:HorizontalPanel>

                     <f:Border width="100%">
                        <f:layer>
                           <g:HorizontalPanel width="100%" spacing="0" horizontalAlignment="center">
                              <g:cell verticalAlignment="middle">
                                 <e:ApplicationStringGrid width="100%" ui:field="applicationUrisGrid"></e:ApplicationStringGrid>
                              </g:cell>
                           </g:HorizontalPanel>
                        </f:layer>
                     </f:Border>

                     <f:Border width="100%">
                        <f:layer>
                           <g:HorizontalPanel width="100%" spacing="0" horizontalAlignment="center">
                              <g:cell verticalAlignment="middle">
                                 <e:ApplicationStringGrid width="100%" ui:field="applicationServicesGrid"></e:ApplicationStringGrid>
                              </g:cell>
                           </g:HorizontalPanel>
                        </f:layer>
                     </f:Border>

                     <f:Border width="100%">
                        <f:layer>
                           <g:HorizontalPanel width="100%" spacing="0" horizontalAlignment="center">
                              <g:cell verticalAlignment="middle">
                                 <e:ApplicationStringGrid width="100%" ui:field="applicationEnvironmentsGrid"></e:ApplicationStringGrid>
                              </g:cell>
                           </g:HorizontalPanel>
                        </f:layer>
                     </f:Border>
                  </g:VerticalPanel>
               </g:ScrollPanel>
            </f:layer>
         </f:Border>
      </g:layer>
      <g:layer bottom="0" height="30px">
         <g:HorizontalPanel height="30px" horizontalAlignment="center">
            <f:ImageButton ui:field="okButton" width="100" height="22" text="{locale.okButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}" buttonId="applicationInfoOkButton"></f:ImageButton>
         </g:HorizontalPanel>
      </g:layer>
   </g:LayoutPanel>
</ui:UiBinder> 