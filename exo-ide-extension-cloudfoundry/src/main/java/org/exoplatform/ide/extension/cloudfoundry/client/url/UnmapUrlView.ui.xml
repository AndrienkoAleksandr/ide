<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component"
             xmlns:e="urn:import:org.exoplatform.ide.extension.cloudfoundry.client.url">

    <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle'/>
    <ui:with field="locale" type="org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant"></ui:with>

    <ui:style>
        .center {
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .spacingLeft {
            margin-left: 10px;
        }

        .spacing {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </ui:style>

    <f:Border margin="15" borderColor="transparent">
        <f:layer>
            <g:FlowPanel>
                <f:Border height="70%">
                    <f:layer>
                        <g:ScrollPanel>
                            <e:RegisteredUrlsGrid width="100%" ui:field="registeredUrlsGrid"></e:RegisteredUrlsGrid>
                        </g:ScrollPanel>
                    </f:layer>
                </f:Border>

                <g:DockLayoutPanel unit="PX" height="30px" addStyleNames="{style.spacing}">
                    <g:east size="100">
                        <f:ImageButton ui:field="mapUrlButton" width="90px" height="22px" text="{locale.mapButton}"
                                       imageResource="{resource.addButton}"
                                       disabledImageResource="{resource.addButtonDisabled}" buttonId="applicationURLsMapButton"
                                       addStyleNames="{style.spacingLeft}"></f:ImageButton>
                    </g:east>
                    <g:center>
                        <f:TextInput ui:field="mapUrlField" height="22px" width="100%"></f:TextInput>
                    </g:center>
                </g:DockLayoutPanel>
            </g:FlowPanel>
        </f:layer>
        <f:layer bottom="0" height="22px">
            <g:FlowPanel styleName="{style.center}" width="90px">
                <f:ImageButton ui:field="closeButton" width="100" height="22" text="{locale.closeButton}"
                               imageResource="{resource.cancelButton}"
                               disabledImageResource="{resource.cancelButtonDisabled}"
                               buttonId="applicationURLsCloseButton"></f:ImageButton>
            </g:FlowPanel>
        </f:layer>
    </f:Border>
</ui:UiBinder> 