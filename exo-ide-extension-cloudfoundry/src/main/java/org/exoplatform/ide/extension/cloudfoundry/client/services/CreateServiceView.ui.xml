<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryClientBundle' />
   <ui:with field='locale' type='org.exoplatform.ide.extension.cloudfoundry.client.CloudFoundryLocalizationConstant' />
   <ui:style>
      .center {
      	display: block;
      	margin-left: auto;
      	margin-right: auto;
      }
      
      .floatLeft {
      	float: left;
      }
      
      .line {
      	margin-bottom: 8px;
      }
      
      .label {
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      	margin-top: 3px;
      	float: left;
      }
      
      .optional {
      	color: #ACACAC;
      	margin-left: 3px;
      }
      
      .spacing {
      	margin-bottom: 10px;
      }
   </ui:style>
   <f:Border margin="15" borderColor="transparent">
      <f:layer top="0" bottom="35">
         <g:FlowPanel>
            <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{style.line}">
               <g:west size="115">
                  <g:Label text="{locale.createServiceTypeField}" styleName="{style.label}"></g:Label>
               </g:west>
               <g:center>
                  <f:SelectItem ui:field="servicesField" height="22px" width="100%" addStyleNames="{style.spacing}"></f:SelectItem>
               </g:center>
            </g:DockLayoutPanel>

            <g:DockLayoutPanel width="100%" unit="PX" height="22px" styleName="{style.line}">
               <g:west size="115">
                  <g:FlowPanel>
                     <g:Label text="{locale.createServiceNameField}" styleName="{style.label}"></g:Label>
                     <g:Label text="{locale.optional}" addStyleNames="{style.label} {style.optional}"></g:Label>
                  </g:FlowPanel>
               </g:west>
               <g:center>
                  <f:TextInput ui:field="nameField" height="22px" width="100%" addStyleNames="{style.spacing}"></f:TextInput>
               </g:center>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
      <f:layer height="22px" bottom="0">
         <g:FlowPanel width="190px" styleName="{style.center}">
            <f:ImageButton ui:field="createButton" width="90" height="22" text="{locale.createButton}" imageResource="{resource.okButton}"
               disabledImageResource="{resource.okButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
            <g:FlowPanel width="5px" height="22px" styleName="{style.floatLeft}"></g:FlowPanel>
            <f:ImageButton ui:field="cancelButton" width="90" height="22" text="Cancel" imageResource="{resource.cancelButton}"
               disabledImageResource="{resource.cancelButtonDisabled}" addStyleNames="{style.floatLeft}"></f:ImageButton>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 