<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
   xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component">

   <ui:with type="org.exoplatform.ide.extension.jenkins.client.JenkinsMessages" field="messages">
   </ui:with>
   <ui:style>
      .border {
      	padding: 5px;
      }
   </ui:style>
   <c:Border margin="7" borderColor="transparent">
      <g:VerticalPanel spacing="3" horizontalAlignment="center">
         <c:SelectItem  name="ideJenkinsGitRepository" ui:field="gitRepoUrl" title="{messages.buildJavaAppGitRepositoryUrl}"
                  width="100%" height="22px">
            </c:SelectItem>
         <g:HorizontalPanel height="40" spacing="5" horizontalAlignment="center" verticalAlignment="bottom">
            <c:ImageButton ui:field="buildButton" width="90" height="22" text="{messages.buildJavaAppButtonBuild}"></c:ImageButton>
            <c:ImageButton ui:field="cancelButton" width="90" height="22" text="{messages.buildJavaAppButtonCancel}"></c:ImageButton>
         </g:HorizontalPanel>
      </g:VerticalPanel>
   </c:Border>

</ui:UiBinder> 