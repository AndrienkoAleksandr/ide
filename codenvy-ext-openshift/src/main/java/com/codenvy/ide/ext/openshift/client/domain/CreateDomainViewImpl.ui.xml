<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='constant' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .errLabel {
            margin-bottom: 11px;
            text-align: center;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .labelPos {
            top: 5px !important;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="380px" height="80px" addStyleNames="{res.openShiftCSS.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" text="{constant.changeDomainViewCancelButton}" width="50px" size="SMALL"
                          type="DANGER" ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" text="{constant.changeDomainViewChangeButton}"
                          size="SMALL" type="SUCCESS" ui:field="btnChange"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:west size="120.0">
                    <g:Label text="{constant.changeDomainViewField}" addStyleNames="{res.openShiftCSS.loginFont} {style.labelPos}"/>
                </g:west>
                <g:center>
                    <g:TextBox width="250px" ui:field="domain"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:center>
                    <g:Label horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.errLabel} {res.openShiftCSS.loginErrorFont}"
                             ui:field="errorLabel"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>