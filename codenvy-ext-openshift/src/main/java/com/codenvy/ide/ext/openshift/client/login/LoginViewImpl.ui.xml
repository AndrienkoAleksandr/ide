<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui">
    <ui:with field='locale' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='resources' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .errLabel {
            margin-bottom: 11px;
            text-align: center;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="380px" height="120px" addStyleNames="{resources.openShiftCSS.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn}" text="{locale.loginViewButtonCancel}" width="50px" size="SMALL" type="DANGER"
                          ui:field="btnCancel"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" text="{locale.loginViewButtonLogin}" size="SMALL"
                          type="SUCCESS" ui:field="btnLogin"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.loginViewEmailField}" addStyleNames="{resources.openShiftCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox width="270px" ui:field="email"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:west size="100.0">
                    <g:Label text="{locale.loginViewPasswordField}" addStyleNames="{resources.openShiftCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:PasswordTextBox ui:field="password" width="270px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:center>
                    <g:Label horizontalAlignment="ALIGN_CENTER" addStyleNames="{style.errLabel} {resources.openShiftCSS.loginErrorFont}"
                             ui:field="errorLabel"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>