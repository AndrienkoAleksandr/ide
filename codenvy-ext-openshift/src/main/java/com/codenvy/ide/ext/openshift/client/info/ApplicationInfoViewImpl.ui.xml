<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field='constant' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="380px" height="180px" addStyleNames="{res.openShiftCSS.login} {style.emptyBorder}">
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" text="{constant.applicationInfoViewCloseButton}"
                          size="SMALL" type="SUCCESS" ui:field="btnClose"/>
            </g:FlowPanel>
        </g:south>
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:center>
                    <l:CellTable ui:field="properties" />
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>