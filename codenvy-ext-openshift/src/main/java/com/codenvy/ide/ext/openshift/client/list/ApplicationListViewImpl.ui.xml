<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field='constant' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }

        .labelPos {
            top: 5px !important;
        }

        .grid {
            margin: 10px;
        }

        .cartridgesGrid {
            overflow-y: scroll !important;
            overflow-x: hidden !important;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="800px" height="470px" addStyleNames="{res.openShiftCSS.login} {style.emptyBorder}">
        <g:north size="60.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="26.0">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:west size="60.0">
                            <g:Label text="{constant.applicationListViewLoginLabel}" width="60.0" styleName="{style.labelPos}"/>
                        </g:west>
                        <g:center>
                            <g:TextBox height="16px" ui:field="userLoginField" width="600px" readOnly="true"/>
                        </g:center>
                        <g:east size="120.0">
                            <c:Button width="100px" text="{constant.applicationListViewLoginButton}" size="SMALL"
                                      ui:field="btnChangeAccount"/>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:north>
                <g:south size="26.0">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:west size="60.0">
                            <g:Label text="{constant.applicationListViewDomainLabel}" width="60.0" styleName="{style.labelPos}"/>
                        </g:west>
                        <g:center>
                            <g:TextBox height="16px" ui:field="userDomainFiled" width="600px" readOnly="true"/>
                        </g:center>
                        <g:east size="120.0">
                            <c:Button width="100px" text="{constant.applicationListViewDomainButton}" size="SMALL"
                                      ui:field="btnChangeDomain"/>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="200.0">
                    <l:CellTable ui:field="applicationList" width="100%" styleName="{style.grid}"/>
                </g:west>
                <g:center>
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:north size="180.0">
                            <l:CellTable ui:field="applicationProperties" width="100%" styleName="{style.grid}"/>
                        </g:north>
                        <g:center>
                            <g:ScrollPanel styleName="{style.cartridgesGrid}" horizontalScrollPosition="26">
                                <l:CellTable ui:field="applicationCartridges" styleName="{style.grid}"/>
                            </g:ScrollPanel>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" text="{constant.applicationListViewCloseButton}"
                          size="SMALL" ui:field="btnClose"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px"
                          text="{constant.applicationListViewCreateCartridgeButton}" size="SMALL" ui:field="btnCreateCartridge"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>