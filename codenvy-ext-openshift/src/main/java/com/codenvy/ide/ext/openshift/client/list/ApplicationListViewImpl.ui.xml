<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.codenvy.ide.ui"
             xmlns:l="urn:import:com.google.gwt.user.cellview.client">
    <ui:with field='constant' type='com.codenvy.ide.ext.openshift.client.OpenShiftLocalizationConstant'/>
    <ui:with field='res' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .alignBtn {
            float: right;
        }

        .spacing {
            margin-bottom: 10px;
        }

        .emptyBorder {
            margin: 6px;
        }

        .space {
            margin-right: 5px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="380px" height="180px" addStyleNames="{res.openShiftCSS.login} {style.emptyBorder}">
        <g:north size="26.0">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%" styleName="{style.spacing}">
                <g:north size="26.0">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:west size="100.0">
                            <g:Label text="{constant.applicationListViewLoginLabel}" width="100.0"/>
                        </g:west>
                        <g:center>
                            <g:TextBox height="16px" ui:field="userLoginField" width="100%" readOnly="true"/>
                        </g:center>
                        <g:east size="100.0">
                            <c:Button width="50px" text="{constant.applicationListViewLoginButton}" size="SMALL" ui:field="btnChangeAccount"/>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:north>
                <g:south size="26.0">
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:west size="100.0">
                            <g:Label text="{constant.applicationListViewDomainLabel}" width="100.0" />
                        </g:west>
                        <g:center>
                            <g:TextBox height="16px" ui:field="userDomainFiled" width="100%" readOnly="true"/>
                        </g:center>
                        <g:east size="100.0">
                            <c:Button width="50px" text="{constant.applicationListViewDomainButton}" size="SMALL" ui:field="btnChangeDomain"/>
                        </g:east>
                    </g:DockLayoutPanel>
                </g:south>
            </g:DockLayoutPanel>
        </g:north>
        <g:center>
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="150.0">
                    <l:CellTable ui:field="applicationList"/>
                </g:west>
                <g:center>
                    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                        <g:north size="150.0">
                            <l:CellTable ui:field="applicationProperties"/>
                        </g:north>
                        <g:center>
                            <l:CellTable ui:field="applicationCartridges"/>
                        </g:center>
                    </g:DockLayoutPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:center>
        <g:south size="26.0">
            <g:FlowPanel>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px" text="{constant.applicationListViewCloseButton}"
                          size="SMALL" ui:field="btnClose"/>
                <c:Button addStyleNames="{style.alignBtn} {style.space}" width="50px"
                          text="{constant.applicationListViewCreateCartridgeButton}" size="SMALL" ui:field="btnCreateCartridge"/>
            </g:FlowPanel>
        </g:south>
    </g:DockLayoutPanel>
</ui:UiBinder>