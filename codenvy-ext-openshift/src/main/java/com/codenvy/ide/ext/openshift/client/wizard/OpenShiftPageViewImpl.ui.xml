<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field='resources' type='com.codenvy.ide.ext.openshift.client.OpenShiftResources'/>
    <ui:style>
        .spacing {
            margin-bottom: 6px;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames=" {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Type:" height="18px" addStyleNames="{resources.openShiftCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:ListBox ui:field="applicationType" visibleItemCount="1"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{resources.openShiftCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Use scaling:" height="18px" addStyleNames="{resources.openShiftCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:CheckBox ui:field="useAutoScaling" width="99%" height="22px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="30.0">
            <g:DockLayoutPanel unit="PX" width="100%" addStyleNames="{resources.openShiftCSS.login} {style.spacing}">
                <g:west size="120.0">
                    <g:Label text="Application name:" height="18px" addStyleNames="{resources.openShiftCSS.loginFont}"/>
                </g:west>
                <g:center>
                    <g:TextBox ui:field="applicationName" width="97%" height="16px"/>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>