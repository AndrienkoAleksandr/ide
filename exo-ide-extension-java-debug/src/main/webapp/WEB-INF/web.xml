<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
   <context-param>
      <param-name>javax.ws.rs.Application</param-name>
      <param-value>org.exoplatform.ide.extension.java.jdi.server.DebuggerApplication</param-value>
   </context-param>
   <listener>
      <listener-class>org.exoplatform.ide.extension.java.jdi.server.DebugggerServiceBootstrap</listener-class>
   </listener>
   <listener>
      <listener-class>org.everrest.core.servlet.EverrestInitializedListener</listener-class>
   </listener>
   <servlet>
      <servlet-name>EverrestServlet</servlet-name>
      <servlet-class>org.everrest.core.servlet.EverrestServlet</servlet-class>
   </servlet>
   <servlet-mapping>
      <servlet-name>EverrestServlet</servlet-name>
      <url-pattern>/rest/*</url-pattern>
   </servlet-mapping>
</web-app>
