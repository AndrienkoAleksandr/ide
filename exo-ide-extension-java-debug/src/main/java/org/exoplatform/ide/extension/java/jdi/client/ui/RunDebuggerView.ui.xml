<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:f="urn:import:org.exoplatform.gwtframework.ui.client.component">
   <ui:with field='resource' type='org.exoplatform.ide.extension.java.jdi.client.DebuggerClientBundle' />
   <ui:with field="locale" type="org.exoplatform.ide.extension.java.jdi.client.DebuggerLocalizationConstant"></ui:with>

   <ui:style>
      .spacing {
      	margin-top: 15px;
      }
      
      .spacingFields {
      	margin-bottom: 7px;
      	padding: 7px;
      }
      
      .label {
      	margin-bottom: 5px;
      	margin-top: 10px;
      	cursor: default;
      	font-family: Verdana, Bitstream Vera Sans, sans-serif;
      	font-size: 11px;
      	font-style: normal;
      	font-weight: normal;
      }
   </ui:style>

   <f:Border margin="7" borderColor="transparent">
      <f:layer>
         <g:FlowPanel>
            <g:DockLayoutPanel unit="PCT" width="100%" height="60px">
               <g:center>
                  <g:FlowPanel>
                      <g:Label text="{locale.notStartedYet}" styleName="{style.label}"></g:Label>
                     <g:FlowPanel ui:field="webUrl"></g:FlowPanel>
                  </g:FlowPanel>
               </g:center>
            </g:DockLayoutPanel>
            <g:DockLayoutPanel unit="PCT" width="100%" height="40px" styleName="{style.spacing}">
               <g:west size="50">
                  <g:LayoutPanel width="100%" height="100%">
                     <g:layer right="5px" width="90px">
                        <f:ImageButton ui:field="runButton" height="22" text="{locale.debug}" imageResource="{resource.debugApp}"
                           disabledImageResource="{resource.debugAppDisabled}"></f:ImageButton>
                     </g:layer>
                  </g:LayoutPanel>
               </g:west>
               <g:east size="50">
                  <g:LayoutPanel width="100%" height="100%">
                     <g:layer left="5px" width="90px">
                        <f:ImageButton ui:field="cancelButton" width="90" height="22" text="{locale.cancelButton}" imageResource="{resource.cancelButton}"
                           disabledImageResource="{resource.cancelButton}"></f:ImageButton>
                     </g:layer>
                  </g:LayoutPanel>
               </g:east>
            </g:DockLayoutPanel>
         </g:FlowPanel>
      </f:layer>
   </f:Border>
</ui:UiBinder> 