<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:org.exoplatform.gwtframework.ui.client.component"
   xmlns:tp="urn:import:org.exoplatform.gwtframework.ui.client.tablayout">

   <ui:with field='resource' type='org.exoplatform.ide.extension.java.jdi.client.DebuggerClientBundle' />

   <ui:style>
      .borderPanel {
      	border: 1px solid #bbb;
      }
   </ui:style>

   <c:Border margin="1">
      <c:layer>
         <g:LayoutPanel>
            <g:layer top="0" height="28px">
               <c:Toolbar height="28px">
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="addBreakPointButton" width="22px" buttonId="addBreakPointButton" imageResource="{resource.addBreakPointButton}"></c:ImageButton>
                  </c:ToolbarItem>
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="resumeButton" width="22px" buttonId="resumeButton" imageResource="{resource.resumeButton}"></c:ImageButton>
                  </c:ToolbarItem>
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="disconnectButton" width="22px" buttonId="disconnectButton" imageResource="{resource.disconnectButton}"></c:ImageButton>
                  </c:ToolbarItem>
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="removeAllBreakpointsButton" width="22px" buttonId="removeAllBreakpointsButton"
                        imageResource="{resource.removeAllBreakpointsButton}"></c:ImageButton>
                  </c:ToolbarItem>
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="getBreakPointsButton" width="22px" buttonId="getBreakpointsButton" imageResource="{resource.getBreakPointsButton}"></c:ImageButton>
                  </c:ToolbarItem>
                  <c:ToolbarItem rightDocked="false" paddingRight="2">
                     <c:ImageButton ui:field="checkEventsButton" width="22px" buttonId="checkEventsButton" imageResource="{resource.checkEvents}"></c:ImageButton>
                  </c:ToolbarItem>
               </c:Toolbar>
            </g:layer>
            <g:layer top="30" bottom="0">
               <c:Border margin="5" borderColor="transparent">
                  <c:layer>
                     <g:DockLayoutPanel height="100%" width="100%" unit="PCT">
                        <g:east size="50">
                           <tp:TabPanel ui:field="breakPointsPanel"></tp:TabPanel>
                        </g:east>
                        <g:center>
                           <g:FlexTable></g:FlexTable>
                        </g:center>
                        <g:west size="49">
                           <tp:TabPanel ui:field="variabelsPanel"></tp:TabPanel>
                        </g:west>
                     </g:DockLayoutPanel>
                  </c:layer>
               </c:Border>
            </g:layer>
         </g:LayoutPanel>


         <!-- <c:Border margin="5" borderColor="transparent"> <c:layer> <g:HorizontalPanel width="100%" height="100%"> <tp:TabPanel ui:field="variabelsPanel"></tp:TabPanel> 
            <tp:TabPanel ui:field="breakPointsPanel"></tp:TabPanel> </g:HorizontalPanel> </c:layer> </c:Border> </g:layer> </g:LayoutPanel> -->
      </c:layer>
   </c:Border>

