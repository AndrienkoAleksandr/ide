<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.alignBtn {
			float: right;
		}
	</ui:style>
	<g:DockLayoutPanel unit="PX" width="400px" height="400px">
		<g:south size="26">
			<g:FlowPanel ui:field="btnPanel" >
				<g:Button styleName="{style.alignBtn}" text="Open" ui:field="btnOpen"/>
				<g:Button styleName="{style.alignBtn}" text="Cancel" ui:field="btnCancel"/>
			</g:FlowPanel>
		</g:south>
		<g:center>
			<g:ScrollPanel ui:field="mainPanel"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder> 