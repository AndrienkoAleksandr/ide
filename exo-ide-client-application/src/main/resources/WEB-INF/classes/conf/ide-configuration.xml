<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd http://www.exoplaform.org/xml/ns/kernel_1_0.xsd"
   xmlns="http://www.exoplaform.org/xml/ns/kernel_1_0.xsd">

   <component>
      <type>org.chromattic.dataobject.DataObjectService</type>
   </component>

   <component>
      <type>org.exoplatform.ide.IDEServiceApplication</type>
      <init-params>
         <value-param>
            <name>defaultEntryPoint</name>
            <value>dev-monit</value>
         </value-param>
         <value-param>
            <name>discoverable</name>
            <value>true</value>
         </value-param>
      </init-params>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.java.server.JavaServiceApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.groovy.server.GroovyScriptServiceApplication</type>
   </component>

   <component>
      <key>org.exoplatform.ide.extension.netvibes.server.NetvibesServiceApplication</key>
      <type>org.exoplatform.ide.extension.netvibes.server.NetvibesServiceApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.chromattic.server.ChromatticServiceApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.git.server.rest.GitApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.ssh.server.KeyApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.git.server.jgit.ssh.IdeSshSessionFactory</type>
   </component>

   <component>
      <key>org.exoplatform.ide.extension.ssh.server.SshKeyProvider</key>
      <type>org.exoplatform.ide.extension.ssh.server.JcrSshKeyProvider</type>
      <init-params>
         <value-param>
            <name>workspace</name>
            <value>dev-monit</value>
         </value-param>
         <value-param>
            <name>key-store</name>
            <value>/ssh_keys</value>
         </value-param>
      </init-params>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.heroku.server.rest.HerokuApplication</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.heroku.server.JcrHerokuAuthenticator</type>
      <init-params>
         <value-param>
            <name>workspace</name>
            <value>dev-monit</value>
         </value-param>
         <value-param>
            <name>heroku-api-keys</name>
            <value>/key-store</value>
         </value-param>
      </init-params>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.gadget.server.shindig.oauth.RestSecurityTokenGenerator</type>
   </component>

   <component>
      <type>org.exoplatform.ide.extension.groovy.server.GroovyScriptService</type>
      <init-params>
         <object-param>
            <name>observation.config</name>
            <object type="org.exoplatform.services.jcr.ext.script.groovy.ObservationListenerConfiguration">
               <field name="repository">
                  <string>repository</string>
               </field>
               <field name="workspaces">
                  <collection type="java.util.ArrayList">
                     <value>
                        <string>dev-monit</string>
                     </value>
                  </collection>
               </field>
            </object>
         </object-param>
      </init-params>
   </component>

</configuration>
