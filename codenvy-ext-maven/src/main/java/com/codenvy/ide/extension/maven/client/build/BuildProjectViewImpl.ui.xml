<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .alignRight {
            float: right;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="26.0">
            <g:FlowPanel width="100%" height="100%">
                <g:Button text="" ui:field="btnClearOutput" addStyleNames="{style.alignRight}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:ScrollPanel>
                <g:FlowPanel width="100%" height="100%" ui:field="output"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder> 