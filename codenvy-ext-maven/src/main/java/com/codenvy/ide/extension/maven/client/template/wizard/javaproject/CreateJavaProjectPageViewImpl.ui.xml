<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .textBox {
            padding: 0;
        }
    </ui:style>
    <g:LayoutPanel>
        <g:layer top="35px" height="20px" left="5px" width="90px">
            <g:Label text="Source folder:" ui:field="label"/>
        </g:layer>
        <g:layer top="35px" height="20px" left="95px" width="100px">
            <g:TextBox ui:field="sourceFolder" width="94px" height="15px" styleName="{style.textBox}">src</g:TextBox>
        </g:layer>
    </g:LayoutPanel>
</ui:UiBinder>