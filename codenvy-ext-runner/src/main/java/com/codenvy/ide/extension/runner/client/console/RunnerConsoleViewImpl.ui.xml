<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='locale' type='com.codenvy.ide.extension.runner.client.RunnerLocalizationConstant'/>
    <ui:style>
        @eval backgroundColor com.codenvy.ide.api.ui.theme.Style.getPartBackground();
        @eval outputFontColor com.codenvy.ide.api.ui.theme.Style.getOutputFontColor();
        @eval tabsPanelBackground com.codenvy.ide.api.ui.theme.Style.getTabsPanelBackground();
        @eval tabBorderShadow com.codenvy.ide.api.ui.theme.Style.getTabBorderShadow();
        @eval tabBorder com.codenvy.ide.api.ui.theme.Style.getTabBorderColor();
        .tabButton {
            display: inline-block;
            float: left;
            cursor: pointer;
            box-shadow: 1px 1px 0 0 rgba(188, 195, 199, 0.5);
            width: 49px;
            font-size: 11px;
            padding: 2px 5px;
            border-right: 1px solid #232323;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
            text-align: center;
        }

        .inline {
            display: inline-block;
        }

        .console {
            background-color: backgroundColor;
            -moz-user-select: text;
            -webkit-user-select: text;
            user-select: text;
            color: outputFontColor;
            padding-left: 7px;
            padding-bottom: 5px;
            height: 97%;
        }

        .console pre {
            font-family: "Droid Sans Mono", monospace;
            font-size: 11px;
        }

        .terminalFrame {
            width: 100%;
            height: 100%;
            border: 0px;
            margin-top: -1px;
            overflow: hidden;
        }

        .appFrame {
            width: 100%;
            height: 100%;
            border: 0px;
            margin-top: -1px;
            overflow: hidden;
        }

        .runnerNotReadyLabel {
            left: 0;
            line-height: 200px;
            margin-top: -100px;
            position: absolute;
            text-align: center;
            top: 50%;
            width: 100%;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
        }

        .tabPanel {
            height: 17px;
            cursor: default;
            background-color: tabsPanelBackground;
            border-top: 1px solid tabBorderShadow;
            border-bottom: 1px solid tabBorder;
            box-shadow: 0 2px 5px 0 rgba(50, 50, 50, 0.75);
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="18">
            <g:FlowPanel ui:field="topPanel">
                <g:FlowPanel width="11%" addStyleNames="{style.inline} {style.tabPanel}">
                    <g:Label text="Console" ui:field="consoleButton" addStyleNames="{style.tabButton}"/>
                    <g:Label text="Terminal" ui:field="terminalButton" addStyleNames="{style.tabButton}"/>
                    <g:Label text="App" ui:field="appPreviewButton" addStyleNames="{style.tabButton}"/>
                    <g:SimplePanel width="89%" height="18" ui:field="toolbarPanel" addStyleNames="{style.inline}"/>
                </g:FlowPanel>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DeckPanel ui:field="tabPanel">
                <g:ScrollPanel ui:field="scrollPanel" debugId="runnerConsolePart" addStyleNames="{style.console}">
                    <g:FlowPanel width="100%" height="100%" ui:field="consoleArea"/>
                </g:ScrollPanel>
                <g:DeckPanel ui:field="terminalPanel">
                    <g:Label text="{locale.runnerNotReady}" addStyleNames="{style.runnerNotReadyLabel}"/>
                    <g:Frame ui:field="terminalFrame" addStyleNames="{style.terminalFrame}"/>
                </g:DeckPanel>
                <g:DeckPanel ui:field="appPreviewPanel">
                    <g:Label text="{locale.runnerNotReady}" addStyleNames="{style.runnerNotReadyLabel}"/>
                    <g:Frame ui:field="appPreviewFrame" addStyleNames="{style.appFrame}"/>
                </g:DeckPanel>
            </g:DeckPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
