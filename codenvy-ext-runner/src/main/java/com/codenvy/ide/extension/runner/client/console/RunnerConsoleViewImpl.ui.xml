<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @eval editorBackgroundColor com.codenvy.ide.api.ui.theme.Style.getEditorBackgroundColor();
        .console {
            background-color: editorBackgroundColor;
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="27">
            <g:SimplePanel height="27" ui:field="toolbarPanel"/>
        </g:north>
        <g:center>
            <g:ScrollPanel width="100%" height="100%" ui:field="scrollPanel" debugId="runnerConsolePart" addStyleNames="{style.console}">
                <g:FlowPanel width="100%" height="100%" ui:field="consoleArea"/>
            </g:ScrollPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
