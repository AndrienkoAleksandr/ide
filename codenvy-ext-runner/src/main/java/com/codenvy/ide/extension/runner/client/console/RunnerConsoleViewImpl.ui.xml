<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='locale' type='com.codenvy.ide.extension.runner.client.RunnerLocalizationConstant'/>
    <ui:style>
        @eval backgroundColor com.codenvy.ide.api.theme.Style.getPartBackground();
        @eval outputFontColor com.codenvy.ide.api.theme.Style.getOutputFontColor();
        @eval tabsPanelBackground com.codenvy.ide.api.theme.Style.getTabsPanelBackground();
        @eval tabBorderShadow com.codenvy.ide.api.theme.Style.getTabBorderShadow();
        @eval tabBorder com.codenvy.ide.api.theme.Style.getTabBorderColor();
        .tabButtonPanel {
            float: left;
            cursor: pointer;
            width: 55px;
            height: 18px;
            font-size: 11px;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
            text-align: center;
            background-color: tabsPanelBackground;
            /*border-right: 1px solid #232323;*/
            /*border-top: 1px solid tabBorderShadow;*/
            border-bottom: 1px solid tabBorder;
            box-shadow: 0 2px 5px 0 rgba(50, 50, 50, 0.75);
            border-left: 1px solid tabBorder;
            border-right: 1px solid tabBorderShadow;

        }

        .tabButtonLabel {
            padding-top: 2px;
        }

        .inline {
            display: inline-block;
        }

        .flex {
            display: flex;
        }

        .console {
            background-color: backgroundColor;
            -moz-user-select: text;
            -webkit-user-select: text;
            user-select: text;
            color: outputFontColor;
            padding-left: 7px;
            padding-bottom: 5px;
            height: 97%;
        }

        .console pre {
            font-family: "Droid Sans Mono", monospace;
            font-size: 11px;
        }

        .terminalFrame {
            width: 100%;
            height: 100%;
            border: 0px;
            margin-top: -1px;
            overflow: hidden;
        }

        .appFrame {
            width: 100%;
            height: 100%;
            border: 0px;
            margin-top: -1px;
            overflow: hidden;
        }

        .runnerNotReadyLabel {
            left: 0;
            cursor: default;
            line-height: 200px;
            margin-top: -100px;
            position: absolute;
            text-align: center;
            top: 50%;
            text-shadow: 0 1px 0 rgba(0, 0, 0, 1);
        }
    </ui:style>
    <g:DockLayoutPanel unit="PX" width="100%" height="100%">
        <g:north size="18">
            <g:FlowPanel ui:field="topPanel" addStyleNames="{style.flex}">
                <g:FlowPanel addStyleNames="{style.flex}">
                    <g:SimplePanel ui:field="consoleButton" addStyleNames="{style.tabButtonPanel}">
                        <g:Label text="Console" addStyleNames="{style.tabButtonLabel}"/>
                    </g:SimplePanel>
                    <g:SimplePanel ui:field="terminalButton" addStyleNames="{style.tabButtonPanel}">
                        <g:Label text="Terminal" addStyleNames="{style.tabButtonLabel}"/>
                    </g:SimplePanel>
                    <g:SimplePanel ui:field="appPreviewButton" addStyleNames="{style.tabButtonPanel}">
                        <g:Label text="App" addStyleNames="{style.tabButtonLabel}"/>
                    </g:SimplePanel>
                </g:FlowPanel>
                <g:SimplePanel height="18" width="100%" ui:field="toolbarPanel" addStyleNames="{style.inline}"/>
            </g:FlowPanel>
        </g:north>
        <g:center>
            <g:DeckPanel ui:field="tabPanel">
                <g:ScrollPanel ui:field="scrollPanel" debugId="runnerConsolePart" addStyleNames="{style.console}">
                    <g:FlowPanel width="100%" height="100%" ui:field="consoleArea"/>
                </g:ScrollPanel>
                <g:DeckPanel ui:field="terminalPanel">
                    <g:Label text="{locale.runnerNotReady}" addStyleNames="{style.runnerNotReadyLabel}"/>
                    <g:Frame ui:field="terminalFrame" addStyleNames="{style.terminalFrame}"/>
                </g:DeckPanel>
                <g:DeckPanel ui:field="appPreviewPanel">
                    <g:Label text="{locale.runnerNotReady}" addStyleNames="{style.runnerNotReadyLabel}"/>
                    <g:Frame ui:field="appPreviewFrame" addStyleNames="{style.appFrame}"/>
                </g:DeckPanel>
            </g:DeckPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>
