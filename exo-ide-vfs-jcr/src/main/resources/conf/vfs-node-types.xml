<nodeTypes xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:mix="http://www.jcp.org/jcr/mix/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:vfs="http://exoplatform.org/vfs">

   <nodeType name="vfs:projectData" isMixin="false" hasOrderableChildNodes="false" primaryItemName="">
      <supertypes>
         <supertype>nt:base</supertype>
      </supertypes>
      <propertyDefinitions>
         <propertyDefinition name="vfs:mimeType" requiredType="String" autoCreated="true" mandatory="true" onParentVersion="COPY" protected="false" multiple="false">
            <defaultValues>
               <defaultValue>text/vnd.ideproject+directory</defaultValue>
            </defaultValues>
         </propertyDefinition>
         <propertyDefinition name="vfs:projectType" requiredType="String" autoCreated="true" mandatory="true" onParentVersion="COPY" protected="false" multiple="false">
            <defaultValues>
               <defaultValue>default</defaultValue>
            </defaultValues>
         </propertyDefinition>
         <propertyDefinition name="*" requiredType="undefined" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="false">
         </propertyDefinition>
         <propertyDefinition name="*" requiredType="undefined" autoCreated="false" mandatory="false" onParentVersion="COPY" protected="false" multiple="true">
         </propertyDefinition>
      </propertyDefinitions>
   </nodeType>

   <nodeType name="vfs:project" isMixin="true" hasOrderableChildNodes="false" primaryItemName=".project">
      <childNodeDefinitions>
         <childNodeDefinition name=".project" defaultPrimaryType="vfs:projectData" autoCreated="true" mandatory="true" onParentVersion="VERSION" protected="false" sameNameSiblings="false">
            <requiredPrimaryTypes>
               <requiredPrimaryType>vfs:projectData</requiredPrimaryType>
            </requiredPrimaryTypes>
         </childNodeDefinition>
      </childNodeDefinitions>
   </nodeType>

   <nodeType name="vfs:folder" isMixin="true" hasOrderableChildNodes="false" primaryItemName="">
      <propertyDefinitions>
         <propertyDefinition name="vfs:mimeType" requiredType="String" autoCreated="true" mandatory="true" onParentVersion="COPY" protected="false" multiple="false">
            <defaultValues>
               <defaultValue>text/directory</defaultValue>
            </defaultValues>
         </propertyDefinition>
      </propertyDefinitions>
   </nodeType>
</nodeTypes>